<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Playground Tree View -->
    <record id="view_ai_playground_tree" model="ir.ui.view">
        <field name="name">ai.playground.tree</field>
        <field name="model">ai.playground</field>
        <field name="arch" type="xml">
            <tree string="Playground Sessions">
                <field name="name"/>
                <field name="agent_id"/>
                <field name="simulated_channel" widget="badge"
                       decoration-success="simulated_channel == 'whatsapp'"
                       decoration-warning="simulated_channel == 'mercadolibre'"
                       decoration-info="simulated_channel == 'telegram'"/>
                <field name="test_partner_id"/>
                <field name="message_count" string="Messages"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- AI Playground Form View - WhatsApp Style -->
    <record id="view_ai_playground_form" model="ir.ui.view">
        <field name="name">ai.playground.form</field>
        <field name="model">ai.playground</field>
        <field name="arch" type="xml">
            <form string="AI Playground">
                <header>
                    <button name="action_clear_chat" string="Clear Chat" type="object"
                            class="btn-secondary" icon="fa-trash" confirm="Clear all messages?"/>
                    <button name="action_preview_prompt" string="Preview Prompt" type="object"
                            class="btn-secondary" icon="fa-eye"/>
                    <button name="action_view_conversation" string="View Conversation" type="object"
                            class="btn-secondary" icon="fa-comments"
                            attrs="{'invisible': [('conversation_id', '=', False)]}"/>
                </header>
                <sheet>
                    <!-- Configuration Section (Collapsible) -->
                    <group>
                        <group string="Agent Configuration">
                            <field name="name"/>
                            <field name="agent_id"/>
                            <field name="simulated_channel" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group string="Test Context">
                            <field name="test_partner_id"/>
                            <field name="show_debug"/>
                            <field name="conversation_id" readonly="1"
                                   attrs="{'invisible': [('conversation_id', '=', False)]}"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Chat Tab - WhatsApp Style -->
                        <page string="Chat" name="chat">
                            <!-- Hidden fields for dynamic styling -->
                            <field name="simulated_channel" invisible="1"/>
                            <field name="channel_css_class" invisible="1"/>

                            <!-- Chat Main Container with dynamic channel class -->
                            <div class="ai-chat-main-wrapper" t-attf-class="{{channel_css_class}}">
                                <!-- Chat Header -->
                                <div class="ai-chat-header">
                                    <div class="ai-chat-header-avatar">
                                        <i class="fa fa-robot"/>
                                    </div>
                                    <div class="ai-chat-header-info">
                                        <div class="ai-chat-header-name">
                                            <field name="agent_id" readonly="1" nolabel="1"
                                                   class="d-inline" options="{'no_open': True}"/>
                                        </div>
                                        <div class="ai-chat-header-status">
                                            AI Assistant
                                        </div>
                                    </div>
                                    <div class="ai-chat-header-channel">
                                        <field name="simulated_channel" readonly="1" nolabel="1"
                                               widget="badge" class="d-inline"/>
                                    </div>
                                </div>

                                <!-- Chat Messages (HTML Rendered Bubbles) -->
                                <div class="ai-chat-wrapper">
                                    <field name="chat_html" readonly="1" nolabel="1"/>
                                </div>

                                <!-- Message Input Area -->
                                <div class="ai-chat-compose-bar">
                                    <field name="input_message"
                                           class="ai-chat-input"
                                           placeholder="Escribe tu mensaje..."
                                           nolabel="1"/>
                                    <button name="action_send_inline" type="object"
                                            class="btn btn-primary ai-chat-send-btn"
                                            title="Enviar mensaje">
                                        <i class="fa fa-paper-plane"/>
                                    </button>
                                </div>

                                <!-- Quick Messages -->
                                <div class="ai-chat-quick-messages">
                                    <button name="action_quick_greeting" string="Hola"
                                            type="object" class="ai-chat-quick-btn"/>
                                    <button name="action_quick_product" string="Productos"
                                            type="object" class="ai-chat-quick-btn"/>
                                    <button name="action_quick_order" string="Pedido"
                                            type="object" class="ai-chat-quick-btn"/>
                                    <button name="action_quick_help" string="Ayuda"
                                            type="object" class="ai-chat-quick-btn"/>
                                </div>
                            </div>
                        </page>

                        <!-- Debug Tab -->
                        <page string="Debug Info" name="debug"
                              attrs="{'invisible': [('show_debug', '=', False)]}">
                            <group col="4">
                                <field name="last_processing_time" widget="float_time"/>
                                <field name="last_triggered_rules"/>
                            </group>
                            <group string="System Prompt">
                                <field name="last_system_prompt" widget="ace"
                                       options="{'mode': 'text'}" nolabel="1" readonly="1"/>
                            </group>
                            <group string="Tools Called">
                                <field name="last_tools_called" widget="ace"
                                       options="{'mode': 'json'}" nolabel="1" readonly="1"/>
                            </group>
                            <group string="Raw Response">
                                <field name="last_raw_response" widget="ace"
                                       options="{'mode': 'json'}" nolabel="1" readonly="1"/>
                            </group>
                        </page>

                        <!-- Context Tab -->
                        <page string="Additional Context" name="context">
                            <group>
                                <field name="test_context" widget="ace"
                                       options="{'mode': 'json'}"
                                       placeholder='{"custom_var": "value"}' nolabel="1"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Context Variables:</strong> Add custom variables to test different scenarios.
                                <br/>These will be available as {{variable}} in prompts.
                                <br/>Example: {"order_id": "SO001", "urgency": "high"}
                            </div>
                        </page>

                        <!-- Message History (Table) -->
                        <page string="Message History" name="messages_list">
                            <field name="message_ids" mode="tree">
                                <tree create="0" delete="0"
                                      decoration-info="role == 'user'"
                                      decoration-success="role == 'assistant'"
                                      decoration-warning="role == 'system'"
                                      default_order="create_date desc">
                                    <field name="create_date" string="Time"/>
                                    <field name="role" widget="badge"/>
                                    <field name="content"/>
                                    <field name="processing_time" string="Time (s)"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Playground Search View -->
    <record id="view_ai_playground_search" model="ir.ui.view">
        <field name="name">ai.playground.search</field>
        <field name="model">ai.playground</field>
        <field name="arch" type="xml">
            <search string="Playground Sessions">
                <field name="name"/>
                <field name="agent_id"/>
                <field name="test_partner_id"/>
                <group expand="0" string="Group By">
                    <filter string="Agent" name="group_agent" context="{'group_by': 'agent_id'}"/>
                    <filter string="Channel" name="group_channel" context="{'group_by': 'simulated_channel'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AI Playground Action -->
    <record id="action_ai_playground" model="ir.actions.act_window">
        <field name="name">Playground</field>
        <field name="res_model">ai.playground</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ai_playground_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new playground session
            </p>
            <p>
                Test your AI agents with different contexts and simulate various channels.
            </p>
        </field>
    </record>

    <!-- Playground Message Form (for detail view) -->
    <record id="view_ai_playground_message_form" model="ir.ui.view">
        <field name="name">ai.playground.message.form</field>
        <field name="model">ai.playground.message</field>
        <field name="arch" type="xml">
            <form string="Message" create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="role" widget="badge"/>
                            <field name="create_date"/>
                            <field name="processing_time"
                                   attrs="{'invisible': [('role', '!=', 'assistant')]}"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" nolabel="1"/>
                    </group>
                    <group string="Tools Called"
                           attrs="{'invisible': [('tools_called', '=', False)]}">
                        <field name="tools_called" widget="ace"
                               options="{'mode': 'json'}" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
