<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Main Cron for Order Sync Configs -->
        <record id="ir_cron_mercadolibre_order_sync" model="ir.cron">
            <field name="name">MercadoLibre: Sincronizar Ordenes</field>
            <field name="model_id" ref="model_mercadolibre_order_sync_config"/>
            <field name="state">code</field>
            <field name="code">model._cron_sync_all()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
            <field name="doall">False</field>
        </record>

        <!-- Cron for Auto Create Sale Orders -->
        <record id="ir_cron_mercadolibre_create_sale_orders" model="ir.cron">
            <field name="name">MercadoLibre: Crear Ordenes de Venta</field>
            <field name="model_id" ref="model_mercadolibre_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_create_sale_orders()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">False</field>
            <field name="doall">False</field>
        </record>
    </data>
</odoo>
