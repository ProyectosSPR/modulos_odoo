<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Fulfillment (Full) - Mercado Libre manages everything -->
        <record id="logistic_type_fulfillment" model="mercadolibre.logistic.type">
            <field name="name">Full (Mercado Libre)</field>
            <field name="code">fulfillment</field>
            <field name="sequence">10</field>
            <field name="auto_confirm_order">True</field>
            <field name="auto_confirm_picking">True</field>
            <field name="description">Mercado Libre gestiona todo el proceso de almacenamiento y envio. El inventario esta en los depositos de ML. Los pickings se confirman automaticamente ya que ML ya tiene el producto.</field>
        </record>

        <!-- XD Drop Off (Agencia/Places) -->
        <record id="logistic_type_xd_drop_off" model="mercadolibre.logistic.type">
            <field name="name">Agencia / Places</field>
            <field name="code">xd_drop_off</field>
            <field name="sequence">20</field>
            <field name="auto_confirm_order">True</field>
            <field name="auto_confirm_picking">False</field>
            <field name="description">El vendedor lleva el paquete a un punto de despacho (agencia, sucursal Correo). Requiere preparar el picking manualmente.</field>
        </record>

        <!-- Cross Docking (Colectas) -->
        <record id="logistic_type_cross_docking" model="mercadolibre.logistic.type">
            <field name="name">Colectas</field>
            <field name="code">cross_docking</field>
            <field name="sequence">30</field>
            <field name="auto_confirm_order">True</field>
            <field name="auto_confirm_picking">False</field>
            <field name="description">Mercado Libre retira el paquete del domicilio del vendedor. Requiere preparar el picking para la colecta.</field>
        </record>

        <!-- Drop Off -->
        <record id="logistic_type_drop_off" model="mercadolibre.logistic.type">
            <field name="name">Drop Off</field>
            <field name="code">drop_off</field>
            <field name="sequence">40</field>
            <field name="auto_confirm_order">True</field>
            <field name="auto_confirm_picking">False</field>
            <field name="description">El vendedor entrega en un punto de Mercado Libre.</field>
        </record>

        <!-- Self Service (Flex) -->
        <record id="logistic_type_self_service" model="mercadolibre.logistic.type">
            <field name="name">Flex</field>
            <field name="code">self_service</field>
            <field name="sequence">50</field>
            <field name="auto_confirm_order">True</field>
            <field name="auto_confirm_picking">False</field>
            <field name="description">Envio en el dia con flota propia del vendedor o terceros.</field>
        </record>

        <!-- Custom (Envio Propio) -->
        <record id="logistic_type_custom" model="mercadolibre.logistic.type">
            <field name="name">Envio Propio</field>
            <field name="code">custom</field>
            <field name="sequence">60</field>
            <field name="auto_confirm_order">True</field>
            <field name="auto_confirm_picking">False</field>
            <field name="description">El vendedor gestiona el envio de forma independiente. Requiere preparar y confirmar el picking manualmente.</field>
        </record>

        <!-- Not Specified (A Convenir) -->
        <record id="logistic_type_not_specified" model="mercadolibre.logistic.type">
            <field name="name">A Convenir</field>
            <field name="code">not_specified</field>
            <field name="sequence">70</field>
            <field name="auto_confirm_order">False</field>
            <field name="auto_confirm_picking">False</field>
            <field name="description">Forma de envio a acordar con el comprador. No se confirma automaticamente nada.</field>
        </record>
    </data>
</odoo>
