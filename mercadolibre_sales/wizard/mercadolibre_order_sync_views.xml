<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_mercadolibre_order_sync_form" model="ir.ui.view">
        <field name="name">mercadolibre.order.sync.form</field>
        <field name="model">mercadolibre.order.sync</field>
        <field name="arch" type="xml">
            <form string="Sincronizar Ordenes MercadoLibre">
                <field name="state" invisible="1"/>
                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Cuenta y Periodo">
                        <field name="account_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group string="Filtros">
                        <field name="status_filter"/>
                        <field name="limit"/>
                        <field name="sync_discounts"/>
                        <field name="sync_logistic_type"/>
                    </group>
                </group>
                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Búsqueda Específica">
                        <field name="search_specific"/>
                        <field name="specific_order_id"
                               placeholder="Ej: 2000006789012345"
                               attrs="{'invisible': [('search_specific', '=', False)], 'required': [('search_specific', '=', True)]}"/>
                        <div class="alert alert-info" role="alert" colspan="2"
                             attrs="{'invisible': [('search_specific', '=', False)]}">
                            <i class="fa fa-info-circle"/>
                            <strong>Búsqueda inteligente:</strong> Puede ingresar el <strong>Order ID</strong>
                            o el <strong>Pack ID</strong>. El sistema buscará automáticamente por ambos.
                            <br/><small class="text-muted">El Pack ID es el número que ve el cliente en MercadoLibre.</small>
                        </div>
                    </group>
                </group>
                <group string="Resultado" attrs="{'invisible': [('state', '=', 'draft')]}">
                    <group>
                        <field name="sync_count"/>
                        <field name="created_count"/>
                        <field name="updated_count"/>
                        <field name="error_count"/>
                    </group>
                </group>
                <group string="Log de Sincronizacion" attrs="{'invisible': [('state', '=', 'draft')]}">
                    <field name="sync_log" readonly="1" nolabel="1"/>
                </group>
                <footer>
                    <button name="action_sync" type="object" string="Sincronizar"
                            class="btn-primary" icon="fa-refresh"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_view_orders" type="object"
                            string="Ver Ordenes"
                            class="btn-secondary" icon="fa-list"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button name="action_new_sync" type="object"
                            string="Nueva Sincronizacion"
                            class="btn-secondary" icon="fa-plus"
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mercadolibre_order_sync" model="ir.actions.act_window">
        <field name="name">Sincronizar Ordenes</field>
        <field name="res_model">mercadolibre.order.sync</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
