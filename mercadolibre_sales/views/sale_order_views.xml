<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Sale Order Form View -->
    <record id="view_sale_order_form_ml" model="ir.ui.view">
        <field name="name">sale.order.form.ml</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add ML button in button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_ml_orders" type="object"
                        class="oe_stat_button" icon="fa-shopping-bag"
                        attrs="{'invisible': [('is_ml_order', '=', False)]}">
                    <span>Ordenes ML</span>
                </button>
                <button name="action_download_shipping_label" type="object"
                        class="oe_stat_button" icon="fa-download"
                        attrs="{'invisible': ['|', ('is_ml_order', '=', False), ('ml_shipment_id', '=', False)]}">
                    <span>Etiqueta</span>
                </button>
                <button name="action_print_shipping_label" type="object"
                        class="oe_stat_button" icon="fa-print"
                        attrs="{'invisible': ['|', ('is_ml_order', '=', False), ('ml_shipment_id', '=', False)]}">
                    <span>Imprimir</span>
                </button>
            </xpath>

            <!-- Add MercadoLibre tab in notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="MercadoLibre" name="mercadolibre"
                      attrs="{'invisible': [('is_ml_order', '=', False)]}">
                    <group>
                        <group string="Identificadores ML">
                            <field name="ml_order_id"/>
                            <field name="ml_pack_id"/>
                            <field name="ml_shipment_id"/>
                        </group>
                        <group string="Estados ML">
                            <field name="ml_status" widget="badge"
                                   decoration-success="ml_status == 'paid'"
                                   decoration-warning="ml_status in ('payment_in_process', 'partially_paid')"
                                   decoration-danger="ml_status in ('cancelled', 'pending_cancel')"/>
                            <field name="ml_shipping_status" widget="badge"
                                   decoration-success="ml_shipping_status == 'delivered'"
                                   decoration-info="ml_shipping_status in ('shipped', 'ready_to_ship')"
                                   decoration-warning="ml_shipping_status in ('pending', 'handling')"
                                   decoration-danger="ml_shipping_status in ('cancelled', 'not_delivered')"/>
                            <field name="ml_tags"/>
                            <field name="ml_paid_amount"/>
                        </group>
                    </group>
                    <group>
                        <group string="Informacion ML">
                            <field name="ml_account_id"/>
                            <field name="ml_logistic_type"/>
                            <field name="ml_channel"/>
                            <field name="ml_sync_date"/>
                        </group>
                    </group>
                    <field name="is_ml_order" invisible="1"/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Inherit Sale Order Tree View -->
    <record id="view_sale_order_tree_ml" model="ir.ui.view">
        <field name="name">sale.order.tree.ml</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="ml_order_id" string="Order ML" optional="hide"/>
                <field name="ml_pack_id" string="Pack ML" optional="hide"/>
                <field name="ml_status" string="Estado ML" optional="show" widget="badge"
                       decoration-success="ml_status == 'paid'"
                       decoration-warning="ml_status in ('payment_in_process', 'partially_paid')"
                       decoration-danger="ml_status in ('cancelled', 'pending_cancel')"/>
                <field name="ml_shipping_status" string="Envío ML" optional="show" widget="badge"
                       decoration-success="ml_shipping_status == 'delivered'"
                       decoration-info="ml_shipping_status in ('shipped', 'ready_to_ship')"
                       decoration-warning="ml_shipping_status in ('pending', 'handling')"
                       decoration-danger="ml_shipping_status in ('cancelled', 'not_delivered')"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Sale Order Search View -->
    <record id="view_sale_order_search_ml" model="ir.ui.view">
        <field name="name">sale.order.search.ml</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Ordenes MercadoLibre" name="ml_orders" domain="[('is_ml_order', '=', True)]"/>
                <filter string="Full" name="ml_full" domain="[('ml_logistic_type', '=', 'fulfillment')]"/>
                <filter string="Agencia" name="ml_agencia" domain="[('ml_logistic_type', '=', 'xd_drop_off')]"/>
                <separator/>
                <filter string="Pendiente Envío" name="ml_pending" domain="[('ml_shipping_status', 'in', ['pending', 'handling', 'ready_to_ship'])]"/>
                <filter string="Enviados" name="ml_shipped" domain="[('ml_shipping_status', '=', 'shipped')]"/>
                <filter string="Entregados" name="ml_delivered" domain="[('ml_shipping_status', '=', 'delivered')]"/>
                <filter string="No Entregado/Cancelado" name="ml_problem" domain="[('ml_shipping_status', 'in', ['not_delivered', 'cancelled'])]"/>
                <separator/>
                <!-- Campo combinado que busca en order_id y pack_id -->
                <field name="ml_order_id" string="ID ML (Order/Pack)"
                       filter_domain="['|', ('ml_order_id', 'ilike', self), ('ml_pack_id', 'ilike', self)]"/>
                <field name="ml_pack_id"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Estado Envío ML" name="group_ml_shipping" context="{'group_by': 'ml_shipping_status'}"/>
                    <filter string="Estado ML" name="group_ml_status" context="{'group_by': 'ml_status'}"/>
                    <filter string="Tipo Logístico" name="group_logistic" context="{'group_by': 'ml_logistic_type'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Action for ML Orders -->
    <record id="action_sale_order_ml" model="ir.actions.act_window">
        <field name="name">Ordenes de Venta ML</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_ml_order', '=', True)]</field>
        <field name="context">{'search_default_ml_orders': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay ordenes de venta de MercadoLibre
            </p>
            <p>
                Las ordenes de venta se crean automaticamente al sincronizar ordenes de MercadoLibre.
            </p>
        </field>
    </record>

    <!-- Server Action: Mass Cancel Orders -->
    <record id="action_sale_order_mass_cancel" model="ir.actions.server">
        <field name="name">Cancelar Ordenes</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_mass_cancel()
        </field>
    </record>
</odoo>
