<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Account Form View -->
    <record id="view_mercadolibre_account_form_sales" model="ir.ui.view">
        <field name="name">mercadolibre.account.form.sales</field>
        <field name="model">mercadolibre.account</field>
        <field name="inherit_id" ref="mercadolibre_connector.view_mercadolibre_account_form"/>
        <field name="arch" type="xml">
            <!-- Add buttons in button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_orders" type="object"
                        class="oe_stat_button" icon="fa-shopping-cart">
                    <field name="order_count" widget="statinfo" string="Ordenes"/>
                </button>
                <button name="action_view_buyers" type="object"
                        class="oe_stat_button" icon="fa-users">
                    <field name="buyer_count" widget="statinfo" string="Compradores"/>
                </button>
            </xpath>

            <!-- Add Sync Orders button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_sync_orders" type="object"
                        string="Sincronizar Ordenes" class="btn-secondary"
                        icon="fa-refresh"/>
            </xpath>
        </field>
    </record>
</odoo>
