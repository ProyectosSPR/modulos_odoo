<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">

    <t t-name="StockPickingDashboard" owl="1">
        <div class="o_home_menu_background o_stock_picking_list">
            <!-- Card container -->
            <div class="card shadow-lg border-0 mb-3">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fa fa-truck me-2"></i> Estado de pedidos
                    </h5>
                    <span class="badge bg-light text-primary">
                        Total: <t t-esc="state.total || 0" />
                    </span>
                </div>
                <div class="card-body p-0">
                    <!-- Table -->
                    <table class="table table-bordered table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha y Hora del Pedido</th>
                                <th>Número de orden</th>
                                <th>Almacén</th>
                                <th>Estatus del pedido</th>
                                <th>Hora del estatus del pedido</th>
                                <th>Paquetería donde se entrego</th>
                                <th>Numero de guía</th>
                                <th>Estatus de paquetería</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="state.records" t-as="record" t-key="record.id">
                                <tr>
                                    <td class="align-middle">
                                        <span>
                                            <t t-esc="record.x_fecha_pedido"/>
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        <span>
                                            <t t-esc="record.x_numero_orden"/>
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        <t t-esc="record.x_warehouse_id"/>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge" t-att-class="this._getStateClass(record.x_estatus_pedido)">
                                            <t t-esc="record.x_estatus_pedido" />
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        <t t-esc="record.x_hora_status"/>
                                    </td>
                                    <td class="align-middle">
                                        <t t-esc="record.x_paqueteria"/>
                                    </td>
                                    <td class="align-middle">
                                        <t t-if="record.x_numero_guia">
                                            <t t-esc="record.x_numero_guia"/>
                                        </t>
                                        <t t-else="">
                                            <t t-esc=""/>
                                        </t>
                                    </td>
                                    <td class="align-middle">
                                        <t t-esc="record.x_estatus_paqueteria"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="!state.records.length">
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <i class="fa fa-inbox me-2"></i> No hay registros disponibles
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Footer -->
            <div class="text-center mt-3">
                <small class="text-muted">
                    Mostrando <t t-esc="state.records.length" /> de <t t-esc="state.total || 0" /> registros
                </small>
            </div>
        </div>
    </t>

</template>
