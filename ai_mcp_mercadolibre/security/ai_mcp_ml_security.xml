<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Categoria -->
        <record id="module_category_ai_mcp" model="ir.module.category">
            <field name="name">AI MCP MercadoLibre</field>
            <field name="description">Gestion de servidores MCP para MercadoLibre</field>
            <field name="sequence">100</field>
        </record>

        <!-- Grupo: Usuario -->
        <record id="group_ai_mcp_user" model="res.groups">
            <field name="name">Usuario MCP</field>
            <field name="category_id" ref="module_category_ai_mcp"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Puede ver servidores MCP y logs</field>
        </record>

        <!-- Grupo: Manager -->
        <record id="group_ai_mcp_manager" model="res.groups">
            <field name="name">Manager MCP</field>
            <field name="category_id" ref="module_category_ai_mcp"/>
            <field name="implied_ids" eval="[(4, ref('group_ai_mcp_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Puede configurar servidores MCP, endpoints y ver logs</field>
        </record>

    </data>
</odoo>
