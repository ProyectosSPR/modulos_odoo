<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Rules para multi-compañía -->

    <record id="mercadolibre_billing_period_company_rule" model="ir.rule">
        <field name="name">Billing Period: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_billing_period"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="mercadolibre_billing_detail_company_rule" model="ir.rule">
        <field name="name">Billing Detail: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_billing_detail"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="mercadolibre_billing_sync_config_company_rule" model="ir.rule">
        <field name="name">Billing Sync Config: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_billing_sync_config"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
