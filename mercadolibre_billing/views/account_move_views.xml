<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_inherit_billing" model="ir.ui.view">
        <field name="name">account.move.inherit.billing</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_ml_billing_details" type="object" class="oe_stat_button" icon="fa-file-text-o"
                        attrs="{'invisible': [('ml_detail_count', '=', 0)]}">
                    <field name="ml_detail_count" widget="statinfo" string="Detalles ML/MP"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="ml_is_commission_invoice"/>
                <field name="ml_billing_period_id" attrs="{'invisible': [('ml_is_commission_invoice', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
