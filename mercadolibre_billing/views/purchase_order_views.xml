<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_inherit_billing" model="ir.ui.view">
        <field name="name">purchase.order.inherit.billing</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_ml_billing_details" type="object" class="oe_stat_button" icon="fa-file-text-o"
                        attrs="{'invisible': [('ml_detail_count', '=', 0)]}">
                    <field name="ml_detail_count" widget="statinfo" string="Detalles ML/MP"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="ml_billing_period_id" readonly="1"/>
                <field name="ml_total_commission" widget="monetary"/>
            </xpath>
        </field>
    </record>
</odoo>
