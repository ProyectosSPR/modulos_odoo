<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Categoría del módulo -->
        <record id="module_category_billing_portal" model="ir.module.category">
            <field name="name">Portal de Facturación</field>
            <field name="description">Gestión del portal de facturación para clientes</field>
            <field name="sequence">50</field>
        </record>

        <!-- Grupo: Usuario Portal Facturación -->
        <record id="group_billing_portal_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_billing_portal"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Puede ver y procesar solicitudes de facturación</field>
        </record>

        <!-- Grupo: Administrador Portal Facturación -->
        <record id="group_billing_portal_manager" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_billing_portal"/>
            <field name="implied_ids" eval="[(4, ref('group_billing_portal_user'))]"/>
            <field name="comment">Puede configurar el portal de facturación</field>
        </record>

        <!-- Reglas de acceso para billing.request -->
        <record id="billing_request_rule_user" model="ir.rule">
            <field name="name">Billing Request: Usuario puede ver todas</field>
            <field name="model_id" ref="model_billing_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_billing_portal_user'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="billing_request_rule_manager" model="ir.rule">
            <field name="name">Billing Request: Manager puede eliminar</field>
            <field name="model_id" ref="model_billing_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_billing_portal_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <!-- Reglas de acceso para billing.csf.field.config -->
        <record id="csf_field_config_rule_user" model="ir.rule">
            <field name="name">CSF Field Config: Usuario solo lectura</field>
            <field name="model_id" ref="model_billing_csf_field_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_billing_portal_user'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="csf_field_config_rule_manager" model="ir.rule">
            <field name="name">CSF Field Config: Manager acceso completo</field>
            <field name="model_id" ref="model_billing_csf_field_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_billing_portal_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

        <!-- Reglas de acceso para billing.status.config -->
        <record id="billing_status_config_rule_user" model="ir.rule">
            <field name="name">Billing Status Config: Usuario solo lectura</field>
            <field name="model_id" ref="model_billing_status_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_billing_portal_user'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">0</field>
            <field name="perm_create">0</field>
            <field name="perm_unlink">0</field>
        </record>

        <record id="billing_status_config_rule_manager" model="ir.rule">
            <field name="name">Billing Status Config: Manager acceso completo</field>
            <field name="model_id" ref="model_billing_status_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_billing_portal_manager'))]"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>
    </data>
</odoo>
