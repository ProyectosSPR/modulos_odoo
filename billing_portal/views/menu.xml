<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_billing_portal_root"
              name="Portal Facturación"
              web_icon="billing_portal,static/description/icon.png"
              sequence="50"/>

    <!-- Solicitudes -->
    <menuitem id="menu_billing_requests"
              name="Solicitudes"
              parent="menu_billing_portal_root"
              sequence="10"/>

    <menuitem id="menu_billing_request_all"
              name="Todas las Solicitudes"
              parent="menu_billing_requests"
              action="action_billing_request"
              sequence="10"/>

    <menuitem id="menu_billing_request_pending"
              name="Pendientes de Timbrado"
              parent="menu_billing_requests"
              action="action_billing_request_pending_stamp"
              sequence="20"/>

    <!-- Público en General -->
    <menuitem id="menu_billing_public"
              name="Público en General"
              parent="menu_billing_portal_root"
              sequence="20"/>

    <menuitem id="menu_billing_public_invoices"
              name="Facturas Público en General"
              parent="menu_billing_public"
              action="action_billing_public_invoice"
              sequence="10"/>

    <menuitem id="menu_billing_public_create"
              name="Crear Factura"
              parent="menu_billing_public"
              action="action_billing_public_invoice_wizard"
              sequence="20"/>

    <menuitem id="menu_billing_public_reconciliations"
              name="Conciliaciones"
              parent="menu_billing_public"
              action="action_billing_public_reconciliation"
              sequence="30"/>

    <menuitem id="menu_billing_auto_execution"
              name="Historial de Ejecuciones"
              parent="menu_billing_public"
              action="action_billing_auto_execution"
              sequence="40"/>

    <!-- Configuración -->
    <menuitem id="menu_billing_config"
              name="Configuración"
              parent="menu_billing_portal_root"
              sequence="90"
              groups="base.group_system"/>

    <menuitem id="menu_billing_csf_fields"
              name="Campos CSF"
              parent="menu_billing_config"
              action="action_csf_field_config"
              sequence="10"/>

    <menuitem id="menu_billing_status_config"
              name="Estados"
              parent="menu_billing_config"
              action="action_billing_status_config"
              sequence="20"/>

    <menuitem id="menu_billing_excluded_products"
              name="Productos Excluidos"
              parent="menu_billing_config"
              action="action_billing_excluded_product"
              sequence="30"/>

    <menuitem id="menu_billing_reconciliation_fields"
              name="Campos de Conciliación"
              parent="menu_billing_config"
              action="action_billing_reconciliation_field"
              sequence="40"/>

    <menuitem id="menu_billing_public_config"
              name="Público en General"
              parent="menu_billing_config"
              action="action_billing_public_config"
              sequence="50"/>

</odoo>
