<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit sale.order form to add billing request info -->
    <record id="view_sale_order_form_inherit_billing" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.billing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_portal_billable" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit sale.order tree to show ML info -->
    <record id="view_sale_order_tree_inherit_billing" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.billing</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="ml_shipment_status" optional="hide"/>
                <field name="is_portal_billable" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
