<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_billing_public_invoice_tree" model="ir.ui.view">
        <field name="name">billing.public.invoice.tree</field>
        <field name="model">billing.public.invoice</field>
        <field name="arch" type="xml">
            <tree string="Facturas Público en General" decoration-info="state == 'draft'" decoration-success="state == 'reconciled'" decoration-warning="state == 'partial'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="invoice_name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="order_count"/>
                <field name="total_amount" sum="Total"/>
                <field name="total_reconciled" sum="Conciliado"/>
                <field name="total_pending" sum="Pendiente"/>
                <field name="reconciliation_percent" widget="progressbar"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state in ('reconciled', 'invoiced')"
                       decoration-warning="state == 'partial'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_billing_public_invoice_form" model="ir.ui.view">
        <field name="name">billing.public.invoice.form</field>
        <field name="model">billing.public.invoice</field>
        <field name="arch" type="xml">
            <form string="Factura Público en General">
                <header>
                    <button name="action_open_reconciliation_wizard"
                            string="Conciliar Pagos"
                            type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('state', 'in', ['draft', 'cancelled', 'reconciled'])]}"/>
                    <button name="action_view_invoice"
                            string="Ver Factura"
                            type="object"
                            class="btn-secondary"
                            attrs="{'invisible': [('invoice_id', '=', False)]}"/>
                    <button name="action_cancel"
                            string="Cancelar"
                            type="object"
                            class="btn-secondary"
                            attrs="{'invisible': [('state', 'in', ['cancelled', 'reconciled'])]}"
                            confirm="¿Está seguro de cancelar esta factura pública?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,invoiced,partial,reconciled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_orders"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart">
                            <field name="order_count" string="Órdenes" widget="statinfo"/>
                        </button>
                        <button name="action_view_reconciliations"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-circle">
                            <field name="reconciliation_count" string="Conciliaciones" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Período">
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Factura">
                            <field name="invoice_id" readonly="1"/>
                            <field name="invoice_name" readonly="1"/>
                            <field name="invoice_state" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Montos">
                            <field name="total_amount"/>
                            <field name="total_reconciled"/>
                            <field name="total_pending"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Progreso de Conciliación">
                            <field name="reconciliation_percent" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Órdenes Incluidas" name="orders">
                            <field name="order_ids" readonly="1">
                                <tree string="Órdenes">
                                    <field name="name"/>
                                    <field name="client_order_ref"/>
                                    <field name="date_order"/>
                                    <field name="partner_id"/>
                                    <field name="amount_total" sum="Total"/>
                                    <field name="ml_order_id"/>
                                    <field name="ml_pack_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Conciliaciones" name="reconciliations">
                            <field name="reconciliation_ids" readonly="1">
                                <tree string="Conciliaciones">
                                    <field name="order_name"/>
                                    <field name="order_amount"/>
                                    <field name="payment_name"/>
                                    <field name="payment_amount"/>
                                    <field name="matched_field"/>
                                    <field name="matched_value"/>
                                    <field name="amount"/>
                                    <field name="difference"/>
                                    <field name="reconcile_date"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Notas adicionales..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_billing_public_invoice_search" model="ir.ui.view">
        <field name="name">billing.public.invoice.search</field>
        <field name="model">billing.public.invoice</field>
        <field name="arch" type="xml">
            <search string="Buscar Facturas Público en General">
                <field name="name"/>
                <field name="invoice_name"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Facturado" name="invoiced" domain="[('state', '=', 'invoiced')]"/>
                <filter string="Parcialmente Conciliado" name="partial" domain="[('state', '=', 'partial')]"/>
                <filter string="Conciliado" name="reconciled" domain="[('state', '=', 'reconciled')]"/>
                <filter string="Cancelado" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Pendientes de Conciliación" name="pending"
                        domain="[('state', 'in', ['invoiced', 'partial'])]"/>
                <separator/>
                <filter string="Este Mes" name="this_month"
                        domain="[('date_from', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Mes Anterior" name="last_month"
                        domain="[('date_from', '&gt;=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')), ('date_from', '&lt;', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsable" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'date_from:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_billing_public_invoice_kanban" model="ir.ui.view">
        <field name="name">billing.public.invoice.kanban</field>
        <field name="model">billing.public.invoice</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="invoice_name"/>
                <field name="state"/>
                <field name="total_amount"/>
                <field name="reconciliation_percent"/>
                <field name="order_count"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="badge" t-att-class="{
                                        'text-bg-info': record.state.raw_value == 'draft',
                                        'text-bg-primary': record.state.raw_value == 'invoiced',
                                        'text-bg-warning': record.state.raw_value == 'partial',
                                        'text-bg-success': record.state.raw_value == 'reconciled',
                                        'text-bg-secondary': record.state.raw_value == 'cancelled',
                                    }">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.invoice_name.raw_value">
                                        <span class="text-muted">Factura:</span>
                                        <field name="invoice_name"/>
                                    </div>
                                    <div>
                                        <span class="text-muted">Órdenes:</span>
                                        <field name="order_count"/>
                                    </div>
                                    <div>
                                        <strong>
                                            <field name="total_amount" widget="monetary"/>
                                        </strong>
                                    </div>
                                    <div class="mt-2">
                                        <field name="reconciliation_percent" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_billing_public_invoice" model="ir.actions.act_window">
        <field name="name">Facturas Público en General</field>
        <field name="res_model">billing.public.invoice</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay facturas a Público en General
            </p>
            <p>
                Use el wizard "Crear Factura Público en General" para generar facturas consolidadas
                de las órdenes de un período que no tengan factura.
            </p>
        </field>
    </record>

    <!-- Sequence -->
    <record id="seq_billing_public_invoice" model="ir.sequence">
        <field name="name">Factura Público en General</field>
        <field name="code">billing.public.invoice</field>
        <field name="prefix">FPG-</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

</odoo>
