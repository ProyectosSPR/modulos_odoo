<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_billing_auto_execution_tree" model="ir.ui.view">
        <field name="name">billing.auto.execution.tree</field>
        <field name="model">billing.auto.execution</field>
        <field name="arch" type="xml">
            <tree string="Historial de Ejecuciones" default_order="execution_date desc">
                <field name="execution_date"/>
                <field name="execution_type"/>
                <field name="config_id"/>
                <field name="manual"/>
                <field name="state" decoration-success="state == 'done'" decoration-danger="state == 'error'" decoration-info="state == 'running'" widget="badge"/>
                <field name="orders_found"/>
                <field name="orders_processed"/>
                <field name="duration" widget="float_time"/>
                <field name="result_message"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_billing_auto_execution_form" model="ir.ui.view">
        <field name="name">billing.auto.execution.form</field>
        <field name="model">billing.auto.execution</field>
        <field name="arch" type="xml">
            <form string="Ejecución Automática" create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="running,done,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información">
                            <field name="execution_date"/>
                            <field name="execution_type"/>
                            <field name="manual"/>
                            <field name="user_id"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                        <group string="Configuración">
                            <field name="config_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Resultados">
                        <group>
                            <field name="orders_found"/>
                            <field name="orders_processed"/>
                        </group>
                        <group>
                            <field name="invoice_id"/>
                            <field name="public_invoice_id"/>
                        </group>
                    </group>
                    <group string="Mensaje">
                        <field name="result_message" nolabel="1" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_billing_auto_execution_search" model="ir.ui.view">
        <field name="name">billing.auto.execution.search</field>
        <field name="model">billing.auto.execution</field>
        <field name="arch" type="xml">
            <search string="Buscar Ejecuciones">
                <field name="config_id"/>
                <field name="result_message"/>
                <filter string="Facturación" name="invoice" domain="[('execution_type', '=', 'invoice')]"/>
                <filter string="Conciliación" name="reconciliation" domain="[('execution_type', '=', 'reconciliation')]"/>
                <separator/>
                <filter string="Completado" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Manual" name="manual" domain="[('manual', '=', True)]"/>
                <filter string="Automático" name="automatic" domain="[('manual', '=', False)]"/>
                <separator/>
                <filter string="Hoy" name="today" domain="[('execution_date', '&gt;=', (context_today()).strftime('%Y-%m-%d'))]"/>
                <filter string="Esta Semana" name="week" domain="[('execution_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Tipo" name="group_type" context="{'group_by': 'execution_type'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Configuración" name="group_config" context="{'group_by': 'config_id'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'execution_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_billing_auto_execution" model="ir.actions.act_window">
        <field name="name">Historial de Ejecuciones</field>
        <field name="res_model">billing.auto.execution</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Sin ejecuciones automáticas
            </p>
            <p>
                El historial de ejecuciones automáticas aparecerá aquí cuando
                se ejecute la facturación o conciliación automática.
            </p>
        </field>
    </record>

</odoo>
