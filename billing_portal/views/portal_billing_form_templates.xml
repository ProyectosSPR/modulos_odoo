<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formulario de facturaci√≥n -->
    <template id="portal_billing_form" name="Portal Billing Form">
        <t t-call="billing_portal.portal_layout">
            <div class="row">
                <!-- Columna principal - Formulario -->
                <div class="col-lg-8">
                    <form id="billingForm" class="billing-form" method="post" action="/portal/billing/request">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="order_ids" t-att-value="order_ids"/>

                        <!-- Paso 1: CSF -->
                        <div class="card mb-4" id="stepCSF">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <span class="badge bg-white text-primary me-2">1</span>
                                    Constancia de Situaci√≥n Fiscal
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted">
                                    Suba su Constancia de Situaci√≥n Fiscal (CSF) del SAT.
                                    Los datos fiscales se extraer√°n autom√°ticamente.
                                </p>

                                <!-- Dropzone para CSF (IDs compatibles con csf_uploader.js) -->
                                <div id="csf-dropzone" class="csf-dropzone border rounded p-5 text-center mb-3" style="cursor: pointer;">
                                    <i class="fa fa-cloud-upload fa-4x text-muted mb-3"></i>
                                    <h5>Arrastra tu CSF aqu√≠</h5>
                                    <p class="text-muted">o haz clic para seleccionar</p>
                                    <input type="file"
                                           id="csf-file-input"
                                           accept=".pdf"
                                           class="d-none"/>
                                </div>

                                <!-- Preview del archivo (oculto inicialmente) -->
                                <div id="csf-preview" style="display: none;"></div>

                                <!-- Datos extra√≠dos (oculto inicialmente) -->
                                <div id="csf-data-container" style="display: none;"></div>

                                <!-- Campos ocultos para el formulario -->
                                <input type="hidden" id="input-rfc" name="rfc"/>
                                <input type="hidden" id="input-razon-social" name="razon_social"/>
                                <input type="hidden" id="input-codigo-postal" name="codigo_postal"/>
                                <input type="hidden" id="input-csf-data" name="csf_data"/>
                                <input type="hidden" id="input-csf-pdf" name="csf_pdf"/>
                            </div>
                        </div>

                        <!-- Paso 2: Datos de contacto y facturaci√≥n -->
                        <div class="card mb-4" id="stepDatos">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <span class="badge bg-secondary me-2">2</span>
                                    Datos de Facturaci√≥n
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">
                                            Email para env√≠o de factura <span class="text-danger">*</span>
                                        </label>
                                        <input type="email"
                                               class="form-control"
                                               id="email"
                                               name="email"
                                               t-att-value="saved_data.get('email', '') if saved_data else ''"
                                               required="required"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="phone" class="form-label">Tel√©fono</label>
                                        <input type="tel"
                                               class="form-control"
                                               id="phone"
                                               name="phone"
                                               t-att-value="saved_data.get('telefono', '') if saved_data else ''"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="uso_cfdi_id" class="form-label">
                                            Uso de CFDI <span class="text-danger">*</span>
                                        </label>
                                        <select class="form-select" id="uso_cfdi_id" name="uso_cfdi_id" required="required">
                                            <option value="">Seleccione...</option>
                                            <t t-foreach="usos_cfdi" t-as="uso">
                                                <option t-att-value="uso.id"
                                                        t-att-selected="uso.code == 'G03'">
                                                    <t t-esc="uso.display_name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="forma_pago_id" class="form-label">
                                            Forma de Pago <span class="text-danger">*</span>
                                        </label>
                                        <select class="form-select" id="forma_pago_id" name="forma_pago_id" required="required">
                                            <option value="">Seleccione...</option>
                                            <t t-foreach="formas_pago" t-as="forma">
                                                <option t-att-value="forma.id"
                                                        t-att-selected="forma.code == '03'">
                                                    <t t-esc="forma.display_name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Bot√≥n de env√≠o -->
                        <div class="d-grid gap-2">
                            <button type="submit"
                                    class="btn btn-success btn-lg"
                                    id="btnSubmit"
                                    disabled="disabled">
                                <i class="fa fa-paper-plane me-2"></i>
                                Solicitar Factura
                            </button>
                            <a href="/portal/billing/orders" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left me-1"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Columna lateral - Resumen -->
                <div class="col-lg-4">
                    <div class="card sticky-top" style="top: 20px;">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fa fa-shopping-cart me-2"></i>
                                Resumen
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6 class="text-muted mb-3">
                                √ìrdenes a facturar (<t t-esc="len(orders)"/>)
                            </h6>
                            <ul class="list-unstyled">
                                <t t-foreach="orders" t-as="order">
                                    <li class="mb-2 pb-2 border-bottom">
                                        <div class="d-flex justify-content-between">
                                            <span><t t-esc="order.name"/></span>
                                            <strong>
                                                <t t-esc="order.amount_total"
                                                   t-options="{'widget': 'monetary', 'display_currency': order.currency_id}"/>
                                            </strong>
                                        </div>
                                        <small class="text-muted">
                                            <t t-esc="order.client_order_ref or ''"/>
                                        </small>
                                    </li>
                                </t>
                            </ul>
                            <hr/>
                            <div class="d-flex justify-content-between">
                                <strong>Total:</strong>
                                <strong class="text-primary fs-5">
                                    <t t-esc="sum(orders.mapped('amount_total'))"
                                       t-options="{'widget': 'monetary', 'display_currency': orders[0].currency_id if orders else None}"/>
                                </strong>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <small class="text-muted">
                                <i class="fa fa-info-circle me-1"></i>
                                La factura ser√° enviada al email proporcionado una vez que sea timbrada.
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Script para manejar el formulario -->
            <script type="text/javascript">
            //<![CDATA[
            document.addEventListener('DOMContentLoaded', function() {
                console.log('üìù Billing Form JS loaded');

                // Inicializar CSFUploader si existe
                if (typeof initCSFUploader === 'function') {
                    initCSFUploader();
                } else if (typeof CSFUploader !== 'undefined') {
                    CSFUploader.init();
                }

                var btnSubmit = document.getElementById('btnSubmit');
                var stepDatos = document.getElementById('stepDatos');

                // Escuchar cuando se valide el CSF
                document.addEventListener('csf:validated', function(e) {
                    console.log('‚úÖ CSF validado:', e.detail);

                    // Habilitar bot√≥n de env√≠o
                    if (btnSubmit) {
                        btnSubmit.disabled = false;
                    }

                    // Resaltar paso 2
                    if (stepDatos) {
                        stepDatos.querySelector('.card-header').classList.add('bg-primary', 'text-white');
                        stepDatos.querySelector('.badge').classList.remove('bg-secondary');
                        stepDatos.querySelector('.badge').classList.add('bg-white', 'text-primary');
                    }
                });

                // Escuchar errores de CSF
                document.addEventListener('csf:error', function(e) {
                    console.log('‚ùå Error CSF:', e.detail);

                    // Deshabilitar bot√≥n
                    if (btnSubmit) {
                        btnSubmit.disabled = true;
                    }
                });

                // Escuchar cuando se remueva el CSF
                document.addEventListener('csf:removed', function() {
                    console.log('üóëÔ∏è CSF removido');

                    // Deshabilitar bot√≥n
                    if (btnSubmit) {
                        btnSubmit.disabled = true;
                    }

                    // Quitar resaltado paso 2
                    if (stepDatos) {
                        stepDatos.querySelector('.card-header').classList.remove('bg-primary', 'text-white');
                        stepDatos.querySelector('.badge').classList.add('bg-secondary');
                        stepDatos.querySelector('.badge').classList.remove('bg-white', 'text-primary');
                    }
                });

                // Validaci√≥n del formulario antes de enviar
                var form = document.getElementById('billingForm');
                if (form) {
                    form.addEventListener('submit', function(e) {
                        var rfc = document.getElementById('input-rfc');
                        var email = document.getElementById('email');

                        if (!rfc || !rfc.value) {
                            e.preventDefault();
                            BillingPortal.showToast('Debe subir su CSF primero', 'error');
                            return false;
                        }

                        if (!email || !email.value) {
                            e.preventDefault();
                            BillingPortal.showToast('El email es requerido', 'error');
                            return false;
                        }

                        // Mostrar loading
                        BillingPortal.showLoading('Procesando solicitud...');
                    });
                }
            });
            //]]>
            </script>
        </t>
    </template>
</odoo>
