<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Estados del proceso de facturación -->

        <record id="status_draft" model="billing.status.config">
            <field name="name">Borrador</field>
            <field name="code">draft</field>
            <field name="description">Solicitud creada, pendiente de validación</field>
            <field name="sequence">10</field>
            <field name="progress_min">0</field>
            <field name="progress_max">10</field>
            <field name="color">#6c757d</field>
            <field name="icon">fa-hourglass-start</field>
            <field name="message_template">Su solicitud ha sido recibida y está en cola para procesamiento.</field>
        </record>

        <record id="status_validating" model="billing.status.config">
            <field name="name">Validando CSF</field>
            <field name="code">validating</field>
            <field name="description">Extrayendo y validando datos del CSF</field>
            <field name="sequence">20</field>
            <field name="progress_min">10</field>
            <field name="progress_max">30</field>
            <field name="color">#17a2b8</field>
            <field name="icon">fa-spinner</field>
            <field name="message_template">Estamos validando su Constancia de Situación Fiscal...</field>
        </record>

        <record id="status_csf_validated" model="billing.status.config">
            <field name="name">CSF Validado</field>
            <field name="code">csf_validated</field>
            <field name="description">Los datos fiscales han sido extraídos correctamente</field>
            <field name="sequence">30</field>
            <field name="progress_min">30</field>
            <field name="progress_max">40</field>
            <field name="color">#28a745</field>
            <field name="icon">fa-check</field>
            <field name="message_template">Su CSF ha sido validado exitosamente. RFC: {rfc}</field>
        </record>

        <record id="status_creating_partner" model="billing.status.config">
            <field name="name">Creando Cliente</field>
            <field name="code">creating_partner</field>
            <field name="description">Registrando o actualizando datos del cliente</field>
            <field name="sequence">40</field>
            <field name="progress_min">40</field>
            <field name="progress_max">50</field>
            <field name="color">#17a2b8</field>
            <field name="icon">fa-user-plus</field>
            <field name="message_template">Registrando sus datos fiscales en el sistema...</field>
        </record>

        <record id="status_creating_invoice" model="billing.status.config">
            <field name="name">Creando Factura</field>
            <field name="code">creating_invoice</field>
            <field name="description">Generando el documento de factura</field>
            <field name="sequence">50</field>
            <field name="progress_min">50</field>
            <field name="progress_max">70</field>
            <field name="color">#17a2b8</field>
            <field name="icon">fa-file-text-o</field>
            <field name="message_template">Generando su factura electrónica...</field>
        </record>

        <record id="status_pending_stamp" model="billing.status.config">
            <field name="name">Pendiente de Timbrado</field>
            <field name="code">pending_stamp</field>
            <field name="description">Factura creada, esperando timbrado por contabilidad</field>
            <field name="sequence">60</field>
            <field name="progress_min">70</field>
            <field name="progress_max">90</field>
            <field name="color">#ffc107</field>
            <field name="icon">fa-clock-o</field>
            <field name="message_template">Su factura {invoice_name} está lista y será timbrada por nuestro equipo de contabilidad. Recibirá un email cuando esté lista.</field>
        </record>

        <record id="status_done" model="billing.status.config">
            <field name="name">Completado</field>
            <field name="code">done</field>
            <field name="description">Factura timbrada y enviada al cliente</field>
            <field name="sequence">70</field>
            <field name="progress_min">100</field>
            <field name="progress_max">100</field>
            <field name="color">#28a745</field>
            <field name="icon">fa-check-circle</field>
            <field name="is_final">True</field>
            <field name="message_template">Su factura {invoice_name} ha sido timbrada y enviada a {email}. ¡Gracias por su preferencia!</field>
        </record>

        <record id="status_error" model="billing.status.config">
            <field name="name">Error</field>
            <field name="code">error</field>
            <field name="description">Ocurrió un error en el proceso</field>
            <field name="sequence">80</field>
            <field name="progress_min">0</field>
            <field name="progress_max">100</field>
            <field name="color">#dc3545</field>
            <field name="icon">fa-exclamation-circle</field>
            <field name="is_error">True</field>
            <field name="is_final">True</field>
            <field name="message_template">Ha ocurrido un error: {error_message}. Por favor intente nuevamente o contacte a soporte.</field>
        </record>

        <record id="status_cancelled" model="billing.status.config">
            <field name="name">Cancelado</field>
            <field name="code">cancelled</field>
            <field name="description">Solicitud cancelada</field>
            <field name="sequence">90</field>
            <field name="progress_min">0</field>
            <field name="progress_max">100</field>
            <field name="color">#6c757d</field>
            <field name="icon">fa-ban</field>
            <field name="is_final">True</field>
            <field name="message_template">Esta solicitud ha sido cancelada.</field>
        </record>
    </data>
</odoo>
