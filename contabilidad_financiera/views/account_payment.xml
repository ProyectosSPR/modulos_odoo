<?xml version="1.0" encoding="utf-8"?>
<odoo>
          <record id="view_payment_flujo_form" model="ir.ui.view">
            <field name="name">account.payment.flujo.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                   <xpath expr="//notebook/page[@name='info_cdfi']" position="after">
                       <page name="info_flujo" string="Flujo de efectivo">
                            <group cols="4" string="Flujo de efectivo">
                                <group  string="Flujo de efectivo">
                                    <field name="tipo_flujo"/>
                                </group>
                            </group>
                       </page>
                   </xpath>
            </field>
        </record>
</odoo>

