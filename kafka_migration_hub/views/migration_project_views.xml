<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Kanban de Proyectos -->
    <record id="migration_project_view_kanban" model="ir.ui.view">
        <field name="name">migration.project.kanban</field>
        <field name="model">migration.project</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="progress_percentage"/>
                <field name="total_source_tables"/>
                <field name="total_mapped_tables"/>
                <field name="total_migrated_records"/>
                <progressbar field="state"
                    colors='{"draft": "default", "analyzing": "info", "mapping": "warning", "ready": "success", "running": "info", "completed": "success", "error": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="partner_id"/>
                                        </small>
                                    </div>
                                    <field name="state" widget="label_selection"
                                           options="{'classes': {'draft': 'default', 'analyzing': 'info', 'mapping': 'warning', 'ready': 'primary', 'running': 'info', 'completed': 'success', 'error': 'danger'}}"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row mb-2">
                                        <div class="col-6 text-center">
                                            <strong class="text-primary"><field name="total_mapped_tables"/></strong>
                                            <span class="text-muted">/</span>
                                            <field name="total_source_tables"/>
                                            <div class="text-muted small">Tablas</div>
                                        </div>
                                        <div class="col-6 text-center">
                                            <strong class="text-success"><field name="total_migrated_records"/></strong>
                                            <div class="text-muted small">Registros</div>
                                        </div>
                                    </div>
                                    <field name="progress_percentage" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Tree de Proyectos -->
    <record id="migration_project_view_tree" model="ir.ui.view">
        <field name="name">migration.project.tree</field>
        <field name="model">migration.project</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'completed'"
                  decoration-info="state == 'running'"
                  decoration-warning="state == 'paused'"
                  decoration-danger="state in ('error', 'cancelled')">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="source_type" widget="badge"/>
                <field name="total_source_tables"/>
                <field name="total_mapped_tables"/>
                <field name="progress_percentage" widget="progressbar"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-info="state == 'running'"
                       decoration-warning="state == 'paused'"
                       decoration-danger="state in ('error', 'cancelled')"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Proyectos - Mejorada -->
    <record id="migration_project_view_form" model="ir.ui.view">
        <field name="name">migration.project.form</field>
        <field name="model">migration.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test_connection" type="object" string="1. Probar Conexion"
                            class="btn-primary" icon="fa-plug"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_analyze_schema" type="object" string="2. Analizar Esquema"
                            class="btn-primary" icon="fa-search"
                            attrs="{'invisible': [('state', '!=', 'connecting')]}"/>
                    <button name="action_open_visual_mapper" type="object" string="3. Mapear Campos"
                            class="btn-info" icon="fa-project-diagram"
                            attrs="{'invisible': [('state', 'not in', ['analyzing', 'mapping', 'ready'])]}"/>
                    <button name="action_request_ai_suggestions" type="object" string="Sugerencias IA"
                            class="btn-secondary" icon="fa-magic"
                            attrs="{'invisible': [('state', 'not in', ['analyzing', 'mapping'])]}"/>
                    <button name="action_start_migration" type="object" string="4. Iniciar Migracion"
                            class="btn-success" icon="fa-play"
                            attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                    <button name="action_pause_migration" type="object" string="Pausar"
                            class="btn-warning" icon="fa-pause"
                            attrs="{'invisible': [('state', '!=', 'running')]}"/>
                    <button name="action_resume_migration" type="object" string="Reanudar"
                            class="btn-success" icon="fa-play"
                            attrs="{'invisible': [('state', '!=', 'paused')]}"/>
                    <button name="action_cancel_migration" type="object" string="Cancelar"
                            class="btn-danger" icon="fa-stop"
                            attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}"
                            confirm="Esta seguro de cancelar la migracion?"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,analyzing,mapping,ready,running,completed"/>
                </header>
                <sheet>
                    <!-- Button Box -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-table"
                                name="action_view_table_mappings" type="object">
                            <field name="total_mapped_tables" widget="statinfo" string="Mapeadas"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-check"
                                attrs="{'invisible': [('state', 'not in', ['running', 'paused', 'completed'])]}">
                            <field name="total_migrated_records" widget="statinfo" string="Migrados"/>
                        </button>
                        <button name="%(migration_error_action)d" type="action"
                                class="oe_stat_button" icon="fa-exclamation-triangle">
                            <field name="total_error_records" widget="statinfo" string="Errores"/>
                        </button>
                        <button name="%(migration_log_action)d" type="action"
                                class="oe_stat_button" icon="fa-list-alt">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Logs</span>
                            </div>
                        </button>
                    </div>

                    <!-- Ribbon for state -->
                    <widget name="web_ribbon" title="En Progreso" bg_color="bg-info"
                            attrs="{'invisible': [('state', '!=', 'running')]}"/>
                    <widget name="web_ribbon" title="Completado" bg_color="bg-success"
                            attrs="{'invisible': [('state', '!=', 'completed')]}"/>
                    <widget name="web_ribbon" title="Error" bg_color="bg-danger"
                            attrs="{'invisible': [('state', '!=', 'error')]}"/>

                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Proyecto"/>
                        </h1>
                    </div>

                    <!-- Progress Panel -->
                    <div class="alert alert-info" role="alert"
                         attrs="{'invisible': [('state', 'not in', ['running', 'paused'])]}">
                        <div class="row">
                            <div class="col-md-8">
                                <h5>Progreso de Migracion</h5>
                                <field name="progress_percentage" widget="progressbar"/>
                            </div>
                            <div class="col-md-4 text-right">
                                <strong><field name="total_migrated_records" readonly="1"/></strong>
                                de <field name="total_source_records" readonly="1"/> registros
                            </div>
                        </div>
                    </div>

                    <group>
                        <group string="Origen de Datos">
                            <field name="source_connection_id" options="{'no_create': True}"/>
                            <field name="source_type"/>
                            <field name="total_source_tables" readonly="1"/>
                            <field name="total_source_records" readonly="1"/>
                        </group>
                        <group string="Responsables">
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Tablas y Mapeos" name="table_mappings">
                            <div class="mb-3">
                                <button name="action_open_visual_mapper" type="object"
                                        string="Abrir Designer Visual" class="btn-primary"
                                        icon="fa-project-diagram"/>
                                <button name="action_auto_map_all" type="object"
                                        string="Auto-Mapear Todo" class="btn-secondary ml-2"
                                        icon="fa-magic"/>
                            </div>
                            <field name="table_mapping_ids" nolabel="1">
                                <tree editable="bottom"
                                      decoration-success="state == 'migrated'"
                                      decoration-info="state == 'mapped'"
                                      decoration-muted="state == 'ignored'">
                                    <field name="source_table"/>
                                    <field name="source_schema"/>
                                    <field name="row_count"/>
                                    <field name="topic_id" options="{'no_create': True}"/>
                                    <field name="target_model_id" options="{'no_create': True}"/>
                                    <field name="ai_confidence" widget="progressbar"/>
                                    <field name="migrated_records"/>
                                    <field name="progress_percentage" widget="progressbar"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'migrated'"
                                           decoration-info="state == 'mapped'"
                                           decoration-warning="state == 'pending'"
                                           decoration-muted="state == 'ignored'"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Configuracion" name="config">
                            <group>
                                <group string="Streaming (Kafka)">
                                    <field name="use_kafka"/>
                                    <field name="kafka_topic_prefix"
                                           attrs="{'invisible': [('use_kafka', '=', False)]}"/>
                                </group>
                                <group string="Inteligencia Artificial">
                                    <field name="ai_suggestions_enabled"/>
                                    <field name="ai_confidence_threshold"
                                           attrs="{'invisible': [('ai_suggestions_enabled', '=', False)]}"/>
                                </group>
                            </group>
                            <group string="Procesamiento">
                                <group>
                                    <field name="batch_size"/>
                                    <field name="max_retries"/>
                                </group>
                                <group>
                                    <field name="retry_delay"/>
                                    <field name="parallel_workers"/>
                                </group>
                            </group>
                        </page>

                        <page string="Logs Recientes" name="logs"
                              attrs="{'invisible': [('state', 'in', ['draft', 'connecting'])]}">
                            <field name="log_ids" nolabel="1" readonly="1">
                                <tree limit="50" decoration-danger="level == 'error'"
                                      decoration-warning="level == 'warning'"
                                      decoration-info="level == 'info'">
                                    <field name="timestamp"/>
                                    <field name="level" widget="badge"/>
                                    <field name="source_table"/>
                                    <field name="message"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Descripcion" name="description">
                            <field name="description" placeholder="Descripcion del proyecto de migracion..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Accion de Proyectos -->
    <record id="migration_project_action" model="ir.actions.act_window">
        <field name="name">Proyectos de Migracion</field>
        <field name="res_model">migration.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo proyecto de migracion
            </p>
            <p>
                Migre datos desde cualquier ERP (SAP, Oracle, etc.) o versiones anteriores de Odoo.
                <br/>
                El sistema detectara automaticamente tablas, relaciones y sugerira mapeos.
            </p>
        </field>
    </record>

    <!-- Accion para ver mapeos de tablas de un proyecto -->
    <record id="migration_table_mapping_project_action" model="ir.actions.act_window">
        <field name="name">Mapeos del Proyecto</field>
        <field name="res_model">migration.table.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
        <field name="context">{'default_project_id': active_id}</field>
    </record>
</odoo>
