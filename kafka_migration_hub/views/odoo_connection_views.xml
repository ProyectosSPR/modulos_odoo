<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- CONEXIONES ODOO -->
    <!-- ============================================ -->

    <!-- Vista Tree de Conexiones -->
    <record id="migration_odoo_connection_view_tree" model="ir.ui.view">
        <field name="name">migration.odoo.connection.tree</field>
        <field name="model">migration.odoo.connection</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="url"/>
                <field name="database"/>
                <field name="odoo_version"/>
                <field name="connection_type" widget="badge"
                       decoration-info="connection_type == 'source'"
                       decoration-success="connection_type == 'target'"
                       decoration-primary="connection_type == 'both'"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'connected'"
                       decoration-danger="state == 'error'"
                       decoration-muted="state == 'draft'"/>
                <field name="model_count"/>
                <field name="last_check"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Conexiones -->
    <record id="migration_odoo_connection_view_form" model="ir.ui.view">
        <field name="name">migration.odoo.connection.form</field>
        <field name="model">migration.odoo.connection</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test_connection"
                            type="object"
                            string="Probar Conexion"
                            class="btn-primary"
                            icon="fa-plug"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,connected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-database"
                                attrs="{'invisible': [('state', '!=', 'connected')]}">
                            <field name="model_count" widget="statinfo" string="Modelos"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Conectado" bg_color="bg-success"
                            attrs="{'invisible': [('state', '!=', 'connected')]}"/>
                    <widget name="web_ribbon" title="Error" bg_color="bg-danger"
                            attrs="{'invisible': [('state', '!=', 'error')]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre de la conexion"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Conexion">
                            <field name="url" placeholder="https://mi-odoo.com"/>
                            <field name="database" placeholder="mi_base_datos"/>
                            <field name="username" placeholder="admin"/>
                            <field name="password" password="True"/>
                        </group>
                        <group string="Configuracion">
                            <field name="connection_type" widget="radio"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <group string="Informacion de la Instancia"
                           attrs="{'invisible': [('state', '!=', 'connected')]}">
                        <group>
                            <field name="odoo_version"/>
                            <field name="last_check"/>
                        </group>
                    </group>

                    <group string="Error" attrs="{'invisible': [('state', '!=', 'error')]}">
                        <field name="error_message" nolabel="1" readonly="1"
                               widget="text" class="text-danger"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Accion de Conexiones -->
    <record id="migration_odoo_connection_action" model="ir.actions.act_window">
        <field name="name">Conexiones Odoo</field>
        <field name="res_model">migration.odoo.connection</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una conexion a otra instancia Odoo
            </p>
            <p>
                Conecta a instancias Odoo remotas para comparar esquemas
                y generar mapeos de migracion automaticamente.
            </p>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- COMPARACIONES -->
    <!-- ============================================ -->

    <!-- Vista Tree de Comparaciones -->
    <record id="migration_odoo_comparison_view_tree" model="ir.ui.view">
        <field name="name">migration.odoo.comparison.tree</field>
        <field name="model">migration.odoo.comparison</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="source_connection_id"/>
                <field name="compare_with_local" widget="boolean"/>
                <field name="target_connection_id"/>
                <field name="total_models"/>
                <field name="compatible_models"/>
                <field name="complexity_level" widget="badge"
                       decoration-success="complexity_level == 'low'"
                       decoration-warning="complexity_level == 'medium'"
                       decoration-danger="complexity_level in ('high', 'critical')"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'comparing'"
                       decoration-danger="state == 'error'"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Comparaciones -->
    <record id="migration_odoo_comparison_view_form" model="ir.ui.view">
        <field name="name">migration.odoo.comparison.form</field>
        <field name="model">migration.odoo.comparison</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_load_models"
                            type="object"
                            string="Cargar Modelos"
                            class="btn-secondary"
                            icon="fa-download"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_run_comparison"
                            type="object"
                            string="Ejecutar Comparacion"
                            class="btn-primary"
                            icon="fa-play"
                            attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="action_generate_mappings"
                            type="object"
                            string="Generar Mapeos"
                            class="btn-success"
                            icon="fa-magic"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,comparing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- Panel de Resumen -->
                    <div class="row" attrs="{'invisible': [('state', '!=', 'done')]}">
                        <div class="col-12">
                            <div class="alert alert-info" role="alert">
                                <div class="row">
                                    <div class="col-3 text-center">
                                        <h3><field name="total_models" readonly="1"/></h3>
                                        <small>Modelos Analizados</small>
                                    </div>
                                    <div class="col-3 text-center">
                                        <h3 class="text-success"><field name="compatible_models" readonly="1"/></h3>
                                        <small>Compatibles</small>
                                    </div>
                                    <div class="col-3 text-center">
                                        <h3 class="text-warning"><field name="models_with_changes" readonly="1"/></h3>
                                        <small>Con Cambios</small>
                                    </div>
                                    <div class="col-3 text-center">
                                        <h3>
                                            <field name="complexity_level" widget="badge"
                                                   decoration-success="complexity_level == 'low'"
                                                   decoration-warning="complexity_level == 'medium'"
                                                   decoration-danger="complexity_level in ('high', 'critical')"/>
                                        </h3>
                                        <small>Complejidad</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <group>
                        <group string="Origen">
                            <field name="source_connection_id"
                                   options="{'no_create': True}"/>
                        </group>
                        <group string="Destino">
                            <field name="compare_with_local"/>
                            <field name="target_connection_id"
                                   attrs="{'invisible': [('compare_with_local', '=', True)], 'required': [('compare_with_local', '=', False)]}"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>

                    <group string="Filtros">
                        <field name="model_filter"
                               placeholder="res. (para filtrar modelos de recursos)"/>
                    </group>

                    <notebook>
                        <page string="Modelos a Comparar" name="models">
                            <field name="model_ids" widget="many2many_tags"
                                   options="{'color_field': 'id'}"/>
                        </page>

                        <page string="Resultados" name="results"
                              attrs="{'invisible': [('state', '!=', 'done')]}">
                            <field name="result_ids" nolabel="1">
                                <tree decoration-success="breaking_changes == 0"
                                      decoration-warning="breaking_changes > 0 and breaking_changes &lt; 5"
                                      decoration-danger="breaking_changes >= 5">
                                    <field name="model_name"/>
                                    <field name="status" widget="badge"/>
                                    <field name="source_field_count"/>
                                    <field name="target_field_count"/>
                                    <field name="compatible_fields"/>
                                    <field name="modified_fields"/>
                                    <field name="added_fields"/>
                                    <field name="removed_fields"/>
                                    <field name="breaking_changes"/>
                                    <field name="compatibility_percent" widget="progressbar"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Accion de Comparaciones -->
    <record id="migration_odoo_comparison_action" model="ir.actions.act_window">
        <field name="name">Comparaciones Odoo</field>
        <field name="res_model">migration.odoo.comparison</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva comparacion
            </p>
            <p>
                Compara esquemas entre diferentes versiones de Odoo
                para identificar cambios y generar mapeos automaticos.
            </p>
        </field>
    </record>

    <!-- Vista Tree de Resultados de Comparacion -->
    <record id="migration_comparison_result_view_tree" model="ir.ui.view">
        <field name="name">migration.comparison.result.tree</field>
        <field name="model">migration.comparison.result</field>
        <field name="arch" type="xml">
            <tree decoration-success="breaking_changes == 0"
                  decoration-warning="breaking_changes > 0 and breaking_changes &lt; 5"
                  decoration-danger="breaking_changes >= 5"
                  editable="bottom">
                <field name="model_name"/>
                <field name="status"/>
                <field name="source_field_count"/>
                <field name="target_field_count"/>
                <field name="compatible_fields"/>
                <field name="modified_fields"/>
                <field name="added_fields"/>
                <field name="removed_fields"/>
                <field name="breaking_changes"/>
                <field name="compatibility_percent" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- MENUS -->
    <!-- ============================================ -->

    <!-- Menu principal de Comparador -->
    <menuitem id="menu_migration_comparator"
              name="Comparador Odoo"
              parent="menu_migration_hub_root"
              sequence="20"/>

    <menuitem id="menu_odoo_connections"
              name="Conexiones"
              parent="menu_migration_comparator"
              action="migration_odoo_connection_action"
              sequence="10"/>

    <menuitem id="menu_odoo_comparisons"
              name="Comparaciones"
              parent="menu_migration_comparator"
              action="migration_odoo_comparison_action"
              sequence="20"/>

</odoo>
