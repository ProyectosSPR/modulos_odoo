<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Regla Multi-Company para Config -->
        <record id="mercadolibre_config_company_rule" model="ir.rule">
            <field name="name">Mercado Libre Config: multi-company</field>
            <field name="model_id" ref="model_mercadolibre_config"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Regla Multi-Company para Account -->
        <record id="mercadolibre_account_company_rule" model="ir.rule">
            <field name="name">Mercado Libre Account: multi-company</field>
            <field name="model_id" ref="model_mercadolibre_account"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Regla Multi-Company para Token -->
        <record id="mercadolibre_token_company_rule" model="ir.rule">
            <field name="name">Mercado Libre Token: multi-company</field>
            <field name="model_id" ref="model_mercadolibre_token"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Regla Multi-Company para Invitation -->
        <record id="mercadolibre_invitation_company_rule" model="ir.rule">
            <field name="name">Mercado Libre Invitation: multi-company</field>
            <field name="model_id" ref="model_mercadolibre_invitation"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Regla Multi-Company para Log -->
        <record id="mercadolibre_log_company_rule" model="ir.rule">
            <field name="name">Mercado Libre Log: multi-company</field>
            <field name="model_id" ref="model_mercadolibre_log"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Regla Multi-Company para Playground -->
        <record id="mercadolibre_playground_company_rule" model="ir.rule">
            <field name="name">Mercado Libre Playground: multi-company</field>
            <field name="model_id" ref="model_mercadolibre_api_playground"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
