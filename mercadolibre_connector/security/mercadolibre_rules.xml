<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mercadolibre_config_comp_rule" model="ir.rule">
        <field name="name">MercadoLibre Config: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_config"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="mercadolibre_account_comp_rule" model="ir.rule">
        <field name="name">MercadoLibre Account: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_account"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="mercadolibre_token_comp_rule" model="ir.rule">
        <field name="name">MercadoLibre Token: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_token"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="mercadolibre_invitation_comp_rule" model="ir.rule">
        <field name="name">MercadoLibre Invitation: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_invitation"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record id="mercadolibre_log_comp_rule" model="ir.rule">
        <field name="name">MercadoLibre Log: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_log"/>
        <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>
    <record id="mercadolibre_api_playground_comp_rule" model="ir.rule">
        <field name="name">MercadoLibre API Playground: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_api_playground"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
