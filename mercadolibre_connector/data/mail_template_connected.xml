<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_mercadolibre_connected" model="mail.template">
        <field name="name">MercadoLibre: Account Connected</field>
        <field name="model_id" ref="model_mercadolibre_account"/>
        <field name="subject">Cuenta de MercadoLibre conectada exitosamente</field>
        <field name="email_from">${(object.company_id.email or user.email_formatted) | safe}</field>
        <field name="email_to">${object.ml_email | safe}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px; font-family: Arial, Helvetica, sans-serif; font-size: 14px;">
                <p>Hola ${object.ml_first_name or 'Usuario'},</p>
                <p>Tu cuenta de MercadoLibre <strong>${object.ml_nickname}</strong> ha sido conectada exitosamente con <strong>${object.company_id.name}</strong>.</p>
                <p><strong>Detalles de la cuenta:</strong></p>
                <ul>
                    <li>Nickname: ${object.ml_nickname}</li>
                    <li>User ID: ${object.ml_user_id}</li>
                    <li>Email: ${object.ml_email}</li>
                </ul>
                <p>Tu cuenta está ahora lista para sincronizar datos con nuestro sistema.</p>
                <p>Si no autorizaste esta conexión, por favor contacta a tu administrador inmediatamente.</p>
                <p>Saludos,<br/>${object.company_id.name}</p>
            </div>
        </field>
        <field name="auto_delete" eval="False"/>
    </record>
</odoo>
