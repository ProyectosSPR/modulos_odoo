<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_mercadolibre_invitation_tree" model="ir.ui.view">
        <field name="name">mercadolibre.invitation.tree</field>
        <field name="model">mercadolibre.invitation</field>
        <field name="arch" type="xml">
            <tree string="Invitaciones">
                <field name="email"/>
                <field name="recipient_name"/>
                <field name="config_id"/>
                <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-info="state == 'sent'" decoration-warning="state == 'expired'"/>
                <field name="sent_at"/>
                <field name="expires_at"/>
                <field name="account_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_mercadolibre_invitation_form" model="ir.ui.view">
        <field name="name">mercadolibre.invitation.form</field>
        <field name="model">mercadolibre.invitation</field>
        <field name="arch" type="xml">
            <form string="Invitación">
                <header>
                    <button name="action_send_invitation" string="Enviar Invitación" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="action_resend_invitation" string="Reenviar" type="object" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                    <button name="action_cancel_invitation" string="Cancelar" type="object" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,opened,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="config_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="email"/>
                            <field name="recipient_name"/>
                        </group>
                        <group>
                            <field name="expires_at"/>
                            <field name="sent_at" readonly="1"/>
                            <field name="opened_at" readonly="1"/>
                            <field name="completed_at" readonly="1"/>
                            <field name="account_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="URLs" groups="mercadolibre_connector.group_mercadolibre_manager">
                        <field name="invitation_url" widget="url" readonly="1"/>
                        <field name="authorization_url" widget="url" readonly="1"/>
                    </group>
                    <group string="Notas">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mercadolibre_invitation" model="ir.actions.act_window">
        <field name="name">Invitaciones</field>
        <field name="res_model">mercadolibre.invitation</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
