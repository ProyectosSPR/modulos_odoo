<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mercadolibre_invitation_tree" model="ir.ui.view">
        <field name="name">mercadolibre.invitation.tree</field>
        <field name="model">mercadolibre.invitation</field>
        <field name="arch" type="xml">
            <tree string="Invitaciones" decoration-success="state=='accepted'" decoration-danger="state=='expired'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="email"/>
                <field name="config_id"/>
                <field name="sent_date"/>
                <field name="expiry_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_mercadolibre_invitation_form" model="ir.ui.view">
        <field name="name">mercadolibre.invitation.form</field>
        <field name="model">mercadolibre.invitation</field>
        <field name="arch" type="xml">
            <form string="Invitación MercadoLibre">
                <header>
                    <button name="action_send" type="object" string="Enviar Invitación" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_resend" type="object" string="Reenviar" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                    <button name="action_cancel" type="object" string="Cancelar" confirm="¿Cancelar esta invitación?" attrs="{'invisible': [('state', 'in', ['accepted', 'expired', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,accepted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Referencia de la invitación"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="config_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="email" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="sent_date"/>
                            <field name="expiry_date"/>
                            <field name="is_expired"/>
                            <field name="accepted_date"/>
                            <field name="account_id"/>
                        </group>
                    </group>
                    <group string="URL de Autorización" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <field name="authorization_url" widget="url"/>
                    </group>
                    <group string="Notas">
                        <field name="notes" nolabel="1" placeholder="Notas adicionales..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_mercadolibre_invitation_search" model="ir.ui.view">
        <field name="name">mercadolibre.invitation.search</field>
        <field name="model">mercadolibre.invitation</field>
        <field name="arch" type="xml">
            <search string="Invitaciones">
                <field name="name"/>
                <field name="email"/>
                <field name="config_id"/>
                <filter string="Borradores" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Enviadas" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Aceptadas" name="accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Expiradas" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Pendientes" name="pending" domain="[('state', 'in', ['draft', 'sent'])]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Configuración" name="config" context="{'group_by': 'config_id'}"/>
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Fecha de Envío" name="sent_date" context="{'group_by': 'sent_date'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_mercadolibre_invitation" model="ir.actions.act_window">
        <field name="name">Invitaciones</field>
        <field name="res_model">mercadolibre.invitation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva invitación
            </p>
            <p>
                Envía invitaciones para que los usuarios autoricen sus cuentas de MercadoLibre.
            </p>
        </field>
    </record>
</odoo>
