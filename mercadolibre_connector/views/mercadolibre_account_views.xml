<?xml version="1.0" ?>
<odoo>
    <record id="view_mercadolibre_account_tree" model="ir.ui.view">
        <field name="name">mercadolibre.account.tree</field>
        <field name="model">mercadolibre.account</field>
        <field name="arch" type="xml">
            <tree string="Cuentas ML">
                <field name="nickname"/>
                <field name="ml_user_id"/>
                <field name="site_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="is_authorized"/>
                <field name="token_health" widget="badge" decoration-success="token_health == 'healthy'" decoration-warning="token_health == 'warning'" decoration-danger="token_health == 'critical'"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <record id="view_mercadolibre_account_form" model="ir.ui.view">
        <field name="name">mercadolibre.account.form</field>
        <field name="model">mercadolibre.account</field>
        <field name="arch" type="xml">
            <form string="Cuenta ML">
                <header>
                    <button name="action_authorize" string="Conectar Cuenta" type="object" class="oe_highlight" attrs="{'invisible': [('is_authorized', '=', True)]}"/>
                    <button name="action_refresh_token" string="Refrescar Token" type="object" class="btn-warning" attrs="{'invisible': [('is_authorized', '=', False)]}"/>
                    <button name="action_sync_user_info" string="Sincronizar Info" type="object"/>
                    <button name="action_view_logs" string="Ver Logs" type="object"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Inactivo" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <widget name="web_ribbon" title="No Autorizado" bg_color="bg-warning" attrs="{'invisible': [('is_authorized', '=', True)]}"/>
                    <field name="thumbnail" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="nickname" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="ml_user_id" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="config_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="email" readonly="1"/>
                            <field name="site_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="account_type" readonly="1"/>
                            <field name="points" readonly="1"/>
                            <field name="status" readonly="1"/>
                            <field name="authorization_date" readonly="1"/>
                            <field name="last_sync" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Token" groups="mercadolibre_connector.group_mercadolibre_manager">
                            <group>
                                <group>
                                    <field name="token_health" widget="badge" decoration-success="token_health == 'healthy'" decoration-warning="token_health == 'warning'" decoration-danger="token_health == 'critical'"/>
                                </group>
                            </group>
                            <field name="token_id">
                                <tree>
                                    <field name="expires_at"/>
                                    <field name="minutes_to_expire"/>
                                    <field name="is_expired"/>
                                    <field name="health_status" widget="badge"/>
                                    <field name="refresh_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_mercadolibre_account_kanban" model="ir.ui.view">
        <field name="name">mercadolibre.account.kanban</field>
        <field name="model">mercadolibre.account</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="nickname"/>
                <field name="ml_user_id"/>
                <field name="site_id"/>
                <field name="is_authorized"/>
                <field name="token_health"/>
                <field name="thumbnail"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('mercadolibre.account', 'thumbnail', record.id.raw_value)" alt="Avatar"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="nickname"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="ml_user_id"/>
                                </div>
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill" t-att-class="record.token_health.raw_value == 'healthy' ? 'badge-success' : record.token_health.raw_value == 'warning' ? 'badge-warning' : 'badge-danger'">
                                        <field name="token_health"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_mercadolibre_account" model="ir.actions.act_window">
        <field name="name">Mis Cuentas ML</field>
        <field name="res_model">mercadolibre.account</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
