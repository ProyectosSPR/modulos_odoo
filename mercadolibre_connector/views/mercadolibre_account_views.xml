<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mercadolibre_account_tree" model="ir.ui.view">
        <field name="name">mercadolibre.account.tree</field>
        <field name="model">mercadolibre.account</field>
        <field name="arch" type="xml">
            <tree string="Cuentas MercadoLibre" decoration-success="state=='connected'" decoration-danger="state=='error'" decoration-muted="state=='disconnected'">
                <field name="name"/>
                <field name="ml_user_id"/>
                <field name="ml_email"/>
                <field name="config_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
                <field name="has_valid_token"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <record id="view_mercadolibre_account_form" model="ir.ui.view">
        <field name="name">mercadolibre.account.form</field>
        <field name="model">mercadolibre.account</field>
        <field name="arch" type="xml">
            <form string="Cuenta MercadoLibre">
                <header>
                    <button name="action_reconnect" type="object" string="Reconectar" class="btn-primary" attrs="{'invisible': [('state', '=', 'connected')]}"/>
                    <button name="action_disconnect" type="object" string="Desconectar" confirm="¿Desconectar esta cuenta?" attrs="{'invisible': [('state', 'not in', ['connected'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,connected"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Inactivo" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="config_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="ml_user_id"/>
                            <field name="ml_nickname"/>
                        </group>
                        <group>
                            <field name="ml_email"/>
                            <field name="ml_first_name"/>
                            <field name="ml_last_name"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Token Actual">
                        <field name="current_token_id" readonly="1"/>
                        <field name="has_valid_token"/>
                    </group>
                    <notebook>
                        <page string="Tokens" name="tokens">
                            <field name="token_ids" readonly="1">
                                <tree decoration-success="is_valid==True" decoration-muted="active==False">
                                    <field name="create_date" string="Creado"/>
                                    <field name="expires_at"/>
                                    <field name="is_valid"/>
                                    <field name="refresh_count"/>
                                    <field name="last_refresh_date"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas" name="notes">
                            <field name="notes" placeholder="Notas adicionales..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_mercadolibre_account_search" model="ir.ui.view">
        <field name="name">mercadolibre.account.search</field>
        <field name="model">mercadolibre.account</field>
        <field name="arch" type="xml">
            <search string="Cuentas">
                <field name="name"/>
                <field name="ml_user_id"/>
                <field name="ml_email"/>
                <field name="config_id"/>
                <filter string="Conectadas" name="connected" domain="[('state', '=', 'connected')]"/>
                <filter string="Desconectadas" name="disconnected" domain="[('state', '=', 'disconnected')]"/>
                <filter string="Con Errores" name="error" domain="[('state', '=', 'error')]"/>
                <filter string="Con Token Válido" name="valid_token" domain="[('has_valid_token', '=', True)]"/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Configuración" name="config" context="{'group_by': 'config_id'}"/>
                    <filter string="Estado" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Compañía" name="company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="action_mercadolibre_account" model="ir.actions.act_window">
        <field name="name">Cuentas ML</field>
        <field name="res_model">mercadolibre.account</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_connected': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay cuentas de MercadoLibre conectadas
            </p>
            <p>
                Las cuentas se crean automáticamente cuando un usuario autoriza el acceso a través de una invitación.
            </p>
        </field>
    </record>
</odoo>
