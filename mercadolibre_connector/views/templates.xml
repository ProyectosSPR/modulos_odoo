<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="oauth_success" name="MercadoLibre OAuth Success">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-success text-center" role="alert">
                            <h1 class="display-4">¡Conexión Exitosa!</h1>
                            <hr/>
                            <p class="lead">Tu cuenta de MercadoLibre ha sido conectada correctamente.</p>
                            <div class="mt-4">
                                <h5>Detalles de la cuenta:</h5>
                                <ul class="list-unstyled">
                                    <li><strong>Nickname:</strong> <t t-esc="account.ml_nickname"/></li>
                                    <li><strong>Email:</strong> <t t-esc="account.ml_email"/></li>
                                    <li><strong>User ID:</strong> <t t-esc="account.ml_user_id"/></li>
                                </ul>
                            </div>
                            <p class="mt-4">Puedes cerrar esta ventana.</p>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="oauth_error" name="MercadoLibre OAuth Error">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="alert alert-danger text-center" role="alert">
                            <h1 class="display-4">Error en la Conexión</h1>
                            <hr/>
                            <p class="lead">Hubo un problema al conectar tu cuenta de MercadoLibre.</p>
                            <div class="mt-4">
                                <h5>Detalles del error:</h5>
                                <p><strong>Código:</strong> <t t-esc="error"/></p>
                                <p><strong>Descripción:</strong> <t t-esc="error_description"/></p>
                            </div>
                            <p class="mt-4">Por favor, contacta a tu administrador o intenta nuevamente.</p>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
