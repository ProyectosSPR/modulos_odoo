<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================== -->
    <!-- KNOWN VENDOR VIEWS -->
    <!-- ============================================== -->

    <!-- Tree View -->
    <record id="view_mercadolibre_known_vendor_tree" model="ir.ui.view">
        <field name="name">mercadolibre.known.vendor.tree</field>
        <field name="model">mercadolibre.known.vendor</field>
        <field name="arch" type="xml">
            <tree string="Proveedores Conocidos">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="keyword_ids" widget="many2many_tags"/>
                <field name="payment_count"/>
                <field name="last_payment_date"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_mercadolibre_known_vendor_form" model="ir.ui.view">
        <field name="name">mercadolibre.known.vendor.form</field>
        <field name="model">mercadolibre.known.vendor</field>
        <field name="arch" type="xml">
            <form string="Proveedor Conocido">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_payments"
                                icon="fa-money"
                                attrs="{'invisible': [('payment_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="payment_count" nolabel="1"/></span>
                                <span class="o_stat_text">Pagos</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej: Google, CFE, Telmex"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuracion">
                            <field name="partner_id" options="{'no_create': False}"
                                   context="{'default_supplier_rank': 1}"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Estadisticas">
                            <field name="payment_count"/>
                            <field name="last_payment_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Palabras Clave" name="keywords">
                            <field name="keyword_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="keyword"/>
                                    <field name="match_type"/>
                                </tree>
                            </field>
                            <div class="alert alert-info" role="alert">
                                <strong>Tipos de busqueda:</strong>
                                <ul class="mb-0">
                                    <li><strong>Contiene:</strong> La descripcion contiene esta palabra (ej: "google" encuentra "PAGO A GOOGLE ADS")</li>
                                    <li><strong>Empieza con:</strong> La descripcion empieza con esta palabra (ej: "cfe" encuentra "CFE RECIBO LUZ")</li>
                                    <li><strong>Exacto:</strong> La descripcion es exactamente igual (ej: "telmex" solo encuentra "telmex")</li>
                                </ul>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_mercadolibre_known_vendor_search" model="ir.ui.view">
        <field name="name">mercadolibre.known.vendor.search</field>
        <field name="model">mercadolibre.known.vendor</field>
        <field name="arch" type="xml">
            <search string="Proveedores Conocidos">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="keyword_ids" string="Palabra Clave"/>
                <separator/>
                <filter string="Activos" name="active_filter" domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Proveedor Odoo" name="group_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mercadolibre_known_vendor" model="ir.actions.act_window">
        <field name="name">Proveedores Conocidos</field>
        <field name="res_model">mercadolibre.known.vendor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active_filter': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear proveedor conocido
            </p>
            <p>
                Configure proveedores conocidos para que los pagos de MercadoPago
                se asignen automaticamente al proveedor correcto en Odoo.
            </p>
            <p>
                <strong>Como funciona:</strong>
                <ul>
                    <li>Agregue palabras clave que aparecen en las descripciones de pago</li>
                    <li>Cuando se sincronice un pago, el sistema buscara coincidencias</li>
                    <li>Si encuentra coincidencia, asignara el proveedor automaticamente</li>
                </ul>
            </p>
            <p>
                <strong>Ejemplos:</strong>
                <ul>
                    <li>Google: palabras clave "google", "google ads", "adwords"</li>
                    <li>CFE: palabras clave "cfe", "comision federal"</li>
                    <li>Telmex: palabras clave "telmex", "infinitum"</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- KEYWORD VIEWS (para acceso directo si se necesita) -->
    <!-- ============================================== -->

    <!-- Tree View for Keywords -->
    <record id="view_mercadolibre_known_vendor_keyword_tree" model="ir.ui.view">
        <field name="name">mercadolibre.known.vendor.keyword.tree</field>
        <field name="model">mercadolibre.known.vendor.keyword</field>
        <field name="arch" type="xml">
            <tree string="Palabras Clave" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="vendor_id"/>
                <field name="keyword"/>
                <field name="match_type"/>
                <field name="partner_id"/>
            </tree>
        </field>
    </record>

    <!-- Search View for Keywords -->
    <record id="view_mercadolibre_known_vendor_keyword_search" model="ir.ui.view">
        <field name="name">mercadolibre.known.vendor.keyword.search</field>
        <field name="model">mercadolibre.known.vendor.keyword</field>
        <field name="arch" type="xml">
            <search string="Palabras Clave">
                <field name="keyword"/>
                <field name="vendor_id"/>
                <field name="partner_id"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Proveedor" name="group_vendor" context="{'group_by': 'vendor_id'}"/>
                    <filter string="Tipo de Busqueda" name="group_match_type" context="{'group_by': 'match_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Keywords (vista independiente) -->
    <record id="action_mercadolibre_known_vendor_keyword" model="ir.actions.act_window">
        <field name="name">Palabras Clave de Proveedores</field>
        <field name="res_model">mercadolibre.known.vendor.keyword</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_group_vendor': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Agregar palabra clave
            </p>
            <p>
                Las palabras clave se usan para detectar proveedores automaticamente
                basandose en las descripciones de los pagos de MercadoPago.
            </p>
        </field>
    </record>
</odoo>
