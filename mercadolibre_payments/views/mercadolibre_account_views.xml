<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Herencia de la vista form de mercadolibre.account -->
    <record id="view_mercadolibre_account_form_payments_inherit" model="ir.ui.view">
        <field name="name">mercadolibre.account.form.payments</field>
        <field name="model">mercadolibre.account</field>
        <field name="inherit_id" ref="mercadolibre_connector.view_mercadolibre_account_form"/>
        <field name="arch" type="xml">
            <!-- Agregar seccion de Usuario Odoo antes del notebook -->
            <xpath expr="//notebook" position="before">
                <group string="Usuario Odoo" name="odoo_user">
                    <group>
                        <field name="auto_create_user"/>
                        <field name="odoo_user_id"/>
                    </group>
                    <group>
                        <div class="mt-3">
                            <button name="action_create_odoo_user" type="object"
                                    string="Crear Usuario Odoo"
                                    class="btn btn-primary oe_highlight w-100 py-2"
                                    icon="fa-user-plus"
                                    attrs="{'invisible': [('odoo_user_id', '!=', False)]}"/>
                            <button name="action_view_odoo_user" type="object"
                                    string="Ver Usuario"
                                    class="btn btn-secondary w-100 py-2"
                                    icon="fa-user"
                                    attrs="{'invisible': [('odoo_user_id', '=', False)]}"/>
                        </div>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
