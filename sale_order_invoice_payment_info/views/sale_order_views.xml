<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista tree heredada de sale.order para agregar campos de comisión, facturas y pagos -->
    <record id="view_order_tree_commission_info" model="ir.ui.view">
        <field name="name">sale.order.tree.commission.info</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <!-- Agregar campos de comisión después del campo amount_total -->
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="commission_paid" widget="boolean_toggle" optional="show"/>
                <field name="commission_paid_date" optional="show"/>
                <field name="payment_valid_date" optional="show"/>
                <field name="invoice_names" optional="show"/>
                <field name="payment_names" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Vista de formulario heredada de sale.order -->
    <record id="view_order_form_invoice_payment_info" model="ir.ui.view">
        <field name="name">sale.order.form.invoice.payment.info</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Agregar campos de comisión en el grupo de información -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="commission_paid" widget="boolean_toggle"/>
                <field name="commission_paid_date" attrs="{'invisible': [('commission_paid', '=', False)]}"/>
            </xpath>

            <!-- Agregar botones de comisión -->
            <xpath expr="//button[@name='action_quotation_send']" position="after">
                <button name="action_mark_commission_paid"
                        string="Marcar Comisión Pagada"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': ['|', ('commission_paid', '=', True), ('state', 'not in', ['sale', 'done'])]}"/>
                <button name="action_unmark_commission_paid"
                        string="Desmarcar Comisión"
                        type="object"
                        class="btn-secondary"
                        attrs="{'invisible': [('commission_paid', '=', False)]}"/>
            </xpath>

            <!-- Agregar una nueva página después de las líneas de pedido -->
            <xpath expr="//notebook" position="inside">
                <page string="Facturas y Pagos" name="invoice_payment_info">
                    <group>
                        <group>
                            <field name="invoice_payment_count" readonly="1"/>
                        </group>
                    </group>
                    <field name="invoice_payment_info_ids" readonly="1">
                        <tree>
                            <!-- Información de la factura -->
                            <field name="invoice_name"/>
                            <field name="invoice_date"/>
                            <field name="invoice_partner_id"/>
                            <field name="invoice_amount_total" sum="Total Facturado"/>
                            <field name="invoice_amount_residual" sum="Total Pendiente"/>
                            <field name="invoice_state"/>
                            <field name="invoice_payment_state"/>

                            <!-- Información del pago -->
                            <field name="payment_name"/>
                            <field name="payment_ref"/>
                            <field name="payment_date"/>
                            <field name="payment_amount" sum="Total Pagado"/>
                            <field name="reconcile_date"/>

                            <!-- Campos ocultos -->
                            <field name="invoice_id" invisible="1"/>
                            <field name="payment_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

    <!-- Vista de formulario para el detalle de invoice_payment_info -->
    <record id="view_sale_order_invoice_payment_info_form" model="ir.ui.view">
        <field name="name">sale.order.invoice.payment.info.form</field>
        <field name="model">sale.order.invoice.payment.info</field>
        <field name="arch" type="xml">
            <form string="Detalle de Factura y Pago">
                <sheet>
                    <group>
                        <group string="Información de Factura">
                            <field name="invoice_id" readonly="1"/>
                            <field name="invoice_name" readonly="1"/>
                            <field name="invoice_date" readonly="1"/>
                            <field name="invoice_partner_id" readonly="1"/>
                            <field name="invoice_amount_total" readonly="1"/>
                            <field name="invoice_amount_residual" readonly="1"/>
                            <field name="invoice_state" readonly="1"/>
                            <field name="invoice_payment_state" readonly="1"/>
                        </group>
                        <group string="Información de Pago">
                            <field name="payment_id" readonly="1"/>
                            <field name="payment_name" readonly="1"/>
                            <field name="payment_ref" readonly="1"/>
                            <field name="payment_date" readonly="1"/>
                            <field name="payment_amount" readonly="1"/>
                            <field name="payment_create_date" readonly="1"/>
                            <field name="reconcile_date" readonly="1"/>
                        </group>
                    </group>

                    <!-- Notebook para líneas de producto de la factura -->
                    <notebook>
                        <page string="Líneas de Producto de la Factura" name="invoice_lines">
                            <field name="invoice_line_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                    <field name="price_total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
