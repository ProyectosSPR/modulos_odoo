<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================== -->
    <!-- VISTA KANBAN -->
    <!-- ============================================== -->
    <record id="view_mercadolibre_item_experience_kanban" model="ir.ui.view">
        <field name="name">mercadolibre.item.experience.kanban</field>
        <field name="model">mercadolibre.item.experience</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="color">
                <field name="ml_item_id"/>
                <field name="title"/>
                <field name="score"/>
                <field name="color"/>
                <field name="reputation_text"/>
                <field name="status"/>
                <field name="problems_count"/>
                <field name="thumbnail"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <t t-if="record.thumbnail.raw_value">
                                    <img t-att-src="record.thumbnail.raw_value"
                                         alt="Item" class="o_image_64_contain"/>
                                </t>
                                <t t-else="">
                                    <span class="fa fa-shopping-bag fa-3x text-muted"/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="ml_item_id"/>
                                </strong>
                                <div class="o_kanban_record_subtitle text-muted">
                                    <field name="title"/>
                                </div>
                                <div class="mt-2">
                                    <span t-attf-class="badge #{record.color.raw_value == 'green' ? 'bg-success' : record.color.raw_value == 'orange' ? 'bg-warning' : record.color.raw_value == 'red' ? 'bg-danger' : 'bg-secondary'}">
                                        Score: <field name="score"/>
                                    </span>
                                    <span class="badge bg-info ms-1" t-if="record.problems_count.raw_value > 0">
                                        <field name="problems_count"/> problemas
                                    </span>
                                </div>
                                <div class="mt-1 text-muted small">
                                    <field name="status"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- VISTA TREE -->
    <!-- ============================================== -->
    <record id="view_mercadolibre_item_experience_tree" model="ir.ui.view">
        <field name="name">mercadolibre.item.experience.tree</field>
        <field name="model">mercadolibre.item.experience</field>
        <field name="arch" type="xml">
            <tree decoration-success="color == 'green'"
                  decoration-warning="color == 'orange'"
                  decoration-danger="color == 'red'"
                  decoration-muted="color == 'gray'">
                <field name="ml_item_id"/>
                <field name="title"/>
                <field name="score"/>
                <field name="reputation_text"/>
                <field name="color" invisible="1"/>
                <field name="status" widget="badge"
                       decoration-success="status == 'active'"
                       decoration-danger="status == 'paused'"
                       decoration-warning="status == 'moderated'"/>
                <field name="problems_count"/>
                <field name="claims_count"/>
                <field name="cancellations_count"/>
                <field name="is_frozen" widget="boolean_toggle"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- VISTA FORM -->
    <!-- ============================================== -->
    <record id="view_mercadolibre_item_experience_form" model="ir.ui.view">
        <field name="name">mercadolibre.item.experience.form</field>
        <field name="model">mercadolibre.item.experience</field>
        <field name="arch" type="xml">
            <form string="Experiencia de Compra">
                <header>
                    <button name="action_sync_experience" type="object"
                            string="Sincronizar" icon="fa-refresh"
                            class="btn-primary"/>
                    <button name="action_open_in_ml" type="object"
                            string="Ver en MercadoLibre" icon="fa-external-link"
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <!-- Campos invisibles para attrs -->
                    <field name="color" invisible="1"/>
                    <field name="is_frozen" invisible="1"/>
                    <field name="problems_count" invisible="1"/>

                    <!-- Alerta de estado -->
                    <div class="alert alert-danger" role="alert"
                         attrs="{'invisible': [('color', '!=', 'red')]}">
                        <strong>Experiencia Mala:</strong> Este ítem requiere atención inmediata.
                    </div>
                    <div class="alert alert-warning" role="alert"
                         attrs="{'invisible': [('color', '!=', 'orange')]}">
                        <strong>Experiencia Media:</strong> Hay problemas que resolver.
                    </div>
                    <div class="alert alert-info" role="alert"
                         attrs="{'invisible': [('is_frozen', '=', False)]}">
                        <strong>Protegido:</strong> <field name="freeze_text" nolabel="1"/>
                    </div>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_problems" type="object"
                                class="oe_stat_button" icon="fa-exclamation-triangle"
                                attrs="{'invisible': [('problems_count', '=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Problemas</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="ml_item_id"/>
                        </h1>
                        <h3 class="text-muted">
                            <field name="title"/>
                        </h3>
                    </div>

                    <group>
                        <group string="Experiencia de Compra">
                            <field name="score"/>
                            <field name="color" widget="badge"
                                   decoration-success="color == 'green'"
                                   decoration-warning="color == 'orange'"
                                   decoration-danger="color == 'red'"/>
                            <field name="reputation_text"/>
                            <field name="experience_title"/>
                        </group>
                        <group string="Estado">
                            <field name="status" widget="badge"/>
                            <field name="status_assigned_by"/>
                            <field name="status_text"/>
                            <field name="is_frozen"/>
                        </group>
                    </group>

                    <group>
                        <group string="Métricas">
                            <field name="claims_count"/>
                            <field name="cancellations_count"/>
                        </group>
                        <group string="Período">
                            <field name="period_from"/>
                            <field name="period_to"/>
                            <field name="last_sync"/>
                        </group>
                    </group>

                    <group string="Descripción">
                        <field name="subtitle_1" nolabel="1" colspan="2"/>
                        <field name="subtitle_2" nolabel="1" colspan="2"/>
                    </group>

                    <notebook>
                        <page string="Problemas Detectados" name="problems">
                            <field name="problem_ids">
                                <tree decoration-danger="is_main_problem == True">
                                    <field name="order"/>
                                    <field name="is_main_problem" widget="boolean_toggle"/>
                                    <field name="level_one_key"/>
                                    <field name="level_two_title"/>
                                    <field name="level_three_title"/>
                                    <field name="claims_count"/>
                                    <field name="cancellations_count"/>
                                    <field name="quantity_text"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Soluciones" name="remedies"
                              attrs="{'invisible': [('problems_count', '=', 0)]}">
                            <field name="problem_ids" mode="tree">
                                <tree>
                                    <field name="level_three_title" string="Problema"/>
                                    <field name="remedy" string="Solución Sugerida"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Datos Técnicos" name="technical">
                            <group>
                                <field name="reputation_id"/>
                                <field name="account_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group string="Datos Crudos">
                                <field name="raw_data" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- FILTROS DE BUSQUEDA -->
    <!-- ============================================== -->
    <record id="view_mercadolibre_item_experience_search" model="ir.ui.view">
        <field name="name">mercadolibre.item.experience.search</field>
        <field name="model">mercadolibre.item.experience</field>
        <field name="arch" type="xml">
            <search string="Experiencia de Compra">
                <field name="ml_item_id"/>
                <field name="title"/>
                <field name="account_id"/>
                <separator/>
                <filter string="Buena" name="good" domain="[('color', '=', 'green')]"/>
                <filter string="Media" name="medium" domain="[('color', '=', 'orange')]"/>
                <filter string="Mala" name="bad" domain="[('color', '=', 'red')]"/>
                <filter string="Sin Datos" name="no_data" domain="[('color', '=', 'gray')]"/>
                <separator/>
                <filter string="Activos" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Pausados" name="paused" domain="[('status', '=', 'paused')]"/>
                <filter string="Con Problemas" name="with_problems" domain="[('problems_count', '>', 0)]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter string="Estado Experiencia" name="group_color" context="{'group_by': 'color'}"/>
                    <filter string="Estado Publicación" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Cuenta" name="group_account" context="{'group_by': 'account_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================== -->
    <!-- ACCION -->
    <!-- ============================================== -->
    <record id="action_mercadolibre_item_experience" model="ir.actions.act_window">
        <field name="name">Experiencia por Ítem</field>
        <field name="res_model">mercadolibre.item.experience</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_mercadolibre_item_experience_search"/>
        <field name="context">{'search_default_with_problems': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay ítems con experiencia registrada
            </p>
            <p>
                Sincroniza la reputación para obtener datos de experiencia de compra.
            </p>
        </field>
    </record>
</odoo>
