<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_ml_label_template_tree" model="ir.ui.view">
        <field name="name">ml.label.template.tree</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <tree string="Plantillas de Etiqueta">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="field_count"/>
                <field name="usage_count"/>
                <field name="pdf_width"/>
                <field name="pdf_height"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ml_label_template_form" model="ir.ui.view">
        <field name="name">ml.label.template.form</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Etiqueta">
                <header>
                    <button name="action_open_editor" string="Abrir Editor Visual"
                            type="object" class="oe_highlight" icon="fa-edit"/>
                    <button name="action_preview_with_sample_data" string="Vista Previa"
                            type="object" class="btn-secondary" icon="fa-eye"/>
                    <button name="action_duplicate_template" string="Duplicar"
                            type="object" class="btn-secondary" icon="fa-copy"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_usage" type="object"
                                class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="usage_count" widget="statinfo" string="Usos"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nombre de la plantilla..."/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="field_count"/>
                        </group>
                        <group>
                            <field name="pdf_width" readonly="1"/>
                            <field name="pdf_height" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="üìÑ PDF Ejemplo" name="pdf_sample">
                            <div class="alert alert-warning" role="alert" style="margin-bottom: 20px;">
                                <h5><i class="fa fa-info-circle"/> ¬øC√≥mo empezar?</h5>
                                <ol class="mb-0">
                                    <li><strong>Descarga una etiqueta ML de ejemplo</strong> desde MercadoLibre</li>
                                    <li><strong>S√∫bela aqu√≠ abajo</strong> usando el bot√≥n "Seleccionar archivo"</li>
                                    <li>El sistema detectar√° autom√°ticamente las dimensiones</li>
                                    <li>Luego ve a la pesta√±a <strong>"Campos de Texto"</strong> para agregar informaci√≥n personalizada</li>
                                </ol>
                            </div>

                            <group string="üìÇ 1. Cargar PDF de Etiqueta ML">
                                <field name="sample_pdf" filename="sample_pdf_filename"
                                       widget="binary" class="oe_avatar"/>
                                <field name="sample_pdf_filename" invisible="1"/>
                            </group>

                            <group string="üñºÔ∏è 2. Vista Previa Generada Autom√°ticamente" attrs="{'invisible': [('sample_pdf', '=', False)]}">
                                <field name="preview_image" widget="image" nolabel="1"
                                       options="{'size': [800, 1200]}" class="text-center"/>
                            </group>

                            <div class="alert alert-success" role="alert" attrs="{'invisible': [('sample_pdf', '=', False)]}">
                                <i class="fa fa-check-circle"/> <strong>¬°PDF cargado correctamente!</strong><br/>
                                Dimensiones detectadas: <field name="pdf_width" readonly="1"/> x <field name="pdf_height" readonly="1"/> p√≠xeles<br/>
                                Ahora puedes ir a la pesta√±a <strong>"Campos de Texto"</strong> para agregar campos personalizados.
                            </div>
                        </page>

                        <page string="‚úèÔ∏è Campos de Texto" name="fields">
                            <div class="alert alert-info" role="alert" style="margin-bottom: 15px;" attrs="{'invisible': [('sample_pdf', '!=', False)]}">
                                <i class="fa fa-warning"/> <strong>Primero debes cargar un PDF de ejemplo</strong><br/>
                                Ve a la pesta√±a <strong>"PDF Ejemplo"</strong> y sube una etiqueta ML antes de agregar campos.
                            </div>

                            <div class="alert alert-success" role="alert" style="margin-bottom: 15px;" attrs="{'invisible': [('sample_pdf', '=', False)]}">
                                <strong><i class="fa fa-lightbulb-o"/> Instrucciones:</strong>
                                <ul class="mb-0">
                                    <li>Haz clic en <strong>"Agregar una l√≠nea"</strong> para crear un nuevo campo</li>
                                    <li>Configura el <strong>tipo</strong>: Est√°tico (texto fijo) o Din√°mico (con variables)</li>
                                    <li>Define la <strong>posici√≥n X,Y</strong> en p√≠xeles (puedes ajustar despu√©s)</li>
                                    <li>Personaliza el <strong>estilo</strong>: fuente, tama√±o, color</li>
                                    <li>Usa el bot√≥n <strong>"Abrir Editor Visual"</strong> arriba para ver el resultado en tiempo real</li>
                                </ul>
                            </div>

                            <field name="field_ids">
                                <tree editable="bottom" decoration-muted="active == False">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" required="1"/>
                                    <field name="field_type" required="1"/>
                                    <field name="value" required="1"/>
                                    <field name="position_x" required="1"/>
                                    <field name="position_y" required="1"/>
                                    <field name="font_size"/>
                                    <field name="font_family"/>
                                    <field name="color" widget="color"/>
                                    <field name="rotation" optional="hide"/>
                                    <field name="align"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group string="üìù Informaci√≥n B√°sica">
                                                <field name="name" placeholder="Ej: N√∫mero de Orden"/>
                                                <field name="field_type"/>
                                                <field name="value" placeholder="Ej: ${sale_order.name} o texto fijo"
                                                       widget="text"/>
                                                <field name="active"/>
                                            </group>
                                            <group string="‚öôÔ∏è Configuraci√≥n">
                                                <field name="sequence"/>
                                                <field name="template_pdf_width" invisible="1"/>
                                                <field name="template_pdf_height" invisible="1"/>
                                                <div class="alert alert-info" role="alert" style="margin-top: 10px;">
                                                    <small>
                                                        <strong>Tipo de campo:</strong><br/>
                                                        ‚Ä¢ <strong>Est√°tico:</strong> Texto fijo que siempre ser√° igual<br/>
                                                        ‚Ä¢ <strong>Din√°mico:</strong> Usa variables que cambian por cada orden
                                                    </small>
                                                </div>
                                            </group>
                                        </group>

                                        <group string="üìç Posici√≥n en la Etiqueta">
                                            <group>
                                                <label for="position_x" string="Coordenadas (X, Y)"/>
                                                <div class="o_row">
                                                    <field name="position_x" placeholder="100"/> px (horizontal)
                                                </div>
                                                <div class="o_row">
                                                    <field name="position_y" placeholder="200"/> px (vertical)
                                                </div>
                                            </group>
                                            <group>
                                                <div class="alert alert-warning" role="alert">
                                                    <i class="fa fa-info-circle"/> Las coordenadas son desde la <strong>esquina superior izquierda</strong> del PDF.<br/><br/>
                                                    <strong>Tip:</strong> Empieza con valores aproximados y aj√∫stalos viendo la vista previa.
                                                </div>
                                            </group>
                                        </group>

                                        <group string="üé® Estilo del Texto">
                                            <group>
                                                <field name="font_family"/>
                                                <field name="font_size" placeholder="12"/>
                                                <field name="color" widget="color"/>
                                            </group>
                                            <group>
                                                <field name="rotation" placeholder="0"/>
                                                <field name="align"/>
                                                <div class="alert alert-info" role="alert" style="margin-top: 10px;">
                                                    <small>
                                                        <strong>Rotaci√≥n:</strong> 0¬∞ = horizontal, 90¬∞ = vertical<br/>
                                                        <strong>Alineaci√≥n:</strong> para textos largos
                                                    </small>
                                                </div>
                                            </group>
                                        </group>

                                        <group string="üí° Variables Din√°micas Disponibles" attrs="{'invisible': [('field_type', '!=', 'dynamic')]}">
                                            <div class="alert alert-success" role="alert">
                                                <p><strong>Copia y pega estas variables en el campo "Valor":</strong></p>
                                                <table class="table table-sm" style="margin-bottom: 0;">
                                                    <tr>
                                                        <td><code>${sale_order.name}</code></td>
                                                        <td>N√∫mero de orden (Ej: SO001)</td>
                                                    </tr>
                                                    <tr>
                                                        <td><code>${sale_order.partner_id.name}</code></td>
                                                        <td>Nombre del cliente</td>
                                                    </tr>
                                                    <tr>
                                                        <td><code>${sale_order.partner_id.phone}</code></td>
                                                        <td>Tel√©fono del cliente</td>
                                                    </tr>
                                                    <tr>
                                                        <td><code>${ml_order.ml_order_id}</code></td>
                                                        <td>ID de orden MercadoLibre</td>
                                                    </tr>
                                                    <tr>
                                                        <td><code>${ml_order.ml_pack_id}</code></td>
                                                        <td>Pack ID de ML</td>
                                                    </tr>
                                                    <tr>
                                                        <td><code>${today}</code></td>
                                                        <td>Fecha de hoy</td>
                                                    </tr>
                                                    <tr>
                                                        <td><code>${company.name}</code></td>
                                                        <td>Nombre de tu empresa</td>
                                                    </tr>
                                                </table>
                                                <p style="margin-top: 10px; margin-bottom: 0;">
                                                    <strong>Ejemplo:</strong> <code>Orden: ${sale_order.name}</code>
                                                </p>
                                            </div>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>

                        <page string="Descripci√≥n" name="description">
                            <field name="description" placeholder="Notas sobre esta plantilla..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ml_label_template_kanban" model="ir.ui.view">
        <field name="name">ml.label.template.kanban</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="field_count"/>
                <field name="usage_count"/>
                <field name="preview_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('ml.label.template', 'preview_image', record.id.raw_value)"
                                     alt="Preview" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge badge-pill badge-info">
                                        <i class="fa fa-font"/> <field name="field_count"/> campos
                                    </span>
                                    <span class="badge badge-pill badge-success">
                                        <i class="fa fa-shopping-cart"/> <field name="usage_count"/> usos
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ml_label_template_search" model="ir.ui.view">
        <field name="name">ml.label.template.search</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <search string="Plantillas de Etiqueta">
                <field name="name"/>
                <field name="description"/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Compa√±√≠a" name="company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ml_label_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Etiqueta</field>
        <field name="res_model">ml.label.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una Plantilla de Etiqueta
            </p>
            <p>
                Las plantillas permiten personalizar las etiquetas de MercadoLibre
                agregando informaci√≥n adicional como n√∫mero de orden, cliente, etc.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ml_label_template"
              name="Plantillas de Etiqueta"
              parent="mercadolibre_sales.menu_mercadolibre_sales_config"
              action="action_ml_label_template"
              sequence="50"/>

</odoo>
