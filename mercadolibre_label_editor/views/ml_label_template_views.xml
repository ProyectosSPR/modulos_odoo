<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_ml_label_template_tree" model="ir.ui.view">
        <field name="name">ml.label.template.tree</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <tree string="Plantillas de Etiqueta">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="field_count"/>
                <field name="usage_count"/>
                <field name="pdf_width"/>
                <field name="pdf_height"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ml_label_template_form" model="ir.ui.view">
        <field name="name">ml.label.template.form</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Etiqueta">
                <header>
                    <button name="action_open_editor" string="Abrir Editor Visual"
                            type="object" class="oe_highlight" icon="fa-edit"/>
                    <button name="action_preview_with_sample_data" string="Vista Previa"
                            type="object" class="btn-secondary" icon="fa-eye"/>
                    <button name="action_duplicate_template" string="Duplicar"
                            type="object" class="btn-secondary" icon="fa-copy"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_usage" type="object"
                                class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="usage_count" widget="statinfo" string="Usos"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archivado" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nombre de la plantilla..."/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="field_count"/>
                        </group>
                        <group>
                            <field name="pdf_width" readonly="1"/>
                            <field name="pdf_height" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="游늯 PDF Ejemplo" name="pdf_sample">
                            <div class="alert alert-warning" role="alert" style="margin: 20px 0;">
                                <h5 style="margin-top: 0;"><i class="fa fa-info-circle"/> 쮺칩mo empezar?</h5>
                                <ol style="margin-bottom: 0; padding-left: 20px;">
                                    <li style="margin-bottom: 8px;"><strong>Descarga una etiqueta ML de ejemplo</strong> desde MercadoLibre</li>
                                    <li style="margin-bottom: 8px;"><strong>S칰bela aqu칤 abajo</strong> usando el bot칩n "Seleccionar archivo"</li>
                                    <li style="margin-bottom: 8px;">El sistema detectar치 autom치ticamente las dimensiones</li>
                                    <li style="margin-bottom: 0;">Luego ve a la pesta침a <strong>"Campos de Texto"</strong> para agregar informaci칩n personalizada</li>
                                </ol>
                            </div>

                            <separator string="Paso 1: Cargar PDF de Etiqueta MercadoLibre"/>
                            <group>
                                <field name="sample_pdf" filename="sample_pdf_filename" widget="binary"/>
                                <field name="sample_pdf_filename" invisible="1"/>
                            </group>

                            <separator string="Paso 2: Vista Previa del PDF" attrs="{'invisible': [('sample_pdf', '=', False)]}"/>
                            <div attrs="{'invisible': [('sample_pdf', '=', False)]}" style="text-align: center; padding: 20px;">
                                <field name="preview_image" widget="image" nolabel="1"
                                       options="{'size': [600, 800]}" style="max-width: 100%; height: auto;"/>
                            </div>

                            <div class="alert alert-success" role="alert" attrs="{'invisible': [('sample_pdf', '=', False)]}" style="margin: 20px 0;">
                                <p style="margin: 0;">
                                    <i class="fa fa-check-circle"/> <strong>춰PDF cargado correctamente!</strong><br/>
                                    <strong>Dimensiones:</strong> <field name="pdf_width" readonly="1" class="oe_inline"/> x <field name="pdf_height" readonly="1" class="oe_inline"/> p칤xeles<br/>
                                    <br/>
                                    <strong>Siguiente paso:</strong> Ve a la pesta침a <strong>"Campos de Texto"</strong> para agregar campos personalizados.
                                </p>
                            </div>
                        </page>

                        <page string="九勇 Campos de Texto" name="fields">
                            <div class="alert alert-info" role="alert" style="margin: 20px 0;" attrs="{'invisible': [('sample_pdf', '!=', False)]}">
                                <p style="margin: 0;">
                                    <i class="fa fa-warning"/> <strong>Primero debes cargar un PDF de ejemplo</strong><br/>
                                    Ve a la pesta침a <strong>"PDF Ejemplo"</strong> y sube una etiqueta ML antes de agregar campos.
                                </p>
                            </div>

                            <div class="alert alert-success" role="alert" style="margin: 20px 0;" attrs="{'invisible': [('sample_pdf', '=', False)]}">
                                <p style="margin-top: 0;"><strong><i class="fa fa-lightbulb-o"/> Instrucciones:</strong></p>
                                <ul style="margin-bottom: 0; padding-left: 20px;">
                                    <li style="margin-bottom: 5px;">Haz clic en <strong>"Agregar una l칤nea"</strong> para crear un nuevo campo</li>
                                    <li style="margin-bottom: 5px;">Configura el <strong>tipo</strong>: Est치tico (texto fijo) o Din치mico (con variables)</li>
                                    <li style="margin-bottom: 5px;">Define la <strong>posici칩n X,Y</strong> en p칤xeles (puedes ajustar despu칠s)</li>
                                    <li style="margin-bottom: 5px;">Personaliza el <strong>estilo</strong>: fuente, tama침o, color</li>
                                    <li style="margin-bottom: 0;">Usa el bot칩n <strong>"Abrir Editor Visual"</strong> arriba para ver el resultado</li>
                                </ul>
                            </div>

                            <field name="field_ids">
                                <tree editable="bottom" decoration-muted="active == False">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" required="1"/>
                                    <field name="field_type" required="1"/>
                                    <field name="value" required="1"/>
                                    <field name="position_x" required="1"/>
                                    <field name="position_y" required="1"/>
                                    <field name="font_size"/>
                                    <field name="font_family"/>
                                    <field name="color" widget="color"/>
                                    <field name="rotation" optional="hide"/>
                                    <field name="align"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name" placeholder="Ej: N칰mero de Orden"/>
                                            <field name="field_type"/>
                                            <field name="value" placeholder="Ej: ${sale_order.name}"
                                                   widget="text"/>
                                            <field name="active"/>
                                        </group>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="template_pdf_width" invisible="1"/>
                                            <field name="template_pdf_height" invisible="1"/>
                                        </group>
                                    </group>

                                    <group string="Posici칩n">
                                        <group>
                                            <field name="position_x" placeholder="100"/>
                                            <field name="position_y" placeholder="200"/>
                                        </group>
                                        <group>
                                            <p class="text-muted">
                                                Coordenadas en p칤xeles desde la esquina superior izquierda del PDF.
                                            </p>
                                        </group>
                                    </group>

                                    <group string="Estilo">
                                        <group>
                                            <field name="font_family"/>
                                            <field name="font_size" placeholder="12"/>
                                            <field name="color" widget="color"/>
                                        </group>
                                        <group>
                                            <field name="rotation" placeholder="0"/>
                                            <field name="align"/>
                                        </group>
                                    </group>

                                    <separator string="Variables Disponibles (para campos din치micos)" attrs="{'invisible': [('field_type', '!=', 'dynamic')]}"/>
                                    <div attrs="{'invisible': [('field_type', '!=', 'dynamic')]}">
                                        <p style="margin: 10px 0;"><strong>Copia y pega estas variables:</strong></p>
                                        <ul style="list-style: none; padding-left: 0; margin: 10px 20px;">
                                            <li style="margin-bottom: 5px;"><code>${sale_order.name}</code> - N칰mero de orden</li>
                                            <li style="margin-bottom: 5px;"><code>${sale_order.partner_id.name}</code> - Cliente</li>
                                            <li style="margin-bottom: 5px;"><code>${sale_order.partner_id.phone}</code> - Tel칠fono</li>
                                            <li style="margin-bottom: 5px;"><code>${ml_order.ml_order_id}</code> - ID ML</li>
                                            <li style="margin-bottom: 5px;"><code>${ml_order.ml_pack_id}</code> - Pack ID</li>
                                            <li style="margin-bottom: 5px;"><code>${today}</code> - Fecha</li>
                                            <li style="margin-bottom: 0;"><code>${company.name}</code> - Empresa</li>
                                        </ul>
                                    </div>
                                </form>
                            </field>
                        </page>

                        <page string="Descripci칩n" name="description">
                            <field name="description" placeholder="Notas sobre esta plantilla..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ml_label_template_kanban" model="ir.ui.view">
        <field name="name">ml.label.template.kanban</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="field_count"/>
                <field name="usage_count"/>
                <field name="preview_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('ml.label.template', 'preview_image', record.id.raw_value)"
                                     alt="Preview" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge badge-pill badge-info">
                                        <i class="fa fa-font"/> <field name="field_count"/> campos
                                    </span>
                                    <span class="badge badge-pill badge-success">
                                        <i class="fa fa-shopping-cart"/> <field name="usage_count"/> usos
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ml_label_template_search" model="ir.ui.view">
        <field name="name">ml.label.template.search</field>
        <field name="model">ml.label.template</field>
        <field name="arch" type="xml">
            <search string="Plantillas de Etiqueta">
                <field name="name"/>
                <field name="description"/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivadas" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Compa침칤a" name="company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ml_label_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Etiqueta</field>
        <field name="res_model">ml.label.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una Plantilla de Etiqueta
            </p>
            <p>
                Las plantillas permiten personalizar las etiquetas de MercadoLibre
                agregando informaci칩n adicional como n칰mero de orden, cliente, etc.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ml_label_template"
              name="Plantillas de Etiqueta"
              parent="mercadolibre_sales.menu_mercadolibre_sales_config"
              action="action_ml_label_template"
              sequence="50"/>

</odoo>
