<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categoría de seguridad -->
        <record id="module_category_mercadolibre_label_editor" model="ir.module.category">
            <field name="name">MercadoLibre Label Editor</field>
            <field name="description">Gestión de plantillas de etiquetas ML</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupo: Usuario -->
        <record id="group_ml_label_user" model="res.groups">
            <field name="name">Usuario de Etiquetas ML</field>
            <field name="category_id" ref="module_category_mercadolibre_label_editor"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo: Manager -->
        <record id="group_ml_label_manager" model="res.groups">
            <field name="name">Administrador de Etiquetas ML</field>
            <field name="category_id" ref="module_category_mercadolibre_label_editor"/>
            <field name="implied_ids" eval="[(4, ref('group_ml_label_user'))]"/>
        </record>

        <!-- Multi-company rules -->
        <record id="ml_label_template_comp_rule" model="ir.rule">
            <field name="name">ML Label Template Multi-Company</field>
            <field name="model_id" ref="model_ml_label_template"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="global" eval="True"/>
        </record>

    </data>
</odoo>
