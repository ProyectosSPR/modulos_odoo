<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Cron para sincronizar envios automaticamente -->
    <record id="ir_cron_sync_shipments" model="ir.cron">
        <field name="name">MercadoLibre: Sincronizar Envios</field>
        <field name="model_id" ref="model_mercadolibre_shipment"/>
        <field name="state">code</field>
        <field name="code">model._cron_sync_shipments()</field>
        <field name="interval_number">2</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">False</field>
        <field name="doall">False</field>
    </record>

</odoo>
