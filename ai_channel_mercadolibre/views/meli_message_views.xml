<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- MercadoLibre Message Log Form View -->
    <record id="view_meli_message_log_form" model="ir.ui.view">
        <field name="name">ai.meli.message.log.form</field>
        <field name="model">ai.meli.message.log</field>
        <field name="arch" type="xml">
            <form string="Message Log" create="0">
                <header>
                    <button name="action_retry_ai" type="object" string="Retry AI Processing"
                            class="btn-primary"
                            attrs="{'invisible': ['|', ('direction', '=', 'out'), ('ai_processed', '=', True)]}"/>
                    <button name="action_view_conversation" type="object" string="View Full Conversation"
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <group string="Message Info">
                            <field name="config_id"/>
                            <field name="meli_message_id"/>
                            <field name="direction" widget="badge"
                                   decoration-info="direction == 'in'"
                                   decoration-success="direction == 'out'"/>
                            <field name="create_date"/>
                        </group>
                        <group string="Sender">
                            <field name="sender_id"/>
                            <field name="sender_name"/>
                            <field name="pack_id"/>
                            <field name="resource_id"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" nolabel="1" colspan="2"/>
                    </group>
                    <group string="AI Processing" attrs="{'invisible': [('direction', '=', 'out')]}">
                        <group>
                            <field name="ai_processed"/>
                            <field name="ai_response_id"/>
                        </group>
                        <group>
                            <field name="error_message" attrs="{'invisible': [('error_message', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attachments" name="attachments"
                              attrs="{'invisible': [('attachments', '=', '[]')]}">
                            <field name="attachments" widget="text"/>
                        </page>
                        <page string="Raw Data" name="raw_data">
                            <field name="raw_data" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- MercadoLibre Message Log Tree View -->
    <record id="view_meli_message_log_tree" model="ir.ui.view">
        <field name="name">ai.meli.message.log.tree</field>
        <field name="model">ai.meli.message.log</field>
        <field name="arch" type="xml">
            <tree string="Message Logs" create="0" default_order="create_date desc">
                <field name="create_date"/>
                <field name="config_id"/>
                <field name="direction" widget="badge"
                       decoration-info="direction == 'in'"
                       decoration-success="direction == 'out'"/>
                <field name="sender_name"/>
                <field name="content" widget="text"/>
                <field name="ai_processed" widget="boolean"/>
                <field name="pack_id"/>
            </tree>
        </field>
    </record>

    <!-- MercadoLibre Message Log Search View -->
    <record id="view_meli_message_log_search" model="ir.ui.view">
        <field name="name">ai.meli.message.log.search</field>
        <field name="model">ai.meli.message.log</field>
        <field name="arch" type="xml">
            <search string="Search Messages">
                <field name="content"/>
                <field name="sender_name"/>
                <field name="sender_id"/>
                <field name="pack_id"/>
                <field name="config_id"/>
                <filter name="incoming" string="Incoming"
                        domain="[('direction', '=', 'in')]"/>
                <filter name="outgoing" string="Outgoing"
                        domain="[('direction', '=', 'out')]"/>
                <separator/>
                <filter name="ai_processed" string="AI Processed"
                        domain="[('ai_processed', '=', True)]"/>
                <filter name="not_processed" string="Not Processed"
                        domain="[('ai_processed', '=', False), ('direction', '=', 'in')]"/>
                <filter name="has_error" string="Has Error"
                        domain="[('error_message', '!=', False)]"/>
                <separator/>
                <filter name="today" string="Today"
                        domain="[('create_date', '>=', time.strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                <filter name="this_week" string="This Week"
                        domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_config" string="Configuration"
                            context="{'group_by': 'config_id'}"/>
                    <filter name="group_direction" string="Direction"
                            context="{'group_by': 'direction'}"/>
                    <filter name="group_sender" string="Sender"
                            context="{'group_by': 'sender_name'}"/>
                    <filter name="group_date" string="Date"
                            context="{'group_by': 'create_date:day'}"/>
                    <filter name="group_pack" string="Conversation"
                            context="{'group_by': 'pack_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- MercadoLibre Message Log Action -->
    <record id="action_meli_message_log" model="ir.actions.act_window">
        <field name="name">Message Logs</field>
        <field name="res_model">ai.meli.message.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No messages yet
            </p>
            <p>
                Messages from MercadoLibre will appear here once you connect
                your account and start receiving customer inquiries.
            </p>
        </field>
    </record>

    <!-- Incoming Messages Action -->
    <record id="action_meli_message_incoming" model="ir.actions.act_window">
        <field name="name">Incoming Messages</field>
        <field name="res_model">ai.meli.message.log</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('direction', '=', 'in')]</field>
        <field name="context">{'search_default_today': 1, 'search_default_not_processed': 1}</field>
    </record>
</odoo>
