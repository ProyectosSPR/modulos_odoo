<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_px_quotation_response_form" model="ir.ui.view">
        <field name="name">px.quotation.response.form</field>
        <field name="model">px.quotation.response</field>
        <field name="arch" type="xml">
            <form string="Quotation Response">
                <sheet>
                    <group>
                        <group>
                            <field name="client_id" readonly="1"/>
                            <field name="client_dest" readonly="1"/>
                        </group>
                        <group>
                            <field name="clnt_clasif_tarif" readonly="1"/>
                            <field name="agreement_type" readonly="1"/>
                            <field name="pymt_mode" readonly="1"/>
                        </group>
                    </group>
                    <group string="Origin Address">
                        <group>
                            <field name="client_addr_orig_colony_name" readonly="1"/>
                            <field name="client_addr_orig_zip_code" readonly="1"/>
                        </group>
                        <group>
                            <field name="client_addr_orig_branch" readonly="1"/>
                            <field name="client_addr_orig_zone" readonly="1"/>
                            <field name="client_addr_orig_ol" readonly="1"/>
                        </group>
                    </group>
                    <group string="Destination Address">
                        <group>
                            <field name="client_addr_dest_colony_name" readonly="1"/>
                            <field name="client_addr_dest_zip_code" readonly="1"/>
                        </group>
                        <group>
                            <field name="client_addr_dest_branch" readonly="1"/>
                            <field name="client_addr_dest_zone" readonly="1"/>
                            <field name="client_addr_dest_ol" readonly="1"/>
                        </group>
                    </group>
                    <field name="quote_services" readonly="1" nolabel="1">
                        <tree>
                            <field name="service_type" readonly="1" optional="hide"/>
                            <field name="service_id" readonly="1"/>
                            <field name="service_id_ref" readonly="1" optional="hide"/>
                            <field name="service_name" readonly="1" optional="hide"/>
                            <field name="service_info_descr" readonly="1"/>
                            <field name="service_info_descr_long" readonly="1" optional="hide"/>
                            <field name="cutoff_date_time" readonly="1" optional="hide"/>
                            <field name="cutoff_time" readonly="1" optional="hide"/>
                            <field name="max_rad_time" readonly="1" optional="hide"/>
                            <field name="max_bok_time" readonly="1" optional="hide"/>
                            <field name="on_time" readonly="1" optional="hide"/>
                            <field name="promise_date" readonly="1"/>
                            <field name="promise_date_days_qty" readonly="1" optional="hide"/>
                            <field name="promise_date_hours_qty" readonly="1" optional="hide"/>
                            <field name="in_offer" readonly="1"/>
                        </tree>
                    </field>

                    <footer>
                        <button string="Aceptar" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
