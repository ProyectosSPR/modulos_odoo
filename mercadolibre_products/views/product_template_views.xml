<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extender vista de product.template -->
    <record id="view_product_template_form_ml" model="ir.ui.view">
        <field name="name">product.template.form.ml</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Agregar botones en button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_ml_items" type="object"
                        class="oe_stat_button" icon="fa-shopping-cart"
                        attrs="{'invisible': [('ml_item_count', '=', 0)]}">
                    <field name="ml_item_count" widget="statinfo" string="Items ML"/>
                </button>
                <button name="action_view_ml_images" type="object"
                        class="oe_stat_button" icon="fa-image"
                        attrs="{'invisible': [('ml_image_count', '=', 0)]}">
                    <field name="ml_image_count" widget="statinfo" string="Imgs ML"/>
                </button>
            </xpath>

            <!-- Agregar pestana MercadoLibre -->
            <xpath expr="//notebook" position="inside">
                <page string="MercadoLibre" name="mercadolibre">
                    <!-- Campos invisibles para attrs -->
                    <field name="has_ml_items" invisible="1"/>
                    <field name="ml_fields_ready" invisible="1"/>
                    <field name="ml_missing_fields_count" invisible="1"/>
                    <field name="ml_category_is_leaf" invisible="1"/>

                    <!-- CHECKLIST: Campos usados para publicar en MercadoLibre -->
                    <group string="游늶 Campos para Publicaci칩n en MercadoLibre"
                           attrs="{'invisible': [('has_ml_items', '=', True)]}">
                        <field name="ml_publish_readiness" nolabel="1" colspan="2"/>
                    </group>

                    <!-- Campos espec칤ficos para MercadoLibre -->
                    <group>
                        <group string="Datos del Producto">
                            <field name="ml_brand" placeholder="Ej: Samsung, Apple, Gen칠rico"/>
                            <field name="ml_model" placeholder="Ej: Galaxy S21, iPhone 13"/>
                        </group>
                        <group string="Configuraci칩n de Publicaci칩n">
                            <field name="ml_category_id"
                                   domain="[('has_children', '=', False), ('listing_allowed', '=', True)]"
                                   options="{'no_create': True}"
                                   context="{'show_leaf_only': True}"/>
                            <field name="ml_listing_type"/>
                            <field name="ml_condition"/>
                        </group>
                    </group>

                    <!-- Predicci칩n de Categor칤a ML -->
                    <field name="ml_category_matches_prediction" invisible="1"/>
                    <group string="游댩 Predicci칩n de Categor칤a ML">
                        <group>
                            <button name="action_predict_category" type="object"
                                    string=" Consultar ML" icon="fa-magic"
                                    class="btn-info o_form_button"
                                    help="Consulta a MercadoLibre cu치l es la categor칤a m치s apropiada para este producto"/>
                        </group>
                        <group>
                            <field name="ml_predicted_category_name" readonly="1"
                                   placeholder="Haz clic en 'Consultar ML'"/>
                            <field name="ml_predicted_category_id" readonly="1" string="ID ML"/>
                        </group>
                    </group>

                    <!-- Bot칩n para aplicar categor칤a sugerida -->
                    <div class="alert alert-warning" role="alert"
                         attrs="{'invisible': ['|', ('ml_predicted_category_id', '=', False), ('ml_category_matches_prediction', '=', True)]}">
                        <i class="fa fa-exclamation-triangle"/>
                        <strong> La categor칤a seleccionada no coincide con la sugerida por ML.</strong>
                        <br/>
                        <small>Esto puede causar que MercadoLibre pause tu publicaci칩n.</small>
                        <br/>
                        <button name="action_apply_predicted_category" type="object"
                                string=" Usar Categor칤a Sugerida" icon="fa-check"
                                class="btn btn-sm btn-primary mt-2"/>
                    </div>

                    <!-- Advertencia: Categor칤a no es hoja -->
                    <div class="alert alert-danger" role="alert"
                         attrs="{'invisible': ['|', ('ml_category_id', '=', False), ('ml_category_is_leaf', '=', True)]}">
                        <i class="fa fa-exclamation-triangle"/>
                        <strong> Categor칤a No V치lida:</strong>
                        La categor칤a seleccionada tiene subcategor칤as y no puede usarse para publicar.
                        <br/>
                        <small>MercadoLibre solo permite publicar en categor칤as "hoja" (sin subcategor칤as).
                        Por favor seleccione una categor칤a m치s espec칤fica.</small>
                    </div>

                    <group>
                        <group string="Env칤o">
                            <field name="ml_shipping_mode"/>
                            <field name="ml_free_shipping"/>
                            <field name="ml_local_pick_up"/>
                        </group>
                        <group string="Garant칤a">
                            <field name="ml_warranty_type"/>
                            <field name="ml_warranty_time"
                                   attrs="{'invisible': [('ml_warranty_type', '=', 'Sin garant칤a')]}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Sincronizaci칩n Autom치tica">
                            <field name="ml_sync_enabled"/>
                            <field name="ml_auto_sync_stock"
                                   attrs="{'invisible': [('ml_sync_enabled', '=', False)]}"/>
                            <field name="ml_auto_sync_price"
                                   attrs="{'invisible': [('ml_sync_enabled', '=', False)]}"/>
                            <field name="ml_last_sync" readonly="1"/>
                        </group>
                        <group string="Stock MercadoLibre"
                               attrs="{'invisible': [('has_ml_items', '=', False)]}">
                            <field name="ml_total_stock" readonly="1"/>
                            <field name="ml_stock_difference" readonly="1"
                                   decoration-danger="ml_stock_difference != 0"/>
                            <field name="ml_stock_alert" invisible="1"/>
                        </group>
                    </group>

                    <div class="alert alert-warning" role="alert"
                         attrs="{'invisible': ['|', ('has_ml_items', '=', False), ('ml_stock_alert', '=', False)]}">
                        <strong>Alerta de Stock:</strong>
                        Hay una diferencia de stock entre Odoo y MercadoLibre.
                        <button name="action_sync_to_ml" type="object"
                                class="btn btn-sm btn-primary ml-2">
                            Sincronizar Stock a ML
                        </button>
                    </div>

                    <!-- Acciones cuando YA tiene publicaciones -->
                    <group string="Acciones R치pidas" attrs="{'invisible': [('has_ml_items', '=', False)]}">
                        <group>
                            <button name="action_sync_to_ml" type="object"
                                    string=" Enviar Stock/Precio a ML" icon="fa-upload"
                                    class="btn-primary oe_highlight o_form_button" style="margin-bottom: 8px;"/>
                        </group>
                        <group>
                            <button name="action_sync_from_ml" type="object"
                                    string=" Actualizar desde ML" icon="fa-download"
                                    class="btn-secondary o_form_button" style="margin-bottom: 8px;"/>
                        </group>
                    </group>

                    <!-- Acciones cuando NO tiene publicaciones -->
                    <group string="Publicar en MercadoLibre" attrs="{'invisible': [('has_ml_items', '=', True)]}">
                        <group>
                            <button name="action_publish_to_ml" type="object"
                                    string=" Crear Nueva Publicaci칩n" icon="fa-plus"
                                    class="btn-primary oe_highlight o_form_button" style="margin-bottom: 8px;"/>
                        </group>
                        <group>
                            <button name="action_link_ml_item" type="object"
                                    string=" Vincular a Publicaci칩n Existente" icon="fa-link"
                                    class="btn-secondary o_form_button" style="margin-bottom: 8px;"/>
                        </group>
                    </group>

                    <!-- Acci칩n de im치genes (siempre visible) -->
                    <field name="ml_has_uploaded_images" invisible="1"/>
                    <group string="Im치genes">
                        <group>
                            <button name="action_upload_images_to_ml" type="object"
                                    string=" Subir Im치genes a MercadoLibre" icon="fa-image"
                                    class="btn-info o_form_button"/>
                        </group>
                        <group attrs="{'invisible': [('ml_has_uploaded_images', '=', False)]}">
                            <button name="action_view_ml_images" type="object"
                                    string=" Ver Im치genes Subidas" icon="fa-picture-o"
                                    class="btn-outline-secondary o_form_button"/>
                        </group>
                    </group>

                    <group string="Publicaciones Vinculadas"
                           attrs="{'invisible': [('has_ml_items', '=', False)]}">
                        <field name="ml_item_ids" nolabel="1">
                            <tree>
                                <field name="ml_item_id"/>
                                <field name="title"/>
                                <field name="price"/>
                                <field name="available_quantity"/>
                                <field name="status" widget="badge"/>
                                <field name="account_id"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Vista tree extendida -->
    <record id="view_product_template_tree_ml" model="ir.ui.view">
        <field name="name">product.template.tree.ml</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_available']" position="after">
                <field name="ml_total_stock" optional="hide" string="Stock ML"/>
                <field name="ml_item_count" optional="hide" string="Pubs ML"/>
            </xpath>
        </field>
    </record>

    <!-- Filtros de busqueda -->
    <record id="view_product_template_search_ml" model="ir.ui.view">
        <field name="name">product.template.search.ml</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <filter string="Con Publicaciones ML" name="with_ml_items"
                        domain="[('has_ml_items', '=', True)]"/>
                <filter string="Sin Publicaciones ML" name="without_ml_items"
                        domain="[('has_ml_items', '=', False)]"/>
                <filter string="Alerta Stock ML" name="ml_stock_alert"
                        domain="[('ml_stock_alert', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <!-- Server Action: Sincronizar a ML -->
    <record id="action_server_product_sync_to_ml" model="ir.actions.server">
        <field name="name">Sincronizar a MercadoLibre</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
action = records.action_sync_to_ml_batch()
        </field>
    </record>

    <!-- Server Action: Traer de ML -->
    <record id="action_server_product_sync_from_ml" model="ir.actions.server">
        <field name="name">Actualizar desde MercadoLibre</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
action = records.action_sync_from_ml_batch()
        </field>
    </record>

    <!-- Server Action: Publicaci칩n Masiva en ML -->
    <record id="action_server_publish_massive_ml" model="ir.actions.server">
        <field name="name">Publicar en MercadoLibre (Masivo)</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'Publicaci칩n Masiva en MercadoLibre',
    'res_model': 'mercadolibre.publish.massive',
    'view_mode': 'form',
    'target': 'new',
    'context': {
        'default_product_tmpl_ids': records.ids,
    },
}
        </field>
    </record>

    <!-- Server Action: Sincronizaci칩n Bidireccional ML -->
    <record id="action_server_sync_bidirectional_ml" model="ir.actions.server">
        <field name="name">Sincronizaci칩n Bidireccional ML</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'name': 'Sincronizaci칩n Bidireccional con MercadoLibre',
    'res_model': 'mercadolibre.sync.wizard',
    'view_mode': 'form',
    'target': 'new',
    'context': {
        'default_product_tmpl_ids': records.ids,
    },
}
        </field>
    </record>
</odoo>
