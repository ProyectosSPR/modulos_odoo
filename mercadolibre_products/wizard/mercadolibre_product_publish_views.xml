<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_mercadolibre_product_publish_form" model="ir.ui.view">
        <field name="name">mercadolibre.product.publish.form</field>
        <field name="model">mercadolibre.product.publish</field>
        <field name="arch" type="xml">
            <form string="Publicar en MercadoLibre">
                <!-- Estado: Configuracion -->
                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Cuenta y Productos">
                        <field name="account_id"/>
                        <field name="site_id"/>
                        <field name="product_tmpl_ids" widget="many2many_tags"/>
                        <field name="product_count"/>
                    </group>
                    <group string="Tipo de Publicacion">
                        <field name="listing_type_id"/>
                        <field name="condition"/>
                        <field name="buying_mode"/>
                        <button name="action_check_listing_types" type="object"
                                string="Verificar Tipos Disponibles" icon="fa-search"
                                class="btn-link"
                                attrs="{'invisible': [('category_id', '=', False)]}"/>
                        <field name="available_listing_types" readonly="1" nolabel="1"
                               attrs="{'invisible': [('available_listing_types', '=', False)]}"
                               style="font-family: monospace; white-space: pre-wrap;"/>
                    </group>
                </group>

                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Categoria MercadoLibre">
                        <field name="category_level_1"
                               options="{'no_create': True, 'no_quick_create': True}"/>
                        <field name="has_level_2" invisible="1"/>
                        <field name="category_level_2"
                               attrs="{'invisible': [('has_level_2', '=', False)]}"
                               options="{'no_create': True, 'no_quick_create': True}"/>
                        <field name="has_level_3" invisible="1"/>
                        <field name="category_level_3"
                               attrs="{'invisible': [('has_level_3', '=', False)]}"
                               options="{'no_create': True, 'no_quick_create': True}"/>
                    </group>
                    <group string="Categoria Seleccionada"
                           attrs="{'invisible': [('category_id', '=', False)]}">
                        <field name="category_id" readonly="1" options="{'no_open': True}"/>
                        <field name="ml_category_id" readonly="1"/>
                        <field name="category_path" readonly="1"/>
                    </group>
                </group>

                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Precio">
                        <field name="use_product_price"/>
                        <field name="custom_price"
                               attrs="{'invisible': [('use_product_price', '=', True)]}"/>
                    </group>
                    <group string="Stock">
                        <field name="use_product_stock"/>
                        <field name="custom_stock"
                               attrs="{'invisible': [('use_product_stock', '=', True)]}"/>
                    </group>
                </group>

                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="SKU y Código de Barras">
                        <field name="sku_field"/>
                        <field name="custom_sku"
                               attrs="{'invisible': [('sku_field', '!=', 'custom')]}"/>
                        <field name="use_barcode_as_gtin"/>
                    </group>
                    <group string="Marca y Modelo">
                        <div class="alert alert-info py-2" role="alert" colspan="2">
                            <i class="fa fa-info-circle"/>
                            <strong>Marca y Modelo</strong> se toman de los campos
                            <em>Marca ML</em> y <em>Modelo ML</em> del producto.
                            <br/>Si están vacíos se usará "Genérico" y la Referencia Interna.
                        </div>
                    </group>
                </group>

                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Envío">
                        <field name="shipping_mode"/>
                        <field name="free_shipping"/>
                        <field name="local_pick_up"/>
                    </group>
                    <group string="Garantía">
                        <field name="warranty_type"/>
                        <field name="warranty_time"
                               attrs="{'invisible': [('warranty_type', '=', 'Sin garantía')]}"/>
                    </group>
                </group>

                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Preparación">
                        <field name="manufacturing_time"/>
                    </group>
                    <group/>
                </group>

                <group attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <group string="Imagenes" colspan="2">
                        <field name="image_source" widget="radio"/>
                        <field name="custom_image_urls"
                               placeholder="https://ejemplo.com/imagen1.jpg&#10;https://ejemplo.com/imagen2.jpg"
                               attrs="{'invisible': [('image_source', '!=', 'url')]}"/>
                        <div class="alert alert-success" role="alert" colspan="2"
                             attrs="{'invisible': [('image_source', '!=', 'upload_ml')]}">
                            <i class="fa fa-check-circle"/> Las imágenes de los productos se subirán
                            automáticamente a MercadoLibre al publicar.
                        </div>
                        <field name="image_resize_option" widget="radio"
                               attrs="{'invisible': [('image_source', '!=', 'upload_ml')]}"/>
                        <div class="alert alert-info" role="alert" colspan="2"
                             attrs="{'invisible': [('image_source', '!=', 'upload_ml')]}">
                            <i class="fa fa-info-circle"/>
                            <strong>Requisitos MercadoLibre:</strong> Mínimo 500px en un lado, recomendado 1200x1200px para zoom.
                            Las imágenes pequeñas se redimensionarán según la opción seleccionada.
                        </div>
                        <div class="alert alert-info" role="alert" colspan="2"
                             attrs="{'invisible': [('image_source', '!=', 'existing_ml')]}">
                            <i class="fa fa-info-circle"/> Se usarán las imágenes previamente subidas a ML.
                            Si no hay imágenes, el producto se publicará sin imágenes.
                        </div>
                        <div class="alert alert-warning" role="alert" colspan="2"
                             attrs="{'invisible': [('image_source', '!=', 'url')]}">
                            <i class="fa fa-warning"/> Ingrese URLs públicas accesibles desde internet.
                            Una URL por línea, máximo 10 imágenes.
                        </div>
                    </group>
                </group>

                <!-- Estado: Vista Previa -->
                <group attrs="{'invisible': [('state', '!=', 'preview')]}">
                    <field name="publish_log" nolabel="1" readonly="1"
                           style="font-family: monospace; background: #f5f5f5; padding: 10px;"/>
                </group>

                <!-- Estado: Publicado/Error -->
                <group attrs="{'invisible': [('state', 'not in', ['done', 'error'])]}">
                    <group>
                        <field name="published_count"/>
                        <field name="error_count"/>
                    </group>
                    <field name="publish_log" nolabel="1" readonly="1"
                           style="font-family: monospace; background: #f5f5f5; padding: 10px;"/>
                </group>

                <field name="state" invisible="1"/>

                <!-- Footers segun estado -->
                <footer attrs="{'invisible': [('state', '!=', 'draft')]}">
                    <button name="action_preview" type="object"
                            string="Vista Previa" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>

                <footer attrs="{'invisible': [('state', '!=', 'preview')]}">
                    <button name="action_publish" type="object"
                            string="Publicar" class="btn-primary"/>
                    <button name="action_back_to_config" type="object"
                            string="Volver" class="btn-secondary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>

                <footer attrs="{'invisible': [('state', 'not in', ['done', 'error'])]}">
                    <button name="action_view_items" type="object"
                            string="Ver Publicaciones" class="btn-primary"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mercadolibre_product_publish" model="ir.actions.act_window">
        <field name="name">Publicar en MercadoLibre</field>
        <field name="res_model">mercadolibre.product.publish</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
