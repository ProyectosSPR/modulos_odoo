<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Categoria de seguridad -->
    <record id="module_category_mercadolibre_products" model="ir.module.category">
        <field name="name">MercadoLibre Productos</field>
        <field name="sequence">50</field>
    </record>

    <!-- Grupo: Usuario de Productos ML -->
    <record id="group_mercadolibre_products_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="module_category_mercadolibre_products"/>
        <field name="implied_ids" eval="[(4, ref('mercadolibre_connector.group_mercadolibre_user'))]"/>
    </record>

    <!-- Grupo: Administrador de Productos ML -->
    <record id="group_mercadolibre_products_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_mercadolibre_products"/>
        <field name="implied_ids" eval="[(4, ref('group_mercadolibre_products_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Reglas de acceso por compania -->
    <record id="rule_mercadolibre_item_company" model="ir.rule">
        <field name="name">MercadoLibre Item: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_item"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="rule_mercadolibre_item_variation_company" model="ir.rule">
        <field name="name">MercadoLibre Item Variation: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_item_variation"/>
        <field name="domain_force">[
            '|',
            ('account_id.company_id', '=', False),
            ('account_id.company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="rule_mercadolibre_product_sync_config_company" model="ir.rule">
        <field name="name">MercadoLibre Product Sync Config: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_product_sync_config"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="rule_mercadolibre_stock_reconcile_company" model="ir.rule">
        <field name="name">MercadoLibre Stock Reconcile: multi-company</field>
        <field name="model_id" ref="model_mercadolibre_stock_reconcile"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
    </record>
</odoo>
