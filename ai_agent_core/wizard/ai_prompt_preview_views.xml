<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Prompt Preview Wizard -->
    <record id="view_ai_agent_prompt_preview_form" model="ir.ui.view">
        <field name="name">ai.agent.prompt.preview.form</field>
        <field name="model">ai.agent.prompt.preview</field>
        <field name="arch" type="xml">
            <form string="Prompt Preview">
                <group>
                    <field name="agent_id" readonly="1"/>
                </group>
                <group>
                    <field name="prompt_preview" widget="ace" options="{'mode': 'text'}" readonly="1" nolabel="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
