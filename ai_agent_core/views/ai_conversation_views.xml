<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Conversation Tree View -->
    <record id="view_ai_conversation_tree" model="ir.ui.view">
        <field name="name">ai.conversation.tree</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <tree string="Conversations" default_order="last_message_date desc">
                <field name="name"/>
                <field name="agent_id"/>
                <field name="channel_type"/>
                <field name="partner_id"/>
                <field name="external_user_name"/>
                <field name="message_count"/>
                <field name="last_message_date"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-warning="state == 'waiting'" decoration-info="state == 'transferred'" decoration-muted="state in ['closed', 'archived']"/>
            </tree>
        </field>
    </record>

    <!-- AI Conversation Form View -->
    <record id="view_ai_conversation_form" model="ir.ui.view">
        <field name="name">ai.conversation.form</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <form string="Conversation">
                <header>
                    <button name="action_close" string="Close" type="object" attrs="{'invisible': [('state', 'not in', ['active', 'waiting'])]}" class="btn-primary"/>
                    <button name="action_reopen" string="Reopen" type="object" attrs="{'invisible': [('state', '!=', 'closed')]}" class="btn-secondary"/>
                    <button name="action_transfer_to_human" string="Transfer to Human" type="object" attrs="{'invisible': [('state', '!=', 'active')]}" class="btn-warning"/>
                    <button name="action_generate_summary" string="Generate Summary" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,waiting,transferred,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Conversation Info">
                            <field name="agent_id"/>
                            <field name="channel_type"/>
                            <field name="channel_reference"/>
                            <field name="start_date"/>
                            <field name="last_message_date"/>
                        </group>
                        <group string="Customer">
                            <field name="partner_id"/>
                            <field name="external_user_id"/>
                            <field name="external_user_name"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids" mode="tree" nolabel="1">
                                <tree create="0" delete="0" decoration-info="role == 'user'" decoration-success="role == 'assistant'" decoration-muted="role == 'system'">
                                    <field name="create_date" string="Time"/>
                                    <field name="role"/>
                                    <field name="content"/>
                                    <field name="processing_time"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Summary" name="summary">
                            <group>
                                <field name="summary" nolabel="1" placeholder="Click 'Generate Summary' to create an AI summary of this conversation"/>
                            </group>
                        </page>

                        <page string="Context" name="context">
                            <group>
                                <field name="context_data" widget="ace" options="{'mode': 'json'}" readonly="1"/>
                            </group>
                        </page>

                        <page string="Analytics" name="analytics">
                            <group>
                                <group>
                                    <field name="message_count"/>
                                    <field name="total_tokens"/>
                                </group>
                                <group>
                                    <field name="avg_response_time"/>
                                </group>
                            </group>
                        </page>

                        <page string="Metadata" name="metadata">
                            <group>
                                <field name="metadata" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- AI Conversation Search View -->
    <record id="view_ai_conversation_search" model="ir.ui.view">
        <field name="name">ai.conversation.search</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <search string="Conversations">
                <field name="name"/>
                <field name="agent_id"/>
                <field name="partner_id"/>
                <field name="external_user_name"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Waiting" name="waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="Transferred" name="transferred" domain="[('state', '=', 'transferred')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('last_message_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="week" domain="[('last_message_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="MercadoLibre" name="mercadolibre" domain="[('channel_type', '=', 'mercadolibre')]"/>
                <filter string="WhatsApp" name="whatsapp" domain="[('channel_type', '=', 'whatsapp')]"/>
                <filter string="Web" name="web" domain="[('channel_type', '=', 'web')]"/>
                <group expand="0" string="Group By">
                    <filter string="Agent" name="group_agent" context="{'group_by': 'agent_id'}"/>
                    <filter string="Channel" name="group_channel" context="{'group_by': 'channel_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AI Conversation Action -->
    <record id="action_ai_conversation" model="ir.actions.act_window">
        <field name="name">Conversations</field>
        <field name="res_model">ai.conversation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ai_conversation_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No conversations yet
            </p>
            <p>
                Conversations will appear here when customers interact with your AI agents.
            </p>
        </field>
    </record>

    <!-- Conversation Message Form (for detailed view) -->
    <record id="view_ai_conversation_message_form" model="ir.ui.view">
        <field name="name">ai.conversation.message.form</field>
        <field name="model">ai.conversation.message</field>
        <field name="arch" type="xml">
            <form string="Message" create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="conversation_id"/>
                            <field name="role"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="model_used"/>
                            <field name="processing_time"/>
                            <field name="input_tokens"/>
                            <field name="output_tokens"/>
                        </group>
                    </group>
                    <group>
                        <field name="content" nolabel="1"/>
                    </group>
                    <group attrs="{'invisible': [('tool_calls', '=', False)]}">
                        <field name="tool_calls" widget="ace" options="{'mode': 'json'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
