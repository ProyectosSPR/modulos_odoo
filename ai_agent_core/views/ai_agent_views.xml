<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Agent Tree View -->
    <record id="view_ai_agent_tree" model="ir.ui.view">
        <field name="name">ai.agent.tree</field>
        <field name="model">ai.agent</field>
        <field name="arch" type="xml">
            <tree string="AI Agents">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="provider_id"/>
                <field name="model_name"/>
                <field name="active_rules_count"/>
                <field name="tools_count"/>
                <field name="total_conversations"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- AI Agent Form View -->
    <record id="view_ai_agent_form" model="ir.ui.view">
        <field name="name">ai.agent.form</field>
        <field name="model">ai.agent</field>
        <field name="arch" type="xml">
            <form string="AI Agent">
                <header>
                    <button name="action_test_prompt" string="Preview Prompt" type="object" class="btn-secondary"/>
                    <button name="action_view_conversations" string="View Conversations" type="object" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rules" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="active_rules_count" string="Rules" widget="statinfo"/>
                        </button>
                        <button name="action_view_conversations" type="object" class="oe_stat_button" icon="fa-comments">
                            <field name="total_conversations" string="Conversations" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Agent Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="LLM Configuration">
                            <field name="provider_id"/>
                            <field name="model_name" placeholder="Leave empty for provider default"/>
                            <field name="temperature" widget="float"/>
                            <field name="max_tokens"/>
                        </group>
                        <group string="Response Settings">
                            <field name="response_language"/>
                            <field name="max_response_length"/>
                            <field name="include_sources"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="System Prompt" name="prompt">
                            <group>
                                <field name="system_prompt_template" widget="ace" options="{'mode': 'text'}" placeholder="Enter your system prompt here. Use {{variable}} for dynamic values."/>
                            </group>
                            <group string="Available Variables" class="oe_edit_only">
                                <div class="alert alert-info" role="alert">
                                    <strong>Built-in Variables:</strong>
                                    <ul class="mb-0">
                                        <li><code>{{agent_name}}</code> - Agent's name</li>
                                        <li><code>{{company_name}}</code> - Company name</li>
                                        <li><code>{{channel}}</code> - Current channel (mercadolibre, whatsapp, etc.)</li>
                                        <li><code>{{partner_name}}</code> - Customer name</li>
                                        <li><code>{{additional_instructions}}</code> - Rule-based instructions</li>
                                    </ul>
                                </div>
                            </group>
                        </page>

                        <page string="Variables" name="variables">
                            <field name="prompt_variable_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="variable_type"/>
                                    <field name="static_value" attrs="{'invisible': [('variable_type', '!=', 'static')]}"/>
                                    <field name="selected_option" attrs="{'invisible': [('variable_type', '!=', 'selection')]}"/>
                                    <field name="current_value" class="text-muted"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="description"/>
                                            <field name="variable_type"/>
                                            <field name="sequence"/>
                                        </group>
                                        <group>
                                            <field name="static_value" attrs="{'invisible': [('variable_type', '!=', 'static')]}"/>
                                            <field name="selection_options" attrs="{'invisible': [('variable_type', '!=', 'selection')]}"/>
                                            <field name="selected_option" attrs="{'invisible': [('variable_type', '!=', 'selection')]}"/>
                                            <field name="compute_model" attrs="{'invisible': [('variable_type', '!=', 'computed')]}"/>
                                            <field name="compute_field" attrs="{'invisible': [('variable_type', '!=', 'computed')]}"/>
                                            <field name="compute_domain" attrs="{'invisible': [('variable_type', '!=', 'computed')]}"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="current_value" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Behavior Rules" name="rules">
                            <field name="rule_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="trigger_type"/>
                                    <field name="trigger_value"/>
                                    <field name="action_type"/>
                                    <field name="priority"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Tools" name="tools">
                            <field name="tool_ids" widget="many2many_tags"/>
                            <group string="Enabled Tools">
                                <field name="tool_ids" mode="tree" nolabel="1">
                                    <tree create="0" delete="0">
                                        <field name="name"/>
                                        <field name="technical_name"/>
                                        <field name="category"/>
                                        <field name="tool_type"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </group>
                        </page>

                        <page string="Advanced" name="advanced">
                            <group>
                                <group string="Memory">
                                    <field name="enable_memory"/>
                                    <field name="memory_window" attrs="{'invisible': [('enable_memory', '=', False)]}"/>
                                </group>
                                <group string="Intelligence">
                                    <field name="enable_intent_detection"/>
                                </group>
                            </group>
                            <group string="Fallback">
                                <field name="fallback_response" placeholder="Message when AI cannot respond"/>
                            </group>
                            <group string="Description">
                                <field name="description" placeholder="Internal notes about this agent"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- AI Agent Kanban View -->
    <record id="view_ai_agent_kanban" model="ir.ui.view">
        <field name="name">ai.agent.kanban</field>
        <field name="model">ai.agent</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="provider_id"/>
                <field name="active"/>
                <field name="total_conversations"/>
                <field name="active_rules_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span t-if="record.active.raw_value" class="badge bg-success">Active</span>
                                    <span t-else="" class="badge bg-secondary">Inactive</span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>Provider: <field name="provider_id"/></div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge bg-info me-1">
                                            <i class="fa fa-comments"/> <field name="total_conversations"/>
                                        </span>
                                        <span class="badge bg-secondary">
                                            <i class="fa fa-list"/> <field name="active_rules_count"/> rules
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- AI Agent Search View -->
    <record id="view_ai_agent_search" model="ir.ui.view">
        <field name="name">ai.agent.search</field>
        <field name="model">ai.agent</field>
        <field name="arch" type="xml">
            <search string="AI Agents">
                <field name="name"/>
                <field name="provider_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Has Rules" name="has_rules" domain="[('rule_ids', '!=', False)]"/>
                <filter string="Has Tools" name="has_tools" domain="[('tool_ids', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Provider" name="group_provider" context="{'group_by': 'provider_id'}"/>
                    <filter string="Language" name="group_language" context="{'group_by': 'response_language'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AI Agent Action -->
    <record id="action_ai_agent" model="ir.actions.act_window">
        <field name="name">AI Agents</field>
        <field name="res_model">ai.agent</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_ai_agent_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AI Agent
            </p>
            <p>
                AI Agents handle conversations with customers across multiple channels.
                Configure prompts, behavior rules, and tools to customize their responses.
            </p>
        </field>
    </record>

    <!-- Prompt Preview Wizard -->
    <record id="view_ai_agent_prompt_preview_form" model="ir.ui.view">
        <field name="name">ai.agent.prompt.preview.form</field>
        <field name="model">ai.agent.prompt.preview</field>
        <field name="arch" type="xml">
            <form string="Prompt Preview">
                <group>
                    <field name="agent_id" readonly="1"/>
                </group>
                <group>
                    <field name="prompt_preview" widget="ace" options="{'mode': 'text'}" readonly="1" nolabel="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
