<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Provider Tree View -->
    <record id="view_ai_provider_tree" model="ir.ui.view">
        <field name="name">ai.agent.provider.tree</field>
        <field name="model">ai.agent.provider</field>
        <field name="arch" type="xml">
            <tree string="LLM Providers">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="provider_type" widget="badge" decoration-info="provider_type == 'gemini'" decoration-success="provider_type == 'openai'" decoration-warning="provider_type == 'anthropic'" decoration-danger="provider_type == 'groq'" decoration-muted="provider_type == 'ollama'"/>
                <field name="default_model"/>
                <field name="last_test_status" widget="badge" decoration-success="last_test_status == 'success'" decoration-danger="last_test_status == 'failed'" optional="show"/>
                <field name="total_requests" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- AI Provider Kanban View -->
    <record id="view_ai_provider_kanban" model="ir.ui.view">
        <field name="name">ai.agent.provider.kanban</field>
        <field name="model">ai.agent.provider</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="provider_type"/>
                <field name="default_model"/>
                <field name="last_test_status"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{!record.active.raw_value ? 'oe_kanban_card_ribbon' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span t-if="record.last_test_status.raw_value == 'success'" class="badge bg-success">Connected</span>
                                    <span t-if="record.last_test_status.raw_value == 'failed'" class="badge bg-danger">Failed</span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="badge bg-primary"><field name="provider_type"/></span>
                                    <div class="mt-2 text-muted">
                                        <small>Model: <field name="default_model"/></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- AI Provider Form View -->
    <record id="view_ai_provider_form" model="ir.ui.view">
        <field name="name">ai.agent.provider.form</field>
        <field name="model">ai.agent.provider</field>
        <field name="arch" type="xml">
            <form string="LLM Provider">
                <header>
                    <button name="action_fetch_models" string="Fetch Models" type="object" class="btn-secondary" icon="fa-refresh"/>
                    <button name="action_test_connection" string="Test Connection" type="object" class="btn-primary" icon="fa-plug"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Connected" bg_color="bg-success" attrs="{'invisible': [('last_test_status', '!=', 'success')]}"/>
                    <widget name="web_ribbon" title="Connection Failed" bg_color="bg-danger" attrs="{'invisible': [('last_test_status', '!=', 'failed')]}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., My Gemini Account"/>
                        </h1>
                    </div>

                    <!-- Provider Type Selection - Big Buttons Style -->
                    <group string="Select Provider">
                        <field name="provider_type" widget="radio" options="{'horizontal': false}"/>
                    </group>

                    <!-- Dynamic Instructions based on provider -->
                    <group>
                        <field name="provider_instructions" nolabel="1" colspan="2"/>
                    </group>

                    <!-- Provider Specific Configuration -->
                    <group string="API Configuration">
                        <!-- Google Gemini -->
                        <group attrs="{'invisible': [('provider_type', '!=', 'gemini')]}" string="Google Gemini">
                            <field name="gemini_api_key" password="True" placeholder="AIzaSy..." string="API Key (required)"/>
                            <field name="gemini_project_id" placeholder="Leave empty for AI Studio" string="Project ID (only for Vertex AI)"/>
                        </group>

                        <!-- OpenAI -->
                        <group attrs="{'invisible': [('provider_type', '!=', 'openai')]}" string="OpenAI Credentials">
                            <field name="openai_api_key" password="True" placeholder="sk-..."/>
                            <field name="openai_org_id" placeholder="Optional: org-..."/>
                            <field name="api_base_url" placeholder="Optional: Custom API URL"/>
                        </group>

                        <!-- Anthropic -->
                        <group attrs="{'invisible': [('provider_type', '!=', 'anthropic')]}" string="Anthropic Credentials">
                            <field name="anthropic_api_key" password="True" placeholder="sk-ant-..."/>
                        </group>

                        <!-- Ollama -->
                        <group attrs="{'invisible': [('provider_type', '!=', 'ollama')]}" string="Ollama Configuration">
                            <field name="ollama_host" placeholder="http://localhost:11434"/>
                        </group>

                        <!-- Azure OpenAI -->
                        <group attrs="{'invisible': [('provider_type', '!=', 'azure_openai')]}" string="Azure OpenAI Credentials">
                            <field name="azure_api_key" password="True" placeholder="Your Azure key"/>
                            <field name="azure_endpoint" placeholder="https://your-resource.openai.azure.com/"/>
                            <field name="azure_deployment" placeholder="gpt-4o-deployment"/>
                            <field name="azure_api_version"/>
                        </group>

                        <!-- Groq -->
                        <group attrs="{'invisible': [('provider_type', '!=', 'groq')]}" string="Groq Credentials">
                            <field name="groq_api_key" password="True" placeholder="gsk_..."/>
                        </group>

                        <!-- Mistral -->
                        <group attrs="{'invisible': [('provider_type', '!=', 'mistral')]}" string="Mistral Credentials">
                            <field name="mistral_api_key" password="True" placeholder="Your Mistral key"/>
                        </group>
                    </group>

                    <!-- Model Configuration -->
                    <group string="Model Configuration">
                        <group>
                            <field name="default_model" string="Default Model"
                                   placeholder="Click 'Fetch Models' first"/>
                            <field name="available_models" widget="text"
                                   placeholder="Click 'Fetch Models' to load available models"
                                   string="Available Models" readonly="1"
                                   groups="base.group_no_one"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                    </group>
                    <div class="alert alert-info" role="alert" attrs="{'invisible': [('available_models', '!=', False)]}">
                        <i class="fa fa-info-circle"/> Click <strong>"Fetch Models"</strong> button to load available models from the provider API.
                    </div>

                    <notebook>
                        <page string="Connection Status" name="status">
                            <group>
                                <group string="Last Connection Test">
                                    <field name="last_test_date"/>
                                    <field name="last_test_status" widget="badge"
                                           decoration-success="last_test_status == 'success'"
                                           decoration-danger="last_test_status == 'failed'"/>
                                </group>
                                <group string="Usage Statistics">
                                    <field name="total_requests"/>
                                    <field name="total_tokens_used"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('last_test_message', '=', False)]}">
                                <field name="last_test_message" readonly="1" nolabel="1" widget="text"/>
                            </group>
                        </page>

                        <page string="Model Reference" name="models">
                            <group>
                                <div class="row">
                                    <div class="col-md-4">
                                        <h5 class="text-primary">Google Gemini</h5>
                                        <ul class="list-unstyled">
                                            <li><code>gemini-1.5-flash</code> - Fast, efficient</li>
                                            <li><code>gemini-1.5-pro</code> - Most capable</li>
                                            <li><code>gemini-2.0-flash-exp</code> - Latest experimental</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="text-success">OpenAI</h5>
                                        <ul class="list-unstyled">
                                            <li><code>gpt-4o</code> - Latest flagship</li>
                                            <li><code>gpt-4o-mini</code> - Fast and cheap</li>
                                            <li><code>gpt-4-turbo</code> - Previous gen</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="text-warning">Anthropic</h5>
                                        <ul class="list-unstyled">
                                            <li><code>claude-3-5-sonnet-latest</code> - Best balance</li>
                                            <li><code>claude-3-5-haiku-latest</code> - Fastest</li>
                                            <li><code>claude-3-opus-latest</code> - Most capable</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-4">
                                        <h5 class="text-danger">Groq (Ultra Fast)</h5>
                                        <ul class="list-unstyled">
                                            <li><code>llama-3.3-70b-versatile</code></li>
                                            <li><code>mixtral-8x7b-32768</code></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="text-info">Mistral</h5>
                                        <ul class="list-unstyled">
                                            <li><code>mistral-large-latest</code></li>
                                            <li><code>mistral-small-latest</code></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-4">
                                        <h5 class="text-secondary">Ollama (Local)</h5>
                                        <ul class="list-unstyled">
                                            <li><code>llama3.2</code> - Meta's latest</li>
                                            <li><code>mistral</code> - Efficient</li>
                                            <li><code>codellama</code> - For coding</li>
                                        </ul>
                                    </div>
                                </div>
                            </group>
                        </page>

                        <page string="Advanced" name="advanced" groups="base.group_no_one">
                            <group string="Legacy/Fallback Configuration">
                                <field name="api_key" password="True"/>
                                <field name="api_base_url"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Provider Search View -->
    <record id="view_ai_provider_search" model="ir.ui.view">
        <field name="name">ai.agent.provider.search</field>
        <field name="model">ai.agent.provider</field>
        <field name="arch" type="xml">
            <search string="LLM Providers">
                <field name="name"/>
                <field name="provider_type"/>
                <field name="default_model"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <separator/>
                <filter string="Connected" name="connected" domain="[('last_test_status', '=', 'success')]"/>
                <filter string="Connection Failed" name="failed" domain="[('last_test_status', '=', 'failed')]"/>
                <separator/>
                <filter string="Gemini" name="gemini" domain="[('provider_type', '=', 'gemini')]"/>
                <filter string="OpenAI" name="openai" domain="[('provider_type', '=', 'openai')]"/>
                <filter string="Anthropic" name="anthropic" domain="[('provider_type', '=', 'anthropic')]"/>
                <filter string="Ollama" name="ollama" domain="[('provider_type', '=', 'ollama')]"/>
                <group expand="0" string="Group By">
                    <filter string="Provider Type" name="group_type" context="{'group_by': 'provider_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'last_test_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AI Provider Action -->
    <record id="action_ai_provider" model="ir.actions.act_window">
        <field name="name">LLM Providers</field>
        <field name="res_model">ai.agent.provider</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_ai_provider_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your first LLM Provider
            </p>
            <p>
                Add your AI provider credentials to get started.
                We support Google Gemini, OpenAI, Anthropic Claude, Groq, Mistral, and local Ollama.
            </p>
        </field>
    </record>
</odoo>
