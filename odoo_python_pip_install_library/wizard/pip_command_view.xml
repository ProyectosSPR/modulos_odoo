<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pip_command_form" model="ir.ui.view">
        <field name="name">pip.command.form</field>
        <field name="model">pip.command</field>
        <field name="arch" type="xml">
            <form string="Pip Command">
                <group>
                    <group>
                        <field name="pip_versions"/>
                    </group>
                    <group>
                        <field name="library_name" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Install" type="object" name="install_button" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
