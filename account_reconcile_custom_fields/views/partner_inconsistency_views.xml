<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_partner_inconsistency_wizard_form" model="ir.ui.view">
        <field name="name">partner.inconsistency.wizard.form</field>
        <field name="model">partner.inconsistency.wizard</field>
        <field name="arch" type="xml">
            <form string="Buscar Inconsistencias de Proveedores/Clientes">
                <div class="alert alert-info" role="alert">
                    <strong>¬øQu√© hace esta b√∫squeda?</strong><br/>
                    Encuentra cargos y abonos que tienen la <strong>misma referencia</strong> seg√∫n el mapeo seleccionado,
                    pero que est√°n asociados a <strong>proveedores o clientes diferentes</strong>.
                    <br/><br/>
                    <strong>Ejemplo:</strong> Una factura y un pago con referencia "REF-12345" pero con diferentes proveedores.
                </div>
                <group>
                    <group string="Configuraci√≥n de B√∫squeda (Requerido)">
                        <field name="mapping_id" options="{'no_create': True}"/>
                        <field name="account_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group string="Filtros Opcionales">
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="include_reconciled"/>
                    </group>
                </group>
                <div class="alert alert-warning" role="alert" style="margin-top: 10px;">
                    <strong>üí° Recomendaci√≥n:</strong> Use un rango de fechas para mejorar el rendimiento,
                    especialmente si tiene muchos movimientos contables.
                </div>
                <footer>
                    <button name="action_find_inconsistencies" string="üîç Buscar Inconsistencias" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to launch the wizard -->
    <record id="action_launch_partner_inconsistency_wizard" model="ir.actions.act_window">
        <field name="name">Buscar Inconsistencias</field>
        <field name="res_model">partner.inconsistency.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_partner_inconsistency"/>
        <field name="binding_type">action</field>
    </record>

    <!-- Tree View for Partner Inconsistencies -->
    <record id="partner_inconsistency_tree_view" model="ir.ui.view">
        <field name="name">partner.inconsistency.tree</field>
        <field name="model">partner.inconsistency</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="referencia_comun"/>
                <field name="tipo_apunte_1" widget="badge" decoration-info="tipo_apunte_1 == 'debit'" decoration-success="tipo_apunte_1 == 'credit'"/>
                <field name="proveedor_pago_id"/>
                <field name="monto_pago" sum="Total"/>
                <field name="tipo_apunte_2" widget="badge" decoration-info="tipo_apunte_2 == 'debit'" decoration-success="tipo_apunte_2 == 'credit'"/>
                <field name="proveedor_factura_id"/>
                <field name="monto_factura" sum="Total"/>
                <field name="currency_id" invisible="1"/>
                <field name="mapping_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Partner Inconsistencies -->
    <record id="partner_inconsistency_form_view" model="ir.ui.view">
        <field name="name">partner.inconsistency.form</field>
        <field name="model">partner.inconsistency</field>
        <field name="arch" type="xml">
            <form create="false" delete="false" edit="true">
                <header>
                    <button name="action_correct_partner" string="Corregir Partner (Usar de Apunte 2)" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group string="Informaci√≥n General">
                            <field name="referencia_comun"/>
                            <field name="tipo_problema"/>
                            <field name="mapping_id"/>
                        </group>
                        <group string="Balance">
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Apunte 1 (a corregir)">
                            <field name="pago_line_id"/>
                            <field name="proveedor_pago_id"/>
                            <field name="tipo_apunte_1" widget="badge"/>
                            <label for="debito_apunte_1" string="D√©bito"/>
                            <field name="debito_apunte_1"/>
                            <label for="credito_apunte_1" string="Cr√©dito"/>
                            <field name="credito_apunte_1"/>
                            <field name="monto_pago" string="Saldo Pendiente"/>
                        </group>
                        <group string="Apunte 2 (correcto)">
                            <field name="factura_line_id"/>
                            <field name="proveedor_factura_id"/>
                            <field name="tipo_apunte_2" widget="badge"/>
                            <label for="debito_apunte_2" string="D√©bito"/>
                            <field name="debito_apunte_2"/>
                            <label for="credito_apunte_2" string="Cr√©dito"/>
                            <field name="credito_apunte_2"/>
                            <field name="monto_factura" string="Saldo Pendiente"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="partner_inconsistency_search_view" model="ir.ui.view">
        <field name="name">partner.inconsistency.search</field>
        <field name="model">partner.inconsistency</field>
        <field name="arch" type="xml">
            <search>
                <field name="referencia_comun"/>
                <field name="proveedor_pago_id"/>
                <field name="proveedor_factura_id"/>
                <field name="mapping_id"/>
                <filter string="Cargo (D√©bito)" name="filter_debit" domain="[('tipo_apunte_1', '=', 'debit')]"/>
                <filter string="Abono (Cr√©dito)" name="filter_credit" domain="[('tipo_apunte_1', '=', 'credit')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Referencia" name="group_referencia" context="{'group_by':'referencia_comun'}"/>
                    <filter string="Mapeo" name="group_mapping" context="{'group_by':'mapping_id'}"/>
                    <filter string="Tipo Apunte 1" name="group_tipo1" context="{'group_by':'tipo_apunte_1'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Main Window Action with direct button -->
    <record id="action_partner_inconsistency_main" model="ir.actions.act_window">
        <field name="name">Inconsistencias de Proveedores</field>
        <field name="res_model">partner.inconsistency</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="partner_inconsistency_search_view"/>
        <field name="context">{'create': False, 'search_default_group_referencia': 1}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No se han encontrado inconsistencias.
          </p>
          <p>
            Esta herramienta busca cargos y abonos con la misma referencia pero diferentes proveedores/clientes seg√∫n los mappings configurados.
          </p>
          <p class="text-center" style="margin: 20px 0;">
            <a name="%(account_reconcile_custom_fields.action_launch_partner_inconsistency_wizard)d"
               type="action"
               class="btn btn-primary btn-lg"
               style="padding: 10px 30px; font-size: 16px;">
              üîç Buscar Inconsistencias
            </a>
          </p>
          <p style="margin-top: 10px; font-size: 0.9em; color: #666;">
            <strong>Pasos para usar esta herramienta:</strong><br/>
            1. Haz clic en "Buscar Inconsistencias"<br/>
            2. Selecciona el <strong>Mapeo</strong> (la regla de b√∫squeda a usar)<br/>
            3. Selecciona las <strong>Cuentas Contables</strong> donde buscar (ej: cuentas por cobrar/pagar)<br/>
            4. Opcionalmente define un rango de fechas<br/>
            5. Haz clic en "Buscar" para encontrar las inconsistencias
          </p>
        </field>
    </record>

    <!-- Action result after search (to keep results visible) -->
    <record id="action_partner_inconsistency_result" model="ir.actions.act_window">
        <field name="name">Resultados de Inconsistencias</field>
        <field name="res_model">partner.inconsistency</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="partner_inconsistency_search_view"/>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No se encontraron inconsistencias con los filtros aplicados.
          </p>
          <p>
            Intenta cambiar los filtros de b√∫squeda (cuentas, fechas, mapeo) para ampliar los resultados.
            Usa el men√∫ <strong>"Action"</strong> (‚öôÔ∏è) ‚Üí <strong>"Buscar Inconsistencias"</strong> para iniciar una nueva b√∫squeda.
          </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_partner_inconsistency"
        name="Inconsistencias de Proveedores"
        parent="account.menu_finance_entries_actions"
        action="action_partner_inconsistency_main"
        sequence="100"/>

</odoo>
