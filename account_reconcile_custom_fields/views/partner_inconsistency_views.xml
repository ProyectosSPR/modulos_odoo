<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Search View for Partner Inconsistencies -->
    <record id="partner_inconsistency_search_view" model="ir.ui.view">
        <field name="name">partner.inconsistency.search</field>
        <field name="model">partner.inconsistency</field>
        <field name="arch" type="xml">
            <search>
                <field name="referencia_comun"/>
                <field name="proveedor_pago_id"/>
                <field name="proveedor_factura_id"/>
                <field name="mapping_id"/>
                <separator/>
                <filter string="Por Referencia" name="group_referencia" context="{'group_by': 'referencia_comun'}"/>
                <filter string="Por Mapeo" name="group_mapping" context="{'group_by': 'mapping_id'}"/>
            </search>
        </field>
    </record>

    <!-- Tree View for Partner Inconsistencies -->
    <record id="partner_inconsistency_tree_view" model="ir.ui.view">
        <field name="name">partner.inconsistency.tree</field>
        <field name="model">partner.inconsistency</field>
        <field name="arch" type="xml">
            <tree create="false" delete="true" edit="false" decoration-danger="True">
                <field name="referencia_comun"/>
                <field name="tipo_problema"/>
                <field name="pago_line_id" string="Apunte 1"/>
                <field name="proveedor_pago_id"/>
                <field name="monto_pago" sum="Total Saldo Apunte 1"/>
                <field name="factura_line_id" string="Apunte 2"/>
                <field name="proveedor_factura_id"/>
                <field name="monto_factura" sum="Total Saldo Apunte 2"/>
                <field name="mapping_id"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Partner Inconsistencies -->
    <record id="partner_inconsistency_form_view" model="ir.ui.view">
        <field name="name">partner.inconsistency.form</field>
        <field name="model">partner.inconsistency</field>
        <field name="arch" type="xml">
            <form create="false" delete="false" edit="true">
                <header>
                    <button name="action_correct_partner" string="Corregir Partner (Usar de Apunte 2)" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group string="Información General">
                            <field name="referencia_comun"/>
                            <field name="tipo_problema"/>
                            <field name="mapping_id"/>
                        </group>
                        <group string="Montos">
                            <field name="monto_pago"/>
                            <field name="monto_factura"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Apunte 1 (a corregir)">
                            <field name="pago_line_id"/>
                            <field name="proveedor_pago_id"/>
                        </group>
                        <group string="Apunte 2 (correcto)">
                            <field name="factura_line_id"/>
                            <field name="proveedor_factura_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window Action: Shows the results of the inconsistency scan -->
    <record id="action_partner_inconsistency_result" model="ir.actions.act_window">
        <field name="name">Inconsistencias de Proveedores</field>
        <field name="res_model">partner.inconsistency</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': False, 'search_default_group_referencia': 1}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No se encontraron inconsistencias con los filtros aplicados.
            </p>
            <p>
                Prueba a cambiar los filtros en el asistente, por ejemplo, ampliando el rango de fechas
                o seleccionando la casilla "Incluir Apuntes Conciliados" para una búsqueda más profunda.
            </p>
        </field>
    </record>

</odoo>
