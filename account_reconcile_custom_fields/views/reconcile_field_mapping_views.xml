<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_reconcile_field_mapping_tree" model="ir.ui.view">
        <field name="name">reconcile.field.mapping.tree</field>
        <field name="model">reconcile.field.mapping</field>
        <field name="arch" type="xml">
            <tree string="Custom Field Mappings">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="source_model_id"/>
                <field name="source_field_id"/>
                <field name="operator"/>
                <field name="target_model_id"/>
                <field name="target_field_id"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_reconcile_field_mapping_form" model="ir.ui.view">
        <field name="name">reconcile.field.mapping.form</field>
        <field name="model">reconcile.field.mapping</field>
        <field name="arch" type="xml">
            <form string="Custom Field Mapping">
                <header>
                    <button name="action_test_mapping_domain" type="object" string="Probar Filtro" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Match by Bank Reference"/>
                            <field name="active" invisible="1"/>
                            <field name="sequence"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="match_type"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Source Configuration" name="source">
                            <group>
                                <group string="Source Model (Orders/Invoices)">
                                    <field name="source_model_id"
                                           options="{'no_create': True, 'no_open': True}"/>
                                    <field name="source_field_id"
                                           options="{'no_create': True}"
                                           domain="[('model_id', '=', source_model_id)]"/>
                                </group>
                                <group string="Additional Filters">
                                    <field name="source_domain"
                                           placeholder="[('state', '=', 'sale')]"/>
                                    <div class="text-muted">
                                        <small>Enter a domain filter as a Python list, e.g.: [('state', '=', 'sale')]</small>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Target Configuration" name="target">
                            <group>
                                <group string="Target Model (Payments/Bank Lines)">
                                    <field name="target_model_id"
                                           options="{'no_create': True, 'no_open': True}"/>
                                    <field name="target_field_id"
                                           options="{'no_create': True}"
                                           domain="[('model_id', '=', target_model_id)]"/>
                                </group>
                                <group string="Additional Filters">
                                    <field name="target_domain"
                                           placeholder="[('state', '=', 'posted')]"/>
                                    <div class="text-muted">
                                        <small>Enter a domain filter as a Python list, e.g.: [('state', '=', 'posted')]</small>
                                    </div>
                                </group>
                            </group>
                        </page>

                        <page string="Matching Rules" name="matching">
                            <group>
                                <group string="Comparison Operator">
                                    <field name="operator"/>
                                </group>
                            </group>
                            <group string="Examples">
                                <div class="alert alert-info" role="alert">
                                    <h4>How it works:</h4>
                                    <ul>
                                        <li><b>Equals (=)</b>: Exact match between fields</li>
                                        <li><b>Contains (like)</b>: Source field contains the target value</li>
                                        <li><b>Contains (ilike)</b>: Case-insensitive contains</li>
                                        <li><b>In</b>: Target value is in a list of source values</li>
                                    </ul>
                                    <p class="mt-2">
                                        <b>Example:</b> Match Sale Orders by bank reference<br/>
                                        - Source: Sale Order → x_bank_reference field<br/>
                                        - Target: Bank Statement Line → payment_ref field<br/>
                                        - Operator: Equals (=)<br/>
                                        - Result: When a bank line has payment_ref="REF123",
                                          it will find the sale order with x_bank_reference="REF123"
                                          and suggest its invoices for reconciliation.
                                    </p>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_reconcile_field_mapping_search" model="ir.ui.view">
        <field name="name">reconcile.field.mapping.search</field>
        <field name="model">reconcile.field.mapping</field>
        <field name="arch" type="xml">
            <search string="Custom Field Mappings">
                <field name="name"/>
                <field name="source_model_id"/>
                <field name="target_model_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Sale Orders" name="sale_orders"
                        domain="[('source_model', '=', 'sale.order')]"/>
                <filter string="Purchase Orders" name="purchase_orders"
                        domain="[('source_model', '=', 'purchase.order')]"/>
                <filter string="Invoices" name="invoices"
                        domain="[('source_model', '=', 'account.move')]"/>
                <separator/>
                <filter string="Bank Statement Lines" name="bank_lines"
                        domain="[('target_model', '=', 'account.bank.statement.line')]"/>
                <filter string="Payments" name="payments"
                        domain="[('target_model', '=', 'account.payment')]"/>
                <group expand="0" string="Group By">
                    <filter string="Source Model" name="group_source_model"
                            context="{'group_by': 'source_model_id'}"/>
                    <filter string="Target Model" name="group_target_model"
                            context="{'group_by': 'target_model_id'}"/>
                    <filter string="Company" name="group_company"
                            context="{'group_by': 'company_id'}"
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_reconcile_field_mapping" model="ir.actions.act_window">
        <field name="name">Custom Field Mappings</field>
        <field name="res_model">reconcile.field.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first custom field mapping
            </p>
            <p>
                Configure how to match invoices with payments using custom fields from
                sale orders, purchase orders, or invoices.<br/>
                The system will automatically suggest matching lines during reconciliation.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_reconcile_field_mapping"
        name="Custom Field Mappings"
        parent="account.menu_finance_configuration"
        action="action_reconcile_field_mapping"
        sequence="100"/>
    
    <!-- Custom Tree View for Debugging account.move.line -->
    <record id="view_move_line_tree_for_mapping_test" model="ir.ui.view">
        <field name="name">account.move.line.tree.mapping.test</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <tree string="Resultado Filtro de Mapeo" create="false" edit="false" delete="false">
                <field name="move_id"/>
                <field name="partner_id"/>
                <field name="account_id"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="ref"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>
