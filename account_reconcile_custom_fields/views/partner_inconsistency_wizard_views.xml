<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_partner_inconsistency_wizard_form" model="ir.ui.view">
        <field name="name">partner.inconsistency.wizard.form</field>
        <field name="model">partner.inconsistency.wizard</field>
        <field name="arch" type="xml">
            <form string="Detectar Inconsistencias de Proveedor">
                <group>
                    <group>
                        <field name="mapping_id" options="{'no_create': True}"/>
                        <field name="account_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="include_reconciled"/>
                    </group>
                </group>
                <footer>
                    <button name="action_find_inconsistencies" string="Buscar Inconsistencias" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to launch the wizard -->
    <record id="action_launch_partner_inconsistency_wizard" model="ir.actions.act_window">
        <field name="name">Detectar Inconsistencias de Proveedor</field>
        <field name="res_model">partner.inconsistency.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item - This overrides the original menu item to call our new wizard action -->
    <menuitem
        id="menu_partner_inconsistency"
        name="Inconsistencias de Proveedores"
        parent="account.menu_finance_entries_actions"
        action="action_launch_partner_inconsistency_wizard"
        sequence="100"/>

</odoo>