<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Grupo de acceso a Claims -->
        <record id="group_mercadolibre_claims_user" model="res.groups">
            <field name="name">MercadoLibre Claims / Usuario</field>
            <field name="category_id" ref="mercadolibre_connector.module_category_mercadolibre"/>
            <field name="implied_ids" eval="[(4, ref('mercadolibre_connector.group_mercadolibre_user'))]"/>
        </record>

        <record id="group_mercadolibre_claims_manager" model="res.groups">
            <field name="name">MercadoLibre Claims / Administrador</field>
            <field name="category_id" ref="mercadolibre_connector.module_category_mercadolibre"/>
            <field name="implied_ids" eval="[(4, ref('group_mercadolibre_claims_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Reglas de registro para multi-compania -->
        <record id="mercadolibre_claim_company_rule" model="ir.rule">
            <field name="name">MercadoLibre Claim: Multi-Company</field>
            <field name="model_id" ref="model_mercadolibre_claim"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="mercadolibre_claim_message_company_rule" model="ir.rule">
            <field name="name">MercadoLibre Claim Message: Multi-Company</field>
            <field name="model_id" ref="model_mercadolibre_claim_message"/>
            <field name="domain_force">['|', ('claim_id.company_id', '=', False), ('claim_id.company_id', 'in', company_ids)]</field>
        </record>

        <record id="mercadolibre_claim_config_company_rule" model="ir.rule">
            <field name="name">MercadoLibre Claim Config: Multi-Company</field>
            <field name="model_id" ref="model_mercadolibre_claim_config"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>
