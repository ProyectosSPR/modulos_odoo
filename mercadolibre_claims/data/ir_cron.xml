<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- ============================================= -->
    <!-- CRON JOBS -->
    <!-- ============================================= -->

    <!-- Cron: Sincronizacion de Claims -->
    <record id="ir_cron_mercadolibre_claims_sync" model="ir.cron">
        <field name="name">MercadoLibre: Sincronizar Reclamos</field>
        <field name="model_id" ref="model_mercadolibre_claim_config"/>
        <field name="state">code</field>
        <field name="code">model._run_scheduled_sync()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

    <!-- Cron: Sincronizar Mensajes de Claims Abiertos -->
    <record id="ir_cron_mercadolibre_claims_messages_sync" model="ir.cron">
        <field name="name">MercadoLibre: Sincronizar Mensajes de Reclamos</field>
        <field name="model_id" ref="model_mercadolibre_claim"/>
        <field name="state">code</field>
        <field name="code">model._cron_sync_messages()</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

</odoo>
