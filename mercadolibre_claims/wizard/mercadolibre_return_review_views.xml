<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================= -->
    <!-- WIZARD: REVISION DE DEVOLUCION -->
    <!-- ============================================= -->
    <record id="view_mercadolibre_return_review_wizard_form" model="ir.ui.view">
        <field name="name">mercadolibre.return.review.wizard.form</field>
        <field name="model">mercadolibre.return.review.wizard</field>
        <field name="arch" type="xml">
            <form string="Revision de Devolucion">
                <group>
                    <group>
                        <field name="return_id" readonly="1"/>
                    </group>
                </group>
                <group string="Estado del Producto Recibido">
                    <group>
                        <field name="review_status" widget="radio"/>
                    </group>
                    <group>
                        <field name="move_to_scrap" attrs="{'invisible': [('review_status', 'not in', ['damaged', 'incomplete', 'different'])]}"/>
                    </group>
                </group>
                <group>
                    <field name="notes" placeholder="Notas adicionales sobre el estado del producto..."/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirmar Revision" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mercadolibre_return_review_wizard" model="ir.actions.act_window">
        <field name="name">Revision de Devolucion</field>
        <field name="res_model">mercadolibre.return.review.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
