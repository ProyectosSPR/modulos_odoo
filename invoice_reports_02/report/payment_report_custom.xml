<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	    <record id="itadmin_payment_paperformat" model="report.paperformat">
            <field name="name">Payment Letter</field>
            <field name="default" eval="True" />
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
		
		<template id="itadmin_payment_external_layout">
			<!-- Multicompany -->
			<t t-if="not o and doc">
				<t t-set="o" t-value="doc" />
			</t>
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>

			<t t-call="invoice_reports_02.itadmin_payment_layout_header" />
			<t t-raw="0" />
			<t t-call="invoice_reports_02.itadmin_payment_layout_footer" />
		</template>

		<template id="itadmin_payment_layout_footer">
			<div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone" class="list-inline-item">Teléfono: <span t-field="company.phone"/></li>

                    <li t-if="company.email" class="list-inline-item">&amp;bull;</li>
                    <li t-if="company.email" class="list-inline-item" >Correo Electrónico: <span t-field="company.email"/></li>

                    <li t-if="company.website" class="list-inline-item">&amp;bull;</li>
                    <li t-if="company.website" class="list-inline-item">Página web: <span t-field="company.website"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
		</template>

		<template id="itadmin_payment_layout_header">
			<div class="header">
				<!--EMPIEZA CABECERA DE INFORMACIÓN-->
                    <div class="row">
                        <div class="col-3">
                            <img t-if="o.company_id.logo" t-att-src="o.company_id.logo" style="height: 180px;width: 180px;" />
                        </div>
                        <div class="col-6">
                            <div class="text-left" style="background-color: #8F8F8F !important; color: #FFFFFF !important;">
                                <span class="fa fa-building-o"></span>
                                <strong t-field="o.company_id.partner_id.name" />
                            </div>
                            <div class="text-left" name="company_address">
                                <div t-field="o.company_id.partner_id" 
                                    t-field-options='{
                                        "widget": "contact", 
                                        "fields": ["address", "phone", "email", "vat", "website"], 
                                        "no_marker": false, "phone_icons": true}'
                                    style="font-size:13px;"/>
                                <div style="font-size:13px;"><strong>RFC:</strong> <span t-field="o.company_id.vat"/></div>
                                <div style="font-size:13px;"><strong>Regimen:</strong> <span t-field="o.company_id.regimen_fiscal_id.description"/></div>
                            </div>
                        </div>
                        <div class="col-3" style="font-size:13px;">
                                <div class="col-12 text-left" style="background-color: #8F8F8F !important; color: #FFFFFF !important;">
                                    <strong>Fecha y Hora de Emisión</strong>
                                </div>
                                <div class="col-12 text-left">
                                    <span t-field="o.fecha_certificacion"/> 
                                </div>
                                <div class="col-12 text-left" style="background-color: #8F8F8F !important; color: #FFFFFF !important;">
                                    <strong>Lugar de Expedición</strong>
                                </div>
                                <div class="col-12 text-left">
                                    <span t-field="o.company_id.partner_id.zip"/>
                                </div>
                        </div>
                    </div>
                    <!--TERMINA CABECERA DE INFORMACIÓN-->
			</div>
		</template>
		
		
