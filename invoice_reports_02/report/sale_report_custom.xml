<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="itadmin_sales_paperformat_sales" model="report.paperformat">
            <field name="name">CDFI Letter</field>
            <field name="default" eval="True" />
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">10</field>
            <field name="dpi">0</field>
        </record>
    <template id="itadmin_sale_external_layout_sale">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc" />
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>

        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.phone" class="list-inline-item">Teléfono: <span t-field="company.phone"/></li>

                    <li t-if="company.email" class="list-inline-item">&amp;bull;</li>
                    <li t-if="company.email" class="list-inline-item" >Correo Electrónico: <span t-field="company.email"/></li>

                    <li t-if="company.website" class="list-inline-item">&amp;bull;</li>
                    <li t-if="company.website" class="list-inline-item">Página web: <span t-field="company.website"/></li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

<template id="report_saleorder_document_sales">
    <t t-call="invoice_reports_02.itadmin_sale_external_layout_sale">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">            
            <div class="row" style="margin:5px;">
                <!--HEADER-->

                <!--LOGO-->
                <div class="col-2">
                    <img t-if="doc.company_id.logo" t-att-src="doc.company_id.logo" style="height: 150px;width: 140px;" />
                </div>
                <!--END LOGO-->

                <!--COMPANY INFORMATION-->
                <div class="col-7">
                    <table style="width:100%;font-size:17px;">
                        <tr style="background-color: #8F8F8F !important; color: #FFFFFF !important;font-size:17px;">
                            <td>
                               <span t-field="doc.company_id.partner_id.name" />
                            </td>
                        </tr>
                        <tr style="font-size:17px;">
                            <td>
                                <span t-field="doc.company_id.partner_id.street" />
                                <span t-field="doc.company_id.partner_id.street2" /><br/>
                                <span t-field="doc.company_id.partner_id.city"/>,
                                <span t-field="doc.company_id.partner_id.state_id"/>
                                <span t-field="doc.company_id.partner_id.country_id" /><br/>
                                <span t-field="doc.company_id.partner_id.zip" />
                                <span t-field="doc.company_id.vat" />
                            </td>
                        </tr>
                    </table>
                </div>
                <!--END COMPANY INFORMATION-->


                <!--SALE DATE AND COMMERCIAL-->
                <div class="col-3 pull-right">
                    <table  style="text-align: center;margin:0px;" width="100%">
                           <t t-if="doc.date_order">
                           <tr style="background-color: #8F8F8F !important; color: #FFFFFF !important;font-size:17px;">
                               <td>
                                   <strong t-if="doc.state not in ['draft','sent']">Fecha de venta:</strong>
                                    <strong t-if="doc.state in ['draft','sent']">Fecha de presupuesto:</strong> 
                               </td>
                           </tr>
                           <tr style="font-size:17px;">
                               <td > 
                                   <span t-field="doc.date_order" />
                               </td>
                           </tr>
                           </t>
                           <t t-if="doc.user_id.name">
                           <tr style="background-color: #8F8F8F !important; color: #FFFFFF !important;font-size:17px;">
                               <td>
                                   <strong>Vendedor:</strong>
                               </td>
                           </tr>
                           <tr>
                               <td style="font-size:17px;"> 
                                   <span t-field="doc.user_id" />
                               </td>
                           </tr>
                           </t>
                           <t t-if="doc.payment_term_id">
                           <tr style="background-color: #8F8F8F !important; color: #FFFFFF !important;font-size:17px;">
                               <td>
                                   <strong>Términos de pago:</strong>
                               </td>
                           </tr>
                           <tr>
                               <td style="font-size:17px;"> 
                                   <span t-field="doc.payment_term_id" />
                               </td>
                           </tr>
                           </t>
                        </table>
                </div>
                <!--END SALE DATE AND COMERCIAL-->
            </div>

            <br/>


        <!--TABLE CUSTOMER INFORMATION-->
        <div class="row">
            <div class="col-6" style="text-align:center;margin:0px;">
            <table width="100%">
            <tr style="background-color: #8F8F8F !important; color: #FFFFFF !important;">
                <td style="text-align:center;font-size:17px;">
                    <strong t-if="doc.state not in ['draft','sent']">Venta: </strong>
                    <strong t-if="doc.state in ['draft','sent']">Presupuesto:</strong>
                </td>
            </tr>
            <tr style="background-color: #8F8F8F !important; color: #FFFFFF !important;"> 
                <td style="text-align:center;">

                    <h2>
                        Referencia: <br/>
                        <strong><span t-field="doc.name"/></strong>
                    </h2>
                </td>
            </tr>
            </table>
            </div>

            <div class="col-6" style="text-align:center;margin:0px;">
                <table  style="margin-bottom:10px;" width="100%">
                           <tr style="background-color: #8F8F8F !important; color: #FFFFFF !important;">
                               <td style="text-align:center;font-size:17px;"> 
                                    <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Atención y dirección de envio:</strong>
                                    <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Atención:</strong>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:center;font-size:17px;">
                                    <span t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": False}'/>
                                    <p t-if="doc.partner_id.vat"><span t-field="doc.partner_id.vat"/></p>
                                    <t t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="col-5 col-offset-1">
                                        <strong>Dirección de envío:</strong>
                                        <span t-field="doc.partner_shipping_id"
                                            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": False}'/>
                                        <p t-if="doc.partner_id.rfc"><span t-field="doc.partner_id.rfc"/></p>
                                    </t>
                                </td>
                            </tr>
                    </table>
            </div>
            <br/>
        </div>

        <!--TABLE CUSTOMER INFORMATION-->
            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
        <div style="margin-top:10px;">
            <br/>
            
                <table class="table table-condensed" >
                    <thead style="background-color: #8F8F8F !important; color: #FFFFFF !important;">
                        <tr>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th class="text-right">Cantidad</th>
                            <th class="text-right">Precio Unitario</th>
                            <th t-if="display_discount" class="text-right">Desc.(%)</th>
                            <th class="text-right">Impuestos</th>
                            <th class="text-right" groups="sale.group_show_price_subtotal">Importe</th>
                            <th class="text-right price_tax_included" groups="sale.group_show_price_total">Precio total</th> 
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold' if line.display_type == 'line_section' else 'font-italic' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td class="text-left"><span t-field="line.name"/></td>
                                <td class="text-right">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right">
                                    <span t-field="line.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td t-att-colspan="colspan">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td t-att-colspan="colspan">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td t-att-colspan="colspan">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
                </table>
                <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                    <p style="page-break-before:always;"> </p>
                </t>

        </div>

            <!--TABLE SUBTOTAL TOTAL-->
            <div style="margin:0px;">
            <table class="table table-condensed" width="100%">
                <thead style="background-color: #8F8F8F !important; color: #FFFFFF !important;">
                    <tr>
                        <td>
                            <strong>Subtotal:</strong>
                        </td>
                        <td>
                            <strong>Impuestos:</strong>
                        </td>
                        <td>
                            <strong>Total:</strong>
                        </td>
                    </tr>
                </thead>
                <tr>
                    <td>
                        <span t-field="doc.amount_untaxed"/>
                    </td>
                    <td>
                        <span t-field="doc.amount_tax"/>
                    </td>
                    <td>
                        <span t-field="doc.amount_total"/>
                    </td>
                </tr>
            </table>
            </div>



            <!--END TABLE SUBTOTAL TOTAL-->

            <p t-field="doc.note" />
            <p t-if="doc.payment_term_id.note">
                <span t-field="doc.payment_term_id.note"/>
            </p>
            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                <strong>Posición fiscal:</strong>
                <span t-field="doc.fiscal_position_id.note"/>
            </p>
            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="sale.report_saleorder">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="invoice_reports_02.report_saleorder_document_sales" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>
    
<record id="sale.action_report_saleorder" model="ir.actions.report">
    <field name="paperformat_id" ref="invoice_reports_02.itadmin_sales_paperformat_sales"/>
</record>
