<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron to process approved tasks -->
        <record id="ir_cron_process_ai_tasks" model="ir.cron">
            <field name="name">AI: Process Approved Tasks</field>
            <field name="model_id" ref="model_ai_activity_task"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_approved_tasks()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Cron to cleanup old tasks -->
        <record id="ir_cron_cleanup_ai_tasks" model="ir.cron">
            <field name="name">AI: Cleanup Old Tasks</field>
            <field name="model_id" ref="model_ai_activity_task"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_old_tasks()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
