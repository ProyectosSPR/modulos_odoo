<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Conversation Tree View -->
    <record id="mercadolibre_conversation_view_tree" model="ir.ui.view">
        <field name="name">mercadolibre.conversation.tree</field>
        <field name="model">mercadolibre.conversation</field>
        <field name="arch" type="xml">
            <tree string="Conversaciones ML" decoration-bf="is_unread" decoration-info="state == 'waiting'"
                  decoration-danger="cap_available == False">
                <field name="is_unread" column_invisible="1"/>
                <field name="cap_available" column_invisible="1"/>
                <field name="buyer_nickname" string="Comprador"/>
                <field name="buyer_first_name" optional="show"/>
                <field name="ml_pack_id" string="Pack"/>
                <field name="account_id" optional="show"/>
                <field name="order_status" widget="badge"
                       decoration-success="order_status == 'paid'"
                       decoration-warning="order_status in ('payment_required', 'payment_in_process')"
                       decoration-danger="order_status == 'cancelled'"
                       optional="show"/>
                <field name="shipment_status" widget="badge"
                       decoration-success="shipment_status == 'delivered'"
                       decoration-info="shipment_status in ('shipped', 'in_transit')"
                       decoration-warning="shipment_status in ('pending', 'handling')"
                       optional="show"/>
                <field name="message_count" string="Msgs"/>
                <field name="unread_count" string="Sin Leer"
                       decoration-danger="unread_count > 0"/>
                <field name="last_message_date" string="Último"/>
                <field name="last_message_direction" widget="badge"
                       decoration-info="last_message_direction == 'outgoing'"
                       decoration-success="last_message_direction == 'incoming'"
                       optional="show"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'answered'"
                       decoration-warning="state == 'waiting'"
                       decoration-info="state == 'open'"
                       decoration-muted="state == 'closed'"/>
                <field name="total_amount" widget="monetary" optional="hide"/>
                <field name="partner_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Conversation Form View (Chat Style) -->
    <record id="mercadolibre_conversation_view_form" model="ir.ui.view">
        <field name="name">mercadolibre.conversation.form</field>
        <field name="model">mercadolibre.conversation</field>
        <field name="arch" type="xml">
            <form string="Conversación ML">
                <header>
                    <button name="action_compose_message" type="object" string="Enviar Mensaje"
                            class="btn-primary" icon="fa-paper-plane"
                            attrs="{'invisible': [('cap_available', '=', False)]}"/>
                    <button name="action_compose_message" type="object" string="Sin Cap Disponible"
                            class="btn-secondary" disabled="1"
                            attrs="{'invisible': [('cap_available', '=', True)]}"/>
                    <button name="action_sync_messages" type="object" string="Sincronizar"
                            class="btn-secondary" icon="fa-refresh"/>
                    <button name="action_mark_read" type="object" string="Marcar Leídos"
                            class="btn-secondary" icon="fa-check"
                            attrs="{'invisible': [('is_unread', '=', False)]}"/>
                    <button name="action_refresh_caps" type="object" string="Verificar Caps"
                            class="btn-secondary" icon="fa-signal"/>
                    <button name="action_close" type="object" string="Cerrar"
                            attrs="{'invisible': [('state', '=', 'closed')]}"/>
                    <button name="action_reopen" type="object" string="Reabrir"
                            attrs="{'invisible': [('state', '!=', 'closed')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,waiting,answered,closed"/>
                </header>
                <sheet>
                    <!-- Alerta si no puede enviar mensajes -->
                    <div class="alert alert-warning" role="alert"
                         attrs="{'invisible': [('cap_available', '=', True)]}">
                        <strong>Sin mensajes disponibles.</strong>
                        Debes esperar respuesta del comprador antes de enviar otro mensaje.
                    </div>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_messages" type="object"
                                class="oe_stat_button" icon="fa-comments">
                            <field name="message_count" string="Mensajes" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-user"
                                attrs="{'invisible': [('partner_id', '=', False)]}"
                                type="object" name="action_view_partner">
                            <field name="partner_id" string="Cliente" widget="statinfo" options="{'label_field': 'name'}"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Comprador">
                            <field name="buyer_nickname"/>
                            <field name="buyer_first_name"/>
                            <field name="buyer_email" widget="email"/>
                            <field name="buyer_id" string="ID ML"/>
                        </group>
                        <group string="Orden">
                            <field name="ml_pack_id"/>
                            <field name="ml_order_id"/>
                            <field name="sale_order_id"/>
                            <field name="account_id"/>
                        </group>
                    </group>

                    <group>
                        <group string="Estado del Pedido">
                            <field name="order_status" widget="badge"
                                   decoration-success="order_status == 'paid'"
                                   decoration-warning="order_status in ('payment_required', 'payment_in_process')"
                                   decoration-danger="order_status == 'cancelled'"/>
                            <field name="shipment_status" widget="badge"
                                   decoration-success="shipment_status == 'delivered'"
                                   decoration-info="shipment_status in ('shipped', 'in_transit')"/>
                            <field name="total_amount" widget="monetary"/>
                        </group>
                        <group string="Mensajería">
                            <field name="cap_available" widget="boolean_toggle" readonly="1"/>
                            <field name="cap_checked_at"/>
                            <field name="unread_count"/>
                            <field name="last_message_date"/>
                        </group>
                    </group>

                    <!-- Chat Messages Section -->
                    <notebook>
                        <page string="Mensajes" name="messages">
                            <field name="message_ids" mode="tree" context="{'default_conversation_id': id}">
                                <tree string="Mensajes" create="0" decoration-bf="is_read == False and direction == 'incoming'"
                                      decoration-info="direction == 'outgoing'" default_order="create_date desc">
                                    <field name="direction" column_invisible="1"/>
                                    <field name="is_read" column_invisible="1"/>
                                    <field name="create_date" string="Fecha"/>
                                    <field name="direction" string="Tipo" widget="badge"
                                           decoration-info="direction == 'outgoing'"
                                           decoration-success="direction == 'incoming'"/>
                                    <field name="body" string="Mensaje"/>
                                    <field name="ml_option_id" optional="show"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state in ('sent', 'delivered', 'received')"
                                           decoration-danger="state == 'failed'"
                                           decoration-warning="state == 'pending'"
                                           decoration-info="state == 'draft'"/>
                                    <field name="template_id" optional="hide"/>
                                    <field name="error_message" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Información Técnica" name="technical">
                            <group>
                                <group string="IDs de MercadoLibre">
                                    <field name="ml_conversation_id"/>
                                    <field name="ml_pack_id"/>
                                    <field name="buyer_id"/>
                                    <field name="seller_id"/>
                                </group>
                                <group string="Sistema">
                                    <field name="last_message_direction"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                    <field name="active"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Conversation Search View -->
    <record id="mercadolibre_conversation_view_search" model="ir.ui.view">
        <field name="name">mercadolibre.conversation.search</field>
        <field name="model">mercadolibre.conversation</field>
        <field name="arch" type="xml">
            <search string="Buscar Conversaciones">
                <field name="buyer_nickname"/>
                <field name="buyer_first_name"/>
                <field name="buyer_email"/>
                <field name="ml_pack_id"/>
                <field name="account_id"/>
                <field name="ml_order_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Sin Leer" name="unread" domain="[('is_unread', '=', True)]"/>
                <filter string="Esperando Respuesta" name="waiting" domain="[('state', '=', 'waiting')]"/>
                <filter string="Respondidas" name="answered" domain="[('state', '=', 'answered')]"/>
                <filter string="Abiertas" name="open" domain="[('state', '=', 'open')]"/>
                <filter string="Cerradas" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Puede Enviar" name="can_send" domain="[('cap_available', '=', True)]"/>
                <filter string="Sin Cap" name="no_cap" domain="[('cap_available', '=', False)]"/>
                <separator/>
                <filter string="Hoy" name="today" domain="[('last_message_date', '>=', (context_today()).strftime('%Y-%m-%d'))]"/>
                <filter string="Esta Semana" name="this_week" domain="[('last_message_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Entregados" name="delivered" domain="[('shipment_status', '=', 'delivered')]"/>
                <filter string="En Tránsito" name="in_transit" domain="[('shipment_status', 'in', ('shipped', 'in_transit'))]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Cuenta" name="group_account" context="{'group_by': 'account_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Estado Orden" name="group_order_status" context="{'group_by': 'order_status'}"/>
                    <filter string="Estado Envío" name="group_shipment_status" context="{'group_by': 'shipment_status'}"/>
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Fecha" name="group_date" context="{'group_by': 'last_message_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Conversation Kanban View -->
    <record id="mercadolibre_conversation_view_kanban" model="ir.ui.view">
        <field name="name">mercadolibre.conversation.kanban</field>
        <field name="model">mercadolibre.conversation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="state"/>
                <field name="is_unread"/>
                <field name="unread_count"/>
                <field name="cap_available"/>
                <field name="buyer_first_name"/>
                <field name="shipment_status"/>
                <field name="last_message_direction"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_unread.raw_value ? 'oe_kanban_color_2' : ''} #{!record.cap_available.raw_value ? 'oe_kanban_color_9' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="buyer_nickname"/>
                                        </strong>
                                        <span t-if="record.buyer_first_name.raw_value" class="o_kanban_record_subtitle text-muted">
                                            <field name="buyer_first_name"/>
                                        </span>
                                    </div>
                                    <div class="d-flex gap-1">
                                        <span t-if="!record.cap_available.raw_value" class="badge bg-warning" title="Sin mensajes disponibles">
                                            <i class="fa fa-ban"/>
                                        </span>
                                        <span t-if="record.unread_count.raw_value > 0" class="badge bg-danger">
                                            <field name="unread_count"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="d-flex align-items-center gap-1 mb-1">
                                        <span t-if="record.last_message_direction.raw_value == 'incoming'" class="badge bg-success">
                                            <i class="fa fa-arrow-down"/> Recibido
                                        </span>
                                        <span t-if="record.last_message_direction.raw_value == 'outgoing'" class="badge bg-info">
                                            <i class="fa fa-arrow-up"/> Enviado
                                        </span>
                                        <span t-if="record.shipment_status.raw_value" class="badge bg-secondary">
                                            <field name="shipment_status"/>
                                        </span>
                                    </div>
                                    <em class="text-muted">
                                        <field name="last_message_preview"/>
                                    </em>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="last_message_date" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="account_id" widget="many2one_avatar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Conversation Action -->
    <record id="action_mercadolibre_conversation" model="ir.actions.act_window">
        <field name="name">Conversaciones</field>
        <field name="res_model">mercadolibre.conversation</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="mercadolibre_conversation_view_search"/>
        <field name="context">{'search_default_unread': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay conversaciones de MercadoLibre
            </p>
            <p>
                Las conversaciones se crean automáticamente cuando:
                <ul>
                    <li>Recibes un mensaje de un comprador (via webhook)</li>
                    <li>Sincronizas mensajes manualmente</li>
                    <li>Envías un mensaje desde una orden</li>
                </ul>
            </p>
        </field>
    </record>

</odoo>
