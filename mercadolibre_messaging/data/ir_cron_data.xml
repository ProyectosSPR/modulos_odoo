<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron: Sync Conversations -->
        <record id="ir_cron_ml_sync_conversations" model="ir.cron">
            <field name="name">MercadoLibre: Sincronizar Conversaciones</field>
            <field name="model_id" ref="model_mercadolibre_conversation"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_conversations()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">20</field>
        </record>

        <!-- Cron: Process Message Queue -->
        <record id="ir_cron_ml_process_queue" model="ir.cron">
            <field name="name">MercadoLibre: Procesar Cola de Mensajes</field>
            <field name="model_id" ref="model_mercadolibre_message_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_queue()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">15</field>
        </record>

        <!-- Cron: Process Pending Messages -->
        <record id="ir_cron_ml_process_pending" model="ir.cron">
            <field name="name">MercadoLibre: Procesar Mensajes Pendientes</field>
            <field name="model_id" ref="model_mercadolibre_message"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_pending_messages()</field>
            <field name="interval_number">2</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">10</field>
        </record>

        <!-- Cron: Retry Failed Messages -->
        <record id="ir_cron_ml_retry_failed" model="ir.cron">
            <field name="name">MercadoLibre: Reintentar Mensajes Fallidos</field>
            <field name="model_id" ref="model_mercadolibre_message"/>
            <field name="state">code</field>
            <field name="code">model.cron_retry_failed_messages()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">25</field>
        </record>

        <!-- Cron: Retry Failed Queue -->
        <record id="ir_cron_ml_retry_queue" model="ir.cron">
            <field name="name">MercadoLibre: Reintentar Cola Fallida</field>
            <field name="model_id" ref="model_mercadolibre_message_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_retry_failed_queue()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">30</field>
        </record>

        <!-- Cron: Cleanup Old Queue -->
        <record id="ir_cron_ml_cleanup_queue" model="ir.cron">
            <field name="name">MercadoLibre: Limpiar Cola Antigua</field>
            <field name="model_id" ref="model_mercadolibre_message_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_cleanup_old_queue()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">50</field>
        </record>

    </data>
</odoo>
