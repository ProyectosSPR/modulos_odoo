<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Rule: Request billing after delivery -->
        <record id="rule_billing_after_delivery" model="mercadolibre.message.rule">
            <field name="name">Solicitar Facturación Después de Entrega</field>
            <field name="template_id" ref="template_billing_request"/>
            <field name="trigger_type">shipment_status</field>
            <field name="shipment_status">delivered</field>
            <field name="delay_minutes">60</field>
            <field name="max_executions_per_order">1</field>
            <field name="respect_schedule">True</field>
            <field name="sequence">10</field>
            <field name="active">False</field>
        </record>

        <!-- Rule: Shipping notification -->
        <record id="rule_shipping_notification" model="mercadolibre.message.rule">
            <field name="name">Notificar Envío</field>
            <field name="template_id" ref="template_shipping_info"/>
            <field name="trigger_type">shipment_status</field>
            <field name="shipment_status">shipped</field>
            <field name="delay_minutes">5</field>
            <field name="max_executions_per_order">1</field>
            <field name="respect_schedule">False</field>
            <field name="sequence">20</field>
            <field name="active">False</field>
        </record>

        <!-- Rule: Thanks after delivery -->
        <record id="rule_thanks_after_delivery" model="mercadolibre.message.rule">
            <field name="name">Agradecer Después de Entrega</field>
            <field name="template_id" ref="template_thanks"/>
            <field name="trigger_type">shipment_status</field>
            <field name="shipment_status">delivered</field>
            <field name="delay_minutes">1440</field>
            <field name="max_executions_per_order">1</field>
            <field name="respect_schedule">True</field>
            <field name="sequence">30</field>
            <field name="active">False</field>
        </record>

        <!-- Rule: Follow up after delivery (3 days) -->
        <record id="rule_follow_up" model="mercadolibre.message.rule">
            <field name="name">Seguimiento 3 Días Post-Entrega</field>
            <field name="template_id" ref="template_follow_up"/>
            <field name="trigger_type">shipment_status</field>
            <field name="shipment_status">delivered</field>
            <field name="delay_minutes">4320</field>
            <field name="max_executions_per_order">1</field>
            <field name="respect_schedule">True</field>
            <field name="sequence">40</field>
            <field name="active">False</field>
        </record>

    </data>
</odoo>
